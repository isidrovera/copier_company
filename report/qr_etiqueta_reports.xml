<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Plantilla QWeb para el reporte -->
        <template id="report_helpdesk_ticket">
            <t t-call="web.html_container">
                <style>
                    .etiqueta-container {
                        width: 70mm; /* Ancho de la etiqueta */
                        height: 30mm; /* Altura de la etiqueta */
                        margin: 10mm auto; /* Centrar la etiqueta en la página */
                        padding: 5mm;
                        text-align: center;
                        font-family: 'Arial', sans-serif; /* Usa una fuente común o asegúrate de que la fuente personalizada esté disponible */
                    }
                    .etiqueta-container img {
                        max-width: 60mm; /* Ancho del código QR */
                        max-height: 60mm; /* Altura del código QR */
                        display: block;
                        margin: auto;
                    }
                    .text-section {
                        font-size: 10pt;
                        color: #333; /* Color de texto profesional */
                        margin-top: 5mm; /* Espacio después del código QR */
                    }
                </style>
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <div class="etiqueta-container">
                            <!-- Mostrar el código QR -->
                            <img t-att-src="'data:image/png;base64,%s' % doc.qr_code"/>
                            <div class="text-section">
                                <!-- Texto debajo del código QR -->
                                Para reportar incidencias, escanee este código QR o contacte a nuestro equipo de soporte técnico.
                                <br/>
                                <strong>Correo:</strong> soporte@copiercompanysac.com
                                <br/>
                                <strong>Celular:</strong> +51 987 654 321
                                <br/>
                                <strong>WhatsApp:</strong> +51 987 654 321
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>

        <!-- Acción del reporte -->
        <record id="action_report_helpdesk_ticket" model="ir.actions.report">
            <field name="name">Ticket de Ayuda Técnica</field>
            <field name="model">copier.company</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">copier_company.report_helpdesk_ticket</field>
            <field name="report_file">copier_company.report_helpdesk_ticket</field>
            <field name="binding_model_id" ref="copier_company.model_copier_company"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
