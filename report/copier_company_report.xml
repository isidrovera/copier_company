<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
         <record id="action_report_report_cotizacion_alquiler" model="ir.actions.report">
            <field name="name">Propuesta Comercial de Alquiler</field>
            <field name="model">copier.company</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">copier_company.cotizacion_view</field>
            <field name="report_file">copier_company.cotizacion_view</field>
            <field name="print_report_name">'Propuesta Comercial - %s' % object.secuencia</field>
            <field name="binding_model_id" ref="model_copier_company"/>
            <field name="binding_type">report</field>
        </record>

        <template id="cotizacion_view">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <div class="header">
                        <div class="row">
                            <div class="col-3">
                                <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 45px;" alt="Logo"/>
                            </div>
                            <div class="col-9 text-right" style="margin-top:22px;">
                                <span t-field="company.name"/>
                            </div>
                        </div>
                    </div>
                    
                    <div class="article o_report_layout_standard">
                        <style>
                            /* Estilos base y variables */
                            :root {
                                --color-primary: #1a5fb4;
                                --color-text: #2e3436;
                                --color-border: #deddda;
                                --color-background: #ffffff;
                                --color-accent: #3584e4;
                                --font-family: 'System-ui', -apple-system, sans-serif;
                            }

                            .documento {
                                font-family: var(--font-family);
                                color: var(--color-text);
                                line-height: 1.6;
                            }

                            .encabezado-doc {
                                text-align: center;
                                margin-bottom: 2rem;
                                padding: 1rem;
                                background: var(--color-background);
                                border-bottom: 3px solid var(--color-primary);
                            }

                            .titulo-principal {
                                font-size: 24px;
                                font-weight: bold;
                                color: var(--color-primary);
                            }

                            .tabla-datos {
                                width: 100%;
                                margin: 1rem 0;
                                border-collapse: collapse;
                            }

                            .tabla-datos th {
                                background: var(--color-primary);
                                color: white;
                                padding: 0.75rem;
                                text-align: left;
                            }

                            .tabla-datos td {
                                padding: 0.75rem;
                                border: 1px solid var(--color-border);
                            }

                            .tabla-datos tr:nth-child(even) {
                                background: #f6f5f4;
                            }

                            .seccion {
                                margin: 2rem 0;
                                padding: 1rem;
                                border: 1px solid var(--color-border);
                                border-radius: 4px;
                            }

                            .titulo-seccion {
                                font-size: 18px;
                                font-weight: bold;
                                color: var(--color-primary);
                                margin-bottom: 1rem;
                                padding-bottom: 0.5rem;
                                border-bottom: 2px solid var(--color-accent);
                            }

                            .imagen-equipo {
                                max-width: 100%;
                                height: auto;
                                margin: 1rem auto;
                                display: block;
                            }

                            .lista-beneficios {
                                list-style: none;
                                padding: 0;
                            }

                            .lista-beneficios li {
                                padding: 0.5rem 0;
                                margin-bottom: 0.5rem;
                                border-bottom: 1px solid var(--color-border);
                            }

                            .total {
                                font-weight: bold;
                                background: var(--color-primary) !important;
                                color: white;
                            }
                        </style>

                        <!-- Contenido del Documento -->
                        <div class="documento">
                            <div class="encabezado-doc">
                                <div class="titulo-principal">Propuesta Comercial</div>
                                <div>Fecha: <t t-esc="doc.create_date.strftime('%d/%m/%Y')"/></div>
                                <div>Cliente: <span t-field="doc.cliente_id.name"/></div>
                            </div>

                            <div class="seccion">
                                <div class="titulo-seccion">Equipo Propuesto</div>
                                <strong t-field="doc.name.name"/>
                                <t t-if="doc.imagen_id">
                                    <img class="imagen-equipo" t-att-src="'data:image/png;base64,%s' % doc.imagen_id.decode('utf-8')"/>
                                </t>
                                <div t-raw="doc.especificaciones_id"/>
                            </div>

                            <div class="seccion">
                                <div class="titulo-seccion">Propuesta Económica</div>
                                <table class="tabla-datos">
                                    <tr>
                                        <th colspan="2">Detalles del Servicio</th>
                                    </tr>
                                    <tr>
                                        <td>Periodo</td>
                                        <td>Del <span t-field="doc.fecha_inicio_alquiler"/> al <span t-field="doc.fecha_fin_alquiler"/></td>
                                    </tr>
                                    <tr>
                                        <td>Moneda</td>
                                        <td><span t-field="doc.currency_id.name"/></td>
                                    </tr>
                                    <tr>
                                        <th colspan="2">Servicio Blanco y Negro</th>
                                    </tr>
                                    <tr>
                                        <td>Volumen Mensual</td>
                                        <td><t t-esc="'{:,}'.format(doc.volumen_mensual_bn)"/> copias</td>
                                    </tr>
                                    <tr>
                                        <td>Costo por Copia</td>
                                        <td>S/. <t t-esc="'%.3f' % doc.costo_copia_bn"/> + IGV</td>
                                    </tr>
                                    <t t-if="doc.tipo == 'color'">
                                        <tr>
                                            <th colspan="2">Servicio Color</th>
                                        </tr>
                                        <tr>
                                            <td>Volumen Mensual</td>
                                            <td><t t-esc="'{:,}'.format(doc.volumen_mensual_color)"/> copias</td>
                                        </tr>
                                        <tr>
                                            <td>Costo por Copia</td>
                                            <td>S/. <t t-esc="'%.3f' % doc.costo_copia_color"/> + IGV</td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td>Descuento</td>
                                        <td><t t-esc="doc.descuento"/>%</td>
                                    </tr>
                                    <tr class="total">
                                        <td>Total Mensual</td>
                                        <td>S/. <t t-esc="'%.2f' % doc.total_facturar_mensual"/></td>
                                    </tr>
                                </table>
                            </div>

                            <div class="seccion">
                                <div class="titulo-seccion">Beneficios Incluidos</div>
                                <ul class="lista-beneficios">
                                    <li>✓ Servicio técnico preventivo y correctivo</li>
                                    <li>✓ Insumos originales incluidos</li>
                                    <li>✓ Soporte técnico prioritario</li>
                                    <li>✓ Capacitación para usuarios</li>
                                    <li>✓ Garantía total del equipo</li>
                                </ul>
                            </div>

                            <div class="seccion">
                                <div class="titulo-seccion">Información Bancaria</div>
                                <ul class="lista-beneficios">
                                    <li>BCP: 191-2334609-0-07</li>
                                    <li>CCI: 002-19100233460900751</li>
                                    <li>Detracciones BN: 00802007582</li>
                                </ul>
                            </div>

                            <div class="seccion">
                                <div class="titulo-seccion">Condiciones</div>
                                <ul class="lista-beneficios">
                                    <li>• Contrato mínimo: <span t-field="doc.duracion_alquiler_id.name"/></li>
                                    <li>• Tiempo de entrega: 5 días hábiles</li>
                                    <li>• Papel no incluido</li>
                                    <li>• IGV no incluido</li>
                                </ul>
                            </div>

                            <div class="seccion" style="text-align: center;">
                                <p>Gracias por su preferencia</p>
                                <p><strong>Equipo Comercial</strong></p>
                            </div>
                        </div>

                        <div class="footer">
                            <div class="text-center">
                                <ul class="list-inline">
                                    <li class="list-inline-item">Página <span class="page"/> de <span class="topage"/></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>