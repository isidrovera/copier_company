<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="action_report_report_cotizacion_alquiler" model="ir.actions.report">
            <field name="name">Propuesta Comercial de Alquiler</field>
            <field name="model">copier.company</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">copier_company.cotizacion_view</field>
            <field name="report_file">copier_company.cotizacion_view</field>
            <field name="print_report_name">'Propuesta Comercial - %s' % object.secuencia</field>
            <field name="binding_model_id" ref="model_copier_company"/>
            <field name="binding_type">report</field>
        </record>

        <template id="cotizacion_view">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.basic_layout">
                        <style>
                            :root {
                                --primary: #1E3A8A;
                                --secondary: #4B5563;
                                --background: #F9FAFB;
                                --text-dark: #111827;
                                --text-light: #6B7280;
                                --accent: #10B981;
                                --warning: #F59E0B;
                                --border: #E5E7EB;
                            }

                            body {
                                font-family: 'Arial', sans-serif;
                                color: var(--text-dark);
                                background-color: var(--background);
                                margin: 0;
                                padding: 0;
                            }

                            .container {
                                padding: 2rem;
                                max-width: 800px;
                                margin: auto;
                            }

                            h1, h2 {
                                color: var(--primary);
                                margin-bottom: 1rem;
                            }

                            h3 {
                                color: var(--secondary);
                                margin-bottom: 0.5rem;
                            }

                            .info-section {
                                margin-bottom: 1.5rem;
                                padding: 1rem;
                                background: white;
                                border: 1px solid var(--border);
                                border-radius: 8px;
                                box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
                                color: #191919; /* Color azul, usa la variable definida */
                            }


                            .data-table {
                                width: 100%;
                                border-collapse: collapse;
                                margin: 1rem 0;
                                font-size: 14px;
                            }

                            .data-table th, .data-table td {
                                border: 1px solid var(--border);
                                padding: 0.5rem;
                                text-align: left;
                            }

                            .data-table th {
                                background-color: var(--primary);
                                color: white;
                                text-transform: uppercase;
                            }

                            .benefits {
                                list-style-type: none;
                                padding: 0;
                                color: #1E3A8A;
                            }

                            .benefits li {
                                margin: 0.5rem 0;
                                padding: 0.5rem;
                                background: var(--accent);
                                color: white;
                                border-radius: 5px;
                                color: #1E3A8A;
                            }

                            .footer {
                                text-align: center;
                                margin-top: 2rem;
                                font-size: 12px;
                                color: var(--text-light);
                            }
                        </style>

                        <div class="container">
                            <!-- Cabecera -->
                            <div class="header">
                                <h1>Propuesta Comercial de Alquiler</h1>
                                <p>Soluciones de Impresión Profesional</p>
                            </div>

                            <!-- Información del cliente -->
                            <div class="info-section">
                                <h3>Información del Cliente</h3>
                                <p>Fecha: <span t-esc="doc.create_date.strftime('%d/%m/%Y')"/></p>
                                <p>Cliente: <span t-field="doc.cliente_id.name"/></p>
                            </div>

                            <!-- Equipo -->
                            <div class="info-section">
                                <h3>Equipo Multifuncional Premium</h3>
                                <p>Modelo: <span t-field="doc.name.name"/></p>
                                <t t-if="doc.imagen_id">
                                    <img t-att-src="'data:image/png;base64,%s' % doc.imagen_id.decode('utf-8')" 
                                         style="max-width: 100%; border-radius: 10px;"/>
                                </t>
                            </div>

                            <!-- Propuesta económica -->
                            <div class="info-section">
                                <h3>Propuesta Económica</h3>
                                <table class="data-table">
                                    <tr>
                                        <th>Concepto</th>
                                        <th>Detalle</th>
                                    </tr>
                                    <tr>
                                        <td>Periodo</td>
                                        <td>Del <span t-field="doc.fecha_inicio_alquiler"/> al <span t-field="doc.fecha_fin_alquiler"/></td>
                                    </tr>
                                    <tr>
                                        <td>Moneda</td>
                                        <td><span t-field="doc.currency_id.name"/></td>
                                    </tr>
                                    <tr>
                                        <td>Volumen Mensual B/N</td>
                                        <td><t t-esc="'{:,}'.format(doc.volumen_mensual_bn)"/> impresiones</td>
                                    </tr>
                                    <tr>
                                        <td>Costo por Impresión B/N</td>
                                        <td>S/. <t t-esc="'%.3f' % doc.costo_copia_bn"/> + IGV</td>
                                    </tr>
                                    <t t-if="doc.tipo == 'color'">
                                        <tr>
                                            <td>Volumen Mensual Color</td>
                                            <td><t t-esc="'{:,}'.format(doc.volumen_mensual_color)"/> impresiones</td>
                                        </tr>
                                        <tr>
                                            <td>Costo por Impresión Color</td>
                                            <td>S/. <t t-esc="'%.3f' % doc.costo_copia_color"/> + IGV</td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td>Descuento Aplicado</td>
                                        <td><t t-esc="doc.descuento"/>%</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Inversión Mensual Total</strong></td>
                                        <td><strong>S/. <t t-esc="'%.2f' % doc.total_facturar_mensual"/></strong></td>
                                    </tr>
                                </table>
                            </div>

                            <!-- Beneficios -->
                            <div class="info-section">
                                <h3>Beneficios Incluidos</h3>
                                <ul class="benefits">
                                    <li>Servicio técnico preventivo y correctivo</li>
                                    <li>Capacitación para usuarios</li>
                                    <li>Garantía total del equipo</li>
                                    <li>Tiempo de respuesta garantizado</li>
                                    <li>Insumos originales incluidos</li>
                                    <li>Soporte técnico prioritario</li>
                                </ul>
                            </div>

                            <!-- Footer -->
                            <div class="footer">
                                <p>Propuesta Comercial - Página <span class="page"/> de <span class="topage"/></p>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
