<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Formato de papel A6 sin m√°rgenes -->
        <record id="paperformat_sticker_8x8" model="report.paperformat">
            <field name="name">Sticker A6 Full Page</field>
            <field name="format">A6</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="dpi">300</field>
            <field name="header_spacing">0</field>
        </record>

        <!-- Reporte optimizado para Odoo 18 -->
        <record id="action_report_sticker_8x8" model="ir.actions.report">
            <field name="name">Sticker Corporativo A6 Completo</field>
            <field name="model">copier.company</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">copier_company.sticker_8x8_template</field>
            <field name="report_file">copier_company.sticker_8x8_template</field>
            <field name="print_report_name">'Sticker-A6-%s' % (object.name.name if object.name else 'Sin-nombre')</field>
            <field name="binding_model_id" ref="model_copier_company"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_sticker_8x8"/>
        </record>

        <!-- Template que ocupa toda la p√°gina A6 -->
        <template id="sticker_8x8_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.basic_layout">
                        <div class="page">
                            <style>
                                @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&amp;display=swap');
                                
                                * {
                                    margin: 0;
                                    padding: 0;
                                    box-sizing: border-box;
                                }
                                
                                @page {
                                    size: A6 portrait;
                                    margin: 0;
                                    padding: 0;
                                }
                                
                                html, body {
                                    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
                                    width: 10.5cm;
                                    height: 14.8cm;
                                    margin: 0;
                                    padding: 0;
                                    background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
                                    -webkit-font-smoothing: antialiased;
                                    -moz-osx-font-smoothing: grayscale;
                                    overflow: hidden;
                                }
                                
                                .page {
                                    width: 100%;
                                    height: 100%;
                                    min-height: 14.8cm;
                                    padding: 0.4cm;
                                    background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
                                    display: flex;
                                    flex-direction: column;
                                    justify-content: space-between;
                                    position: relative;
                                    overflow: hidden;
                                }
                                
                                /* Header corporativo */
                                .header-section {
                                    text-align: center;
                                    background: linear-gradient(135deg, #1e40af 0%, #3b82f6 50%, #06b6d4 100%);
                                    color: white;
                                    padding: 0.6cm 0.4cm;
                                    border-radius: 0 0 20px 20px;
                                    margin: -0.4cm -0.4cm 0.5cm -0.4cm;
                                    box-shadow: 0 6px 20px rgba(59, 130, 246, 0.3);
                                    position: relative;
                                    overflow: hidden;
                                }
                                
                                .header-section::before {
                                    content: '';
                                    position: absolute;
                                    top: 0;
                                    left: 0;
                                    right: 0;
                                    bottom: 0;
                                    background: linear-gradient(45deg, transparent 30%, rgba(255,255,255,0.1) 50%, transparent 70%);
                                    animation: shine 3s infinite;
                                }
                                
                                @keyframes shine {
                                    0% { transform: translateX(-100%); }
                                    100% { transform: translateX(100%); }
                                }
                                
                                .company-logo {
                                    max-height: 2.2cm;
                                    max-width: 8cm;
                                    object-fit: contain;
                                    margin-bottom: 0.3cm;
                                    filter: brightness(0) invert(1) drop-shadow(0 2px 4px rgba(0,0,0,0.3));
                                }
                                
                                .company-name {
                                    font-weight: 900;
                                    font-size: 18pt;
                                    letter-spacing: 2px;
                                    text-transform: uppercase;
                                    margin-bottom: 0.2cm;
                                    text-shadow: 0 2px 4px rgba(0,0,0,0.3);
                                    position: relative;
                                    z-index: 2;
                                }
                                
                                .title {
                                    background: rgba(255,255,255,0.9);
                                    color: #1e40af;
                                    padding: 0.2cm 0.5cm;
                                    border-radius: 25px;
                                    font-size: 12pt;
                                    font-weight: 700;
                                    text-transform: uppercase;
                                    letter-spacing: 1px;
                                    display: inline-block;
                                    box-shadow: 0 2px 8px rgba(0,0,0,0.2);
                                    position: relative;
                                    z-index: 2;
                                }
                                
                                /* Informaci√≥n del equipo - Ancho completo */
                                .equipment-section {
                                    display: flex;
                                    gap: 0.3cm;
                                    margin-bottom: 0.5cm;
                                }
                                
                                .info-card {
                                    flex: 1;
                                    background: linear-gradient(135deg, #e0f2fe 0%, #bae6fd 100%);
                                    border: none;
                                    border-left: 5px solid #0ea5e9;
                                    border-radius: 10px;
                                    padding: 0.6cm 0.4cm;
                                    text-align: center;
                                    box-shadow: 0 4px 12px rgba(14, 165, 233, 0.15);
                                    position: relative;
                                    overflow: hidden;
                                }
                                
                                .info-card::before {
                                    content: '';
                                    position: absolute;
                                    top: 0;
                                    left: 0;
                                    right: 0;
                                    height: 2px;
                                    background: linear-gradient(90deg, #0ea5e9, #06b6d4, #0ea5e9);
                                }
                                
                                .info-label {
                                    font-size: 10pt;
                                    font-weight: 800;
                                    color: #0c4a6e;
                                    text-transform: uppercase;
                                    letter-spacing: 1px;
                                    margin-bottom: 0.2cm;
                                }
                                
                                .info-value {
                                    font-size: 13pt;
                                    color: #1e293b;
                                    font-weight: 700;
                                    line-height: 1.2;
                                    word-break: break-word;
                                }
                                
                                /* Secci√≥n QR - Ocupa espacio central */
                                .qr-section {
                                    background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
                                    border-radius: 20px;
                                    padding: 0.8cm 0.6cm;
                                    text-align: center;
                                    margin-bottom: 0.5cm;
                                    box-shadow: 0 8px 25px rgba(245, 158, 11, 0.2);
                                    flex-grow: 1;
                                    display: flex;
                                    flex-direction: column;
                                    justify-content: center;
                                    position: relative;
                                    border: 3px solid #f59e0b;
                                }
                                
                                .qr-section::before {
                                    content: '';
                                    position: absolute;
                                    top: -2px;
                                    left: -2px;
                                    right: -2px;
                                    bottom: -2px;
                                    background: linear-gradient(45deg, #f59e0b, #fbbf24, #f59e0b);
                                    border-radius: 22px;
                                    z-index: -1;
                                    animation: pulse 2s infinite;
                                }
                                
                                @keyframes pulse {
                                    0%, 100% { opacity: 1; }
                                    50% { opacity: 0.7; }
                                }
                                
                                .qr-title {
                                    font-size: 16pt;
                                    font-weight: 900;
                                    color: #dc2626;
                                    text-transform: uppercase;
                                    letter-spacing: 1px;
                                    margin-bottom: 0.3cm;
                                    text-shadow: 0 1px 2px rgba(0,0,0,0.1);
                                }
                                
                                .qr-description {
                                    font-size: 11pt;
                                    color: #92400e;
                                    font-weight: 600;
                                    line-height: 1.4;
                                    margin-bottom: 0.4cm;
                                }
                                
                                .qr-container {
                                    width: 5.5cm;
                                    height: 5.5cm;
                                    background: white;
                                    border: 4px solid #dc2626;
                                    border-radius: 15px;
                                    display: flex;
                                    align-items: center;
                                    justify-content: center;
                                    margin: 0 auto;
                                    padding: 0.3cm;
                                    box-shadow: 0 6px 20px rgba(220, 38, 38, 0.3);
                                    position: relative;
                                }
                                
                                .qr-container::before {
                                    content: 'üì±';
                                    position: absolute;
                                    top: -15px;
                                    right: -15px;
                                    font-size: 24pt;
                                    background: white;
                                    border-radius: 50%;
                                    width: 30px;
                                    height: 30px;
                                    display: flex;
                                    align-items: center;
                                    justify-content: center;
                                    box-shadow: 0 2px 8px rgba(0,0,0,0.2);
                                }
                                
                                .qr-image {
                                    width: 100%;
                                    height: 100%;
                                    object-fit: contain;
                                }
                                
                                /* Informaci√≥n de contacto - Ancho completo */
                                .contact-section {
                                    background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
                                    color: white;
                                    border-radius: 20px 20px 0 0;
                                    padding: 0.6cm 0.4cm;
                                    margin: 0 -0.4cm -0.4cm -0.4cm;
                                    box-shadow: 0 -6px 20px rgba(59, 130, 246, 0.3);
                                    position: relative;
                                }
                                
                                .contact-title {
                                    font-size: 14pt;
                                    font-weight: 900;
                                    text-transform: uppercase;
                                    text-align: center;
                                    margin-bottom: 0.3cm;
                                    letter-spacing: 1px;
                                    text-shadow: 0 2px 4px rgba(0,0,0,0.3);
                                }
                                
                                .contact-subtitle {
                                    font-size: 9pt;
                                    font-weight: 500;
                                    text-align: center;
                                    margin-bottom: 0.4cm;
                                    opacity: 0.9;
                                    line-height: 1.3;
                                }
                                
                                .contact-grid {
                                    display: flex;
                                    flex-direction: column;
                                    gap: 0.2cm;
                                }
                                
                                .contact-item {
                                    background: rgba(255,255,255,0.15);
                                    border: 1px solid rgba(255,255,255,0.3);
                                    border-radius: 10px;
                                    padding: 0.25cm 0.4cm;
                                    display: flex;
                                    align-items: center;
                                    justify-content: space-between;
                                    backdrop-filter: blur(10px);
                                    transition: all 0.3s ease;
                                }
                                
                                .contact-item:hover {
                                    background: rgba(255,255,255,0.25);
                                    transform: translateY(-1px);
                                }
                                
                                .contact-type {
                                    font-weight: 700;
                                    font-size: 9pt;
                                    text-transform: uppercase;
                                    letter-spacing: 0.5px;
                                    opacity: 0.9;
                                }
                                
                                .contact-value {
                                    font-weight: 600;
                                    font-size: 10pt;
                                    text-align: right;
                                }
                                
                                /* Elementos decorativos */
                                .decorative-accent {
                                    position: absolute;
                                    width: 50px;
                                    height: 50px;
                                    background: linear-gradient(45deg, #06b6d4, #8b5cf6);
                                    border-radius: 50%;
                                    opacity: 0.1;
                                }
                                
                                .accent-1 {
                                    top: 20%;
                                    right: -25px;
                                }
                                
                                .accent-2 {
                                    bottom: 30%;
                                    left: -25px;
                                }
                                
                                /* Estilos para impresi√≥n */
                                @media print {
                                    * {
                                        -webkit-print-color-adjust: exact !important;
                                        color-adjust: exact !important;
                                        print-color-adjust: exact !important;
                                    }
                                    
                                    html, body {
                                        width: 10.5cm !important;
                                        height: 14.8cm !important;
                                        margin: 0 !important;
                                        padding: 0 !important;
                                    }
                                    
                                    .page {
                                        width: 100% !important;
                                        height: 100% !important;
                                        min-height: 14.8cm !important;
                                        padding: 0.4cm !important;
                                        margin: 0 !important;
                                    }
                                    
                                    .header-section,
                                    .contact-section {
                                        margin-left: -0.4cm !important;
                                        margin-right: -0.4cm !important;
                                    }
                                    
                                    .header-section {
                                        margin-top: -0.4cm !important;
                                    }
                                    
                                    .contact-section {
                                        margin-bottom: -0.4cm !important;
                                    }
                                }
                            </style>
                            
                            <!-- Elementos decorativos -->
                            <div class="decorative-accent accent-1"></div>
                            <div class="decorative-accent accent-2"></div>
                            
                            <!-- Generar QR si no existe -->
                            <t t-if="not doc.qr_code">
                                <t t-set="dummy" t-value="doc.generar_qr_code()"/>
                            </t>
                            
                            <!-- Header corporativo - Ancho completo -->
                            <div class="header-section">
                                <t t-set="company" t-value="request.env.company"/>
                                <t t-if="company and company.logo">
                                    <img t-att-src="'data:image/png;base64,%s' % company.logo.decode('utf-8')" 
                                         class="company-logo" alt="Logo Corporativo"/>
                                </t>
                                <t t-else="">
                                    <div class="company-name">COPIER COMPANY</div>
                                </t>
                                <div class="title">ALQUILER DE FOTOCOPIADORAS</div>
                            </div>
                            
                            <!-- Informaci√≥n del equipo -->
                            <div class="equipment-section">
                                <div class="info-card">
                                    <div class="info-label">MODELO</div>
                                    <div class="info-value">
                                        <t t-if="doc.name">
                                            <t t-esc="doc.name.name"/>
                                        </t>
                                        <t t-else="">N/A</t>
                                    </div>
                                </div>
                                
                                <div class="info-card">
                                    <div class="info-label">SERIE</div>
                                    <div class="info-value">
                                        <t t-esc="doc.serie_id or 'N/A'"/>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Secci√≥n QR principal -->
                            <div class="qr-section">
                                <div class="qr-title">üîß SERVICIO T√âCNICO</div>
                                <div class="qr-description">
                                    Escanea para solicitar mantenimiento<br/>
                                    o reportar problemas t√©cnicos
                                </div>
                                <div class="qr-container">
                                    <t t-if="doc.qr_code">
                                        <img t-att-src="'data:image/png;base64,%s' % doc.qr_code.decode('utf-8')" 
                                             class="qr-image" alt="C√≥digo QR"/>
                                    </t>
                                    <t t-else="">
                                        <t t-set="qr_url" t-value="'https://copiercompanysac.com/ticket/' + str(doc.id)"/>
                                        <img t-att-src="'/report/qr?value=' + qr_url + '&amp;width=350&amp;height=350&amp;border=2'" 
                                             class="qr-image" alt="C√≥digo QR"/>
                                    </t>
                                </div>
                            </div>
                            
                            <!-- Informaci√≥n de contacto - Ancho completo -->
                            <div class="contact-section">
                                <div class="contact-title">SOPORTE ESPECIALIZADO</div>
                                <div class="contact-subtitle">
                                    Asistencia t√©cnica ‚Ä¢ Consultas comerciales ‚Ä¢ Mantenimiento
                                </div>
                                <div class="contact-grid">
                                    <div class="contact-item">
                                        <span class="contact-type">üìß EMAIL</span>
                                        <span class="contact-value">info@copiercompanysac.com</span>
                                    </div>
                                    <div class="contact-item">
                                        <span class="contact-type">üí¨ WHATSAPP</span>
                                        <span class="contact-value">+51 975 399 303</span>
                                    </div>
                                    <div class="contact-item">
                                        <span class="contact-type">üåê SITIO WEB</span>
                                        <span class="contact-value">copiercompanysac.com</span>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>