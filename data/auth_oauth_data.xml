<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Asegurar que hay al menos un provider por defecto -->
        <record id="provider_google" model="auth.oauth.provider">
            <field name="name">Google</field>
            <field name="auth_endpoint">https://accounts.google.com/o/oauth2/auth</field>
            <field name="scope">openid email profile</field>
            <field name="validation_endpoint">https://www.googleapis.com/oauth2/v3/userinfo</field>
            <field name="data_endpoint"></field>
            <field name="css_class">fa fa-google</field>
            <field name="body">Google</field>
            <field name="enabled" eval="True"/>
        </record>
    </data>
</odoo>