<odoo>
    <data>
        <template id="my_tickets_inherited" inherit_id="helpdesk.portal_helpdesk_ticket" name="Mis Tickets">
            <xpath expr="//thead/tr/th[4]" position="before">
                <th>Producto</th>
                <th></th>
            </xpath>
            <xpath expr="//tr/td[last()]" position="before">
                <td>
                    <span t-field="ticket.producto_id"/>
                </td>
                <td></td>
            </xpath>
        </template>
        <template id="helpdesk_team_form_inherit" inherit_id="website_helpdesk.team_form_1">
            <xpath expr="//div[@class='mb-0 py-2 s_website_form_field col-12 s_website_form_model_required' and @data-type='char' and @data-name='Field']" position="after">
                <div class="mb-0 py-2 s_website_form_field col-12 s_website_form_required" data-type="many2one" data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="helpdesk7">
                            <span class="s_website_form_label_content">Producto</span>
                            <span class="s_website_form_mark"> *</span>
                        </label>
                        <div class="col-sm">
                            <select class="form-select s_website_form_input" name="producto_id" required="1" id="otfoigp4bfo" style="">

                                <option value="3">[  bizhub 364  ]   Serie: A865666</option>

                                <option value="4">[  MPC3003  ]   Serie: 355546</option>

                            </select>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>

    </data>
</odoo>
