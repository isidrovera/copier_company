<odoo>
    <data>
        <template id="my_tickets_inherited" inherit_id="helpdesk.portal_helpdesk_ticket" name="Mis Tickets">
            <xpath expr="//thead/tr/th[4]" position="before">
                <th>Modelo</th>
            </xpath>
            <xpath expr="//tr/td[last()]" position="before">
                <td>
                    <span t-field="ticket.serie_id"/>
                </td>
            </xpath>
            <xpath expr="//thead/tr/th[5]" position="before">
                <th>Serie</th>
            </xpath>
            <xpath expr="//tr/td[last()]" position="before">
                <td>
                    <span t-field="ticket.producto_id.name"/>
                </td>
            </xpath>
        </template>        
    </data>
</odoo>

