<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Homepage con triggers y modales para JS separado -->
    <template id="copier_company_homepage_modals" name="Homepage con modales" inherit_id="website.homepage">
      <xpath expr="//div[@id='wrap']" position="replace">
        <div id="wrap" class="oe_structure">
          
          <!-- ======= TRIGGERS (EJEMPLOS MÍNIMOS) ======= -->
          <section class="container py-5">
            <div class="row g-4">
              <!-- Trigger Beneficio -->
              <div class="col-md-4">
                <div class="card h-100 shadow-sm"
                     data-bs-toggle="modal"
                     data-bs-target="#benefitModal"
                     data-benefit="sin-inversion"
                     style="cursor:pointer;">
                  <div class="card-body text-center">
                    <h5 class="card-title mb-2">Beneficio: Sin inversión</h5>
                    <p class="text-muted mb-0">Click para ver detalle</p>
                  </div>
                </div>
              </div>

              <!-- Trigger Marca -->
              <div class="col-md-4">
                <div class="card h-100 shadow-sm"
                     data-bs-toggle="modal"
                     data-bs-target="#brandModal"
                     data-brand="canon"
                     style="cursor:pointer;">
                  <div class="card-body text-center">
                    <h5 class="card-title mb-2">Marca: Canon</h5>
                    <p class="text-muted mb-0">Click para ver especificaciones</p>
                  </div>
                </div>
              </div>

              <!-- Trigger Producto -->
              <div class="col-md-4">
                <div class="card h-100 shadow-sm"
                     data-bs-toggle="modal"
                     data-bs-target="#productModal"
                     data-product="multifuncional-a3"
                     style="cursor:pointer;">
                  <div class="card-body text-center">
                    <h5 class="card-title mb-2">Producto: Multifuncional A3</h5>
                    <p class="text-muted mb-0">Click para ver ficha técnica</p>
                  </div>
                </div>
              </div>
            </div>
          </section>

          <!-- ======= MODALES ======= -->

          <!-- Modal Beneficio -->
          <div class="modal fade" id="benefitModal" tabindex="-1" aria-labelledby="benefitModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered">
              <div class="modal-content border-0 shadow">
                <div class="modal-header bg-primary text-white">
                  <h5 class="modal-title fw-bold" id="benefitModalLabel">Beneficio</h5>
                  <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body p-4" id="benefitModalBody"><!-- JS rellena aquí --></div>
                <div class="modal-footer bg-light">
                  <a href="/cotizacion/form" class="btn btn-primary">
                    <i class="bi bi-calculator me-2"></i> Solicitar Cotización
                  </a>
                  <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
              </div>
            </div>
          </div>

          <!-- Modal Marca -->
          <div class="modal fade" id="brandModal" tabindex="-1" aria-labelledby="brandModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl modal-dialog-centered">
              <div class="modal-content border-0 shadow">
                <div class="modal-header bg-success text-white">
                  <h5 class="modal-title fw-bold" id="brandModalLabel">Especificaciones de Marca</h5>
                  <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body p-4" id="brandModalBody"><!-- JS rellena aquí --></div>
                <div class="modal-footer bg-light">
                  <a href="/cotizacion/form" class="btn btn-success">
                    <i class="bi bi-calculator me-2"></i> Cotizar Esta Marca
                  </a>
                  <a href="/our-services" class="btn btn-outline-success">
                    <i class="bi bi-info-circle me-2"></i> Ver Más Servicios
                  </a>
                  <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
              </div>
            </div>
          </div>

          <!-- Modal Producto -->
          <div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl modal-dialog-centered">
              <div class="modal-content border-0 shadow">
                <div class="modal-header bg-info text-white">
                  <h5 class="modal-title fw-bold" id="productModalLabel">Especificaciones Técnicas</h5>
                  <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body p-4" id="productModalBody"><!-- JS rellena aquí --></div>
                <div class="modal-footer bg-light">
                  <a href="/cotizacion/form" class="btn btn-info text-white">
                    <i class="bi bi-calculator me-2"></i> Cotizar Este Equipo
                  </a>
                  <a href="/our-services" class="btn btn-outline-info">
                    <i class="bi bi-tools me-2"></i> Ver Servicios
                  </a>
                  <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
              </div>
            </div>
          </div>

          <!-- ======= CARGA DIRECTA DEL JS SEPARADO ======= -->
          <!-- Odoo 19: sin heredar assets; se incluye el script directamente en la vista -->
          <script type="text/javascript" src="/copier_company/static/src/js/copier_homepage_scripts.js"/>

        </div>
      </xpath>
    </template>
  </data>
</odoo>
