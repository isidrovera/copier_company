<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Template heredado para la homepage de Copier Company -->
        <template id="copier_company_homepage" name="Copier Company Homepage" inherit_id="website.homepage">
            <xpath expr="//div[@id='wrap']" position="replace">
                <div id="wrap">
                    <!-- CSS específico para evitar conflictos -->
                    <style>
                        /* Scope limitado solo para esta página */
                        .copier-homepage {
                            font-family: 'Inter', sans-serif;
                        }
                        
                        .copier-homepage .hero-section {
                            min-height: 80vh;
                            background: linear-gradient(135deg, rgba(102,126,234,0.9) 0%, rgba(118,75,162,0.9) 100%),
                                        url('https://images.unsplash.com/photo-1586473219010-2ffc57b0d282?ixlib=rb-4.0.3&amp;auto=format&amp;fit=crop&amp;w=2000&amp;q=80');
                            background-size: cover;
                            background-position: center;
                            background-attachment: fixed;
                            display: flex;
                            align-items: center;
                            color: white;
                            position: relative;
                            overflow: hidden;
                        }
                        
                        .copier-homepage .hero-section::before {
                            content: '';
                            position: absolute;
                            top: 0;
                            left: 0;
                            right: 0;
                            bottom: 0;
                            background: url('data:image/svg+xml,&lt;svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"&gt;&lt;polygon fill="rgba(255,255,255,0.1)" points="0,1000 1000,0 1000,1000"/&gt;&lt;/svg&gt;');
                            background-size: cover;
                        }
                        
                        .copier-homepage .hero-content {
                            position: relative;
                            z-index: 2;
                            text-align: center;
                            max-width: 800px;
                            margin: 0 auto;
                            padding: 0 20px;
                        }
                        
                        .copier-homepage .hero-title {
                            font-size: 3.5rem;
                            font-weight: 700;
                            margin-bottom: 20px;
                            text-shadow: 0 2px 10px rgba(0,0,0,0.3);
                            animation: fadeInUp 1s ease-out;
                        }
                        
                        .copier-homepage .hero-subtitle {
                            font-size: 1.4rem;
                            margin-bottom: 30px;
                            opacity: 0.95;
                            font-weight: 300;
                            animation: fadeInUp 1s ease-out 0.3s both;
                        }
                        
                        .copier-homepage .brands-showcase {
                            display: flex;
                            justify-content: center;
                            gap: 40px;
                            margin: 40px 0;
                            flex-wrap: wrap;
                            animation: fadeInUp 1s ease-out 0.6s both;
                        }
                        
                        .copier-homepage .brand-badge {
                            background: rgba(255,255,255,0.15);
                            padding: 15px 25px;
                            border-radius: 50px;
                            font-weight: 600;
                            backdrop-filter: blur(10px);
                            border: 1px solid rgba(255,255,255,0.2);
                            transition: all 0.3s ease;
                        }
                        
                        .copier-homepage .brand-badge:hover {
                            background: rgba(255,255,255,0.25);
                            transform: translateY(-2px);
                        }
                        
                        .copier-homepage .btn-hero {
                            background: linear-gradient(45deg, #ff6b6b, #ee5a52);
                            color: white;
                            padding: 18px 40px;
                            border: none;
                            border-radius: 50px;
                            font-size: 1.1rem;
                            font-weight: 600;
                            text-decoration: none;
                            display: inline-block;
                            transition: all 0.3s ease;
                            box-shadow: 0 8px 25px rgba(255,107,107,0.4);
                            animation: fadeInUp 1s ease-out 0.9s both;
                        }
                        
                        .copier-homepage .btn-hero:hover {
                            transform: translateY(-3px);
                            box-shadow: 0 12px 35px rgba(255,107,107,0.6);
                            color: white;
                            text-decoration: none;
                        }
                        
                        .copier-homepage .features-section {
                            padding: 80px 0;
                            background: white;
                        }
                        
                        .copier-homepage .section-title {
                            text-align: center;
                            font-size: 2.5rem;
                            font-weight: 700;
                            margin-bottom: 60px;
                            color: #2c3e50;
                            position: relative;
                        }
                        
                        .copier-homepage .section-title::after {
                            content: '';
                            position: absolute;
                            bottom: -10px;
                            left: 50%;
                            transform: translateX(-50%);
                            width: 80px;
                            height: 4px;
                            background: linear-gradient(45deg, #667eea, #764ba2);
                            border-radius: 2px;
                        }
                        
                        .copier-homepage .features-grid {
                            display: grid;
                            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
                            gap: 40px;
                            margin-top: 60px;
                        }
                        
                        .copier-homepage .feature-card {
                            background: white;
                            padding: 40px 30px;
                            border-radius: 20px;
                            text-align: center;
                            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
                            transition: all 0.3s ease;
                            position: relative;
                            overflow: hidden;
                        }
                        
                        .copier-homepage .feature-card::before {
                            content: '';
                            position: absolute;
                            top: 0;
                            left: 0;
                            right: 0;
                            height: 4px;
                            background: linear-gradient(45deg, #667eea, #764ba2);
                        }
                        
                        .copier-homepage .feature-card:hover {
                            transform: translateY(-10px);
                            box-shadow: 0 20px 50px rgba(0,0,0,0.15);
                        }
                        
                        .copier-homepage .feature-icon {
                            font-size: 3rem;
                            margin-bottom: 20px;
                            background: linear-gradient(45deg, #667eea, #764ba2);
                            -webkit-background-clip: text;
                            -webkit-text-fill-color: transparent;
                            background-clip: text;
                        }
                        
                        .copier-homepage .feature-card h3 {
                            font-size: 1.5rem;
                            font-weight: 600;
                            margin-bottom: 15px;
                            color: #2c3e50;
                        }
                        
                        .copier-homepage .feature-card p {
                            color: #666;
                            font-size: 1rem;
                            line-height: 1.6;
                        }
                        
                        .copier-homepage .services-section {
                            padding: 80px 0;
                            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
                        }
                        
                        .copier-homepage .services-grid {
                            display: grid;
                            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
                            gap: 40px;
                            margin-top: 60px;
                        }
                        
                        .copier-homepage .service-card {
                            background: white;
                            border-radius: 20px;
                            overflow: hidden;
                            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
                            transition: all 0.3s ease;
                            cursor: pointer;
                        }
                        
                        .copier-homepage .service-card:hover {
                            transform: translateY(-5px);
                            box-shadow: 0 25px 50px rgba(0,0,0,0.15);
                        }
                        
                        .copier-homepage .service-image {
                            height: 200px;
                            background: #f8f9fa;
                            display: flex;
                            align-items: center;
                            justify-content: center;
                            position: relative;
                            overflow: hidden;
                            background-size: cover;
                            background-position: center;
                        }
                        
                        .copier-homepage .service-overlay {
                            position: absolute;
                            top: 0;
                            left: 0;
                            right: 0;
                            bottom: 0;
                            background: linear-gradient(135deg, rgba(102,126,234,0.8) 0%, rgba(118,75,162,0.8) 100%);
                            display: flex;
                            align-items: center;
                            justify-content: center;
                            opacity: 0;
                            transition: opacity 0.3s ease;
                        }
                        
                        .copier-homepage .service-card:hover .service-overlay {
                            opacity: 1;
                        }
                        
                        .copier-homepage .service-overlay-content {
                            text-align: center;
                            color: white;
                        }
                        
                        .copier-homepage .service-overlay i {
                            font-size: 3rem;
                            margin-bottom: 10px;
                        }
                        
                        .copier-homepage .service-content {
                            padding: 30px;
                        }
                        
                        .copier-homepage .service-card h3 {
                            font-size: 1.8rem;
                            font-weight: 600;
                            margin-bottom: 15px;
                            color: #2c3e50;
                        }
                        
                        .copier-homepage .service-card p {
                            color: #666;
                            font-size: 1rem;
                            line-height: 1.6;
                        }
                        
                        .copier-homepage .cta-section {
                            padding: 80px 0;
                            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                            color: white;
                            text-align: center;
                        }
                        
                        .copier-homepage .cta-title {
                            font-size: 2.5rem;
                            font-weight: 700;
                            margin-bottom: 20px;
                        }
                        
                        .copier-homepage .cta-subtitle {
                            font-size: 1.2rem;
                            margin-bottom: 40px;
                            opacity: 0.9;
                        }
                        
                        .copier-homepage .btn-cta {
                            background: white;
                            color: #667eea;
                            padding: 18px 40px;
                            border: none;
                            border-radius: 50px;
                            font-size: 1.1rem;
                            font-weight: 600;
                            text-decoration: none;
                            display: inline-block;
                            transition: all 0.3s ease;
                            box-shadow: 0 8px 25px rgba(0,0,0,0.2);
                        }
                        
                        .copier-homepage .btn-cta:hover {
                            transform: translateY(-3px);
                            box-shadow: 0 12px 35px rgba(0,0,0,0.3);
                            color: #667eea;
                            text-decoration: none;
                        }
                        
                        /* Animaciones */
                        @keyframes fadeInUp {
                            from {
                                opacity: 0;
                                transform: translateY(30px);
                            }
                            to {
                                opacity: 1;
                                transform: translateY(0);
                            }
                        }
                        
                        .copier-homepage .animate-on-scroll {
                            opacity: 0;
                            transform: translateY(30px);
                            transition: all 0.8s ease;
                        }
                        
                        .copier-homepage .animate-on-scroll.animated {
                            opacity: 1;
                            transform: translateY(0);
                        }
                        
                        /* Responsive */
                        @media (max-width: 768px) {
                            .copier-homepage .hero-title {
                                font-size: 2.5rem;
                            }
                            
                            .copier-homepage .hero-subtitle {
                                font-size: 1.2rem;
                            }
                            
                            .copier-homepage .brands-showcase {
                                flex-direction: column;
                                gap: 20px;
                            }
                            
                            .copier-homepage .features-grid,
                            .copier-homepage .services-grid {
                                grid-template-columns: 1fr;
                            }
                            
                            .copier-homepage .section-title {
                                font-size: 2rem;
                            }
                            
                            .copier-homepage .cta-title {
                                font-size: 2rem;
                            }
                        }
                    </style>
                    
                    <!-- Contenido de la página -->
                    <div class="copier-homepage">
                        <!-- Hero Section -->
                        <section class="hero-section">
                            <div class="hero-content">
                                <h1 class="hero-title">Alquiler de Fotocopiadoras para Empresas</h1>
                                <p class="hero-subtitle">Soluciones profesionales de impresión sin inversión inicial</p>
                                
                                <div class="brands-showcase">
                                    <div class="brand-badge">Konica Minolta</div>
                                    <div class="brand-badge">Canon</div>
                                    <div class="brand-badge">Ricoh</div>
                                </div>
                                
                                <a href="/contactus" class="btn-hero">
                                    <i class="fas fa-file-invoice-dollar me-2"></i>
                                    Solicita tu Cotización Gratuita
                                </a>
                            </div>
                        </section>
                        
                        <!-- Features Section -->
                        <section class="features-section">
                            <div class="container">
                                <h2 class="section-title animate-on-scroll">¿Por qué elegirnos?</h2>
                                <div class="features-grid">
                                    <div class="feature-card animate-on-scroll">
                                        <div class="feature-icon">
                                            <i class="fas fa-hand-holding-usd"></i>
                                        </div>
                                        <h3>Sin inversión inicial</h3>
                                        <p>Solo pagas por el uso mensual. Ideal para empresas que buscan optimizar su flujo de caja y reducir costos operativos.</p>
                                    </div>
                                    
                                    <div class="feature-card animate-on-scroll">
                                        <div class="feature-icon">
                                            <i class="fas fa-video"></i>
                                        </div>
                                        <h3>Atención Virtual 24/7</h3>
                                        <p>Soporte técnico remoto y consultoría especializada desde cualquier lugar. Configuración y capacitación en línea.</p>
                                    </div>
                                    
                                    <div class="feature-card animate-on-scroll">
                                        <div class="feature-icon">
                                            <i class="fas fa-tools"></i>
                                        </div>
                                        <h3>Taller Especializado</h3>
                                        <p>Reparación y mantenimiento profesional con repuestos originales y garantía total en nuestro centro técnico.</p>
                                    </div>
                                </div>
                            </div>
                        </section>
                        
                        <!-- Services Section -->
                        <section class="services-section">
                            <div class="container">
                                <h2 class="section-title animate-on-scroll">Nuestros Servicios</h2>
                                <div class="services-grid">
                                    <div class="service-card animate-on-scroll">
                                        <div class="service-image" style="background-image: url('https://images.unsplash.com/photo-1560472354-b33ff0c44a43?ixlib=rb-4.0.3&amp;auto=format&amp;fit=crop&amp;w=1000&amp;q=80');">
                                            <div class="service-overlay">
                                                <div class="service-overlay-content">
                                                    <i class="fas fa-handshake"></i>
                                                    <p>Ver detalles</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="service-content">
                                            <h3>Alquiler Empresarial</h3>
                                            <p>Equipos multifuncionales de última generación con mantenimiento incluido, tóner y soporte técnico integral.</p>
                                        </div>
                                    </div>
                                    
                                    <div class="service-card animate-on-scroll">
                                        <div class="service-image" style="background-image: url('https://images.unsplash.com/photo-1586473219010-2ffc57b0d282?ixlib=rb-4.0.3&amp;auto=format&amp;fit=crop&amp;w=1000&amp;q=80');">
                                            <div class="service-overlay">
                                                <div class="service-overlay-content">
                                                    <i class="fas fa-video"></i>
                                                    <p>Ver detalles</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="service-content">
                                            <h3>Consultoría Virtual</h3>
                                            <p>Asesoría personalizada, configuración remota y capacitación en línea para optimizar el uso de tus equipos.</p>
                                        </div>
                                    </div>
                                    
                                    <div class="service-card animate-on-scroll">
                                        <div class="service-image" style="background-image: url('https://images.unsplash.com/photo-1612198188060-c7c2a3b66eae?ixlib=rb-4.0.3&amp;auto=format&amp;fit=crop&amp;w=1000&amp;q=80');">
                                            <div class="service-overlay">
                                                <div class="service-overlay-content">
                                                    <i class="fas fa-tools"></i>
                                                    <p>Ver detalles</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="service-content">
                                            <h3>Servicio Técnico</h3>
                                            <p>Reparación especializada, mantenimiento preventivo y repuestos originales con garantía de 90 días.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                        
                        <!-- CTA Section -->
                        <section class="cta-section">
                            <div class="container">
                                <h2 class="cta-title animate-on-scroll">¿Listo para optimizar tu oficina?</h2>
                                <p class="cta-subtitle animate-on-scroll">Obtén una cotización personalizada sin compromiso</p>
                                <a href="/contactus" class="btn-cta animate-on-scroll">
                                    <i class="fas fa-phone me-2"></i>
                                    Contáctanos Ahora
                                </a>
                            </div>
                        </section>
                    </div>
                    
                    <!-- JavaScript para animaciones -->
                    <script>
                        document.addEventListener('DOMContentLoaded', function() {
                            // Animaciones on scroll
                            const observerOptions = {
                                threshold: 0.1,
                                rootMargin: '0px 0px -50px 0px'
                            };
                            
                            const observer = new IntersectionObserver(function(entries) {
                                entries.forEach(entry =&gt; {
                                    if (entry.isIntersecting) {
                                        entry.target.classList.add('animated');
                                    }
                                });
                            }, observerOptions);
                            
                            // Observar elementos con clase animate-on-scroll
                            document.querySelectorAll('.copier-homepage .animate-on-scroll').forEach(el => {
                                observer.observe(el);
                            });
                        });
                    </script>
                </div>
            </xpath>
        </template>
    </data>
</odoo>