            <field name="arch" type="xml">
                <form string="Estado">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista Kanban para copier.estados -->
        <record id="view_copier_estados_kanban" model="ir.ui.view">
            <field name="name">copier.estados.kanban</field>
            <field name="model">copier.estados</field>
            <field name="arch" type="xml">
                <kanban string="Estados de Copiadoras">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <strong>
                                    <field name="name"/>
                                </strong>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
     <record id="view_partner_form_distributor_extend" model="ir.ui.view">
            <field name="name">res.partner.form.distributor.extend</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                
                <!-- Agregar campo is_distributor en la pestaña de ventas -->
                <xpath expr="//page[@name='sales_purchases']" position="inside">
                    <group string="Configuración de Distribuidor" name="distributor_config">
                        <field name="is_distributor"/>
                        <field name="whatsapp_phone" invisible="not is_distributor"/>
                        <field name="notify_new_stock" invisible="not is_distributor"/>
                        <field name="notify_orders" invisible="not is_distributor"/>
                    </group>
                </xpath>
                
            </field>
        </record>
        <!-- Acción de ventana para copier.estados -->
        <record id="action_copier_estados" model="ir.actions.act_window">
            <field name="name">Estados de Copiadoras</field>
            <field name="res_model">copier.estados</field>
            <field name="view_mode">list,form,kanban</field>
        </record>

        <!-- Menú para copier.estados -->
        <menuitem id="menu_copier_estados" name="Estados de Copiadoras" parent="menu_ajustes" action="action_copier_estados" sequence="40"/>

