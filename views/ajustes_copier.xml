<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">

        <!-- Vista Tree para accesorios.maquinas -->
        <record id="view_accesorios_maquinas_tree" model="ir.ui.view">
            <field name="name">accesorios.maquinas.tree</field>
            <field name="model">accesorios.maquinas</field>
            <field name="arch" type="xml">
                <list string="Accesorios de Máquinas">
                    <field name="name"/>
                </list>
            </field>
        </record>

        <!-- Vista Form para accesorios.maquinas -->
        <record id="view_accesorios_maquinas_form" model="ir.ui.view">
            <field name="name">accesorios.maquinas.form</field>
            <field name="model">accesorios.maquinas</field>
            <field name="arch" type="xml">
                <form string="Accesorio">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista Kanban para accesorios.maquinas -->
        <record id="view_accesorios_maquinas_kanban" model="ir.ui.view">
            <field name="name">accesorios.maquinas.kanban</field>
            <field name="model">accesorios.maquinas</field>
            <field name="arch" type="xml">
                <kanban string="Accesorios de Máquinas">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <strong>
                                    <field name="name"/>
                                </strong>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Acción de ventana para accesorios.maquinas -->
        <record id="action_accesorios_maquinas" model="ir.actions.act_window">
            <field name="name">Accesorios de Máquinas</field>
            <field name="res_model">accesorios.maquinas</field>
            <field name="view_mode">list,form,kanban</field>
        </record>

        <!-- Menú para accesorios.maquinas -->
        <menuitem id="menu_accesorios_maquinas" name="Accesorios de Máquinas" parent="menu_ajustes" action="action_accesorios_maquinas" sequence="30"/>

        <!-- Vista Tree para copier.estados -->
        <record id="view_copier_estados_tree" model="ir.ui.view">
            <field name="name">copier.estados.tree</field>
            <field name="model">copier.estados</field>
