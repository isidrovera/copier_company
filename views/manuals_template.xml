<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Página de lista de manuales modernizada para Odoo 18 -->
<!-- Página de lista de manuales modernizada para Odoo 18 -->
<template id="manuals_list" name="Lista de Manuales">
    <t t-call="website.layout">
        <div class="container py-5">
            <div class="row mb-4">
                <div class="col-lg-8 mx-auto text-center">
                    <h1 class="display-4 fw-bold mb-3">Manuales disponibles</h1>
                    
                    <!-- Búsqueda de manuales mejorada -->
                    <form class="d-flex gap-2 mb-4" action="/manuales/buscar" method="get">
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0">
                                <i class="fa fa-search text-muted"></i>
                            </span>
                            <input type="text" name="q" class="form-control border-start-0 shadow-none" 
                                   placeholder="Buscar manuales..." 
                                   t-att-value="search_query if search_query else ''"
                                   aria-label="Buscar manuales"/>
                            <button type="submit" class="btn btn-primary px-4">
                                Buscar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="row g-4">
                <!-- Sidebar con filtros - Colapsa en móvil -->
                <div class="col-lg-3">
                    <div class="sticky-top pt-3" style="top: 80px;">
                        <!-- Categorías con diseño mejorado -->
                        <div class="card shadow-sm rounded-3 mb-4 border-0">
                            <div class="card-header bg-white py-3">
                                <h4 class="m-0 fs-5 fw-bold">Categorías</h4>
                            </div>
                            <div class="card-body p-0">
                                <div class="list-group list-group-flush">
                                    <a href="/manuales" class="list-group-item list-group-item-action border-0 py-3 px-4" 
                                       t-att-class="'active' if not category_id else ''">
                                        <i class="fa fa-book me-2"></i> Todos los manuales
                                    </a>
                                    <t t-foreach="categories" t-as="category">
                                        <a t-att-href="'/manuales/categoria/%s' % category.id" 
                                           class="list-group-item list-group-item-action border-0 py-3 px-4"
                                           t-att-class="'active' if category_id and category_id == category.id else ''">
                                            <i class="fa fa-folder me-2"></i> <t t-esc="category.name"/>
                                        </a>
                                    </t>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Filtros con diseño mejorado -->
                        <div class="card shadow-sm rounded-3 border-0">
                            <div class="card-header bg-white py-3">
                                <h4 class="m-0 fs-5 fw-bold">Ordenar por</h4>
                            </div>
                            <div class="card-body p-0">
                                <div class="list-group list-group-flush">
                                    <a href="#" class="list-group-item list-group-item-action border-0 py-3 px-4" 
                                       t-att-class="'active' if sort_by == 'name' else ''"
                                       t-att-href="'/manuales?sort_by=name' + (('&amp;category_id=%s' % category_id) if category_id else '')">
                                        <i class="fa fa-sort-alpha-asc me-2"></i> Nombre (A-Z)
                                    </a>
                                    <a href="#" class="list-group-item list-group-item-action border-0 py-3 px-4"
                                       t-att-class="'active' if sort_by == 'date' else ''"
                                       t-att-href="'/manuales?sort_by=date' + (('&amp;category_id=%s' % category_id) if category_id else '')">
                                        <i class="fa fa-calendar me-2"></i> Más recientes
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Contenido principal - Manuales -->
                <div class="col-lg-9">
                    <div class="card shadow-sm rounded-3 border-0">
                        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                            <h4 class="m-0 fs-5 fw-bold">
                                <t t-if="category">
                                    <i class="fa fa-folder-open me-2"></i> <span t-esc="category.name"/>
                                </t>
                                <t t-elif="search_query">
                                    <i class="fa fa-search me-2"></i> Resultados para: <span t-esc="search_query"/>
                                </t>
                                <t t-else="">
                                    <i class="fa fa-book me-2"></i> Todos los manuales
                                </t>
                            </h4>
                            <span t-if="manuals" class="badge bg-secondary rounded-pill">
                                <t t-esc="len(manuals)"/> resultado(s)
                            </span>
                        </div>
                        
                        <div class="card-body p-4">
                            <!-- Mensaje cuando no hay resultados -->
                            <div t-if="not manuals" class="alert alert-info d-flex align-items-center" role="alert">
                                <i class="fa fa-info-circle fa-2x me-3"></i>
                                <div>
                                    <p class="m-0" t-if="search_query">No se encontraron manuales que coincidan con tu búsqueda.</p>
                                    <p class="m-0" t-else="">No hay manuales disponibles en esta categoría.</p>
                                </div>
                            </div>
                            
                            <!-- Grid de manuales con diseño de tarjetas mejorado -->
                            <div t-if="manuals" class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4" style="min-width: 0;">
                                <t t-foreach="manuals" t-as="manual">
                                    <div class="col">
                                        <div class="card h-100 shadow-sm hover-shadow border-0 rounded-3 manual-card">
                                            <div class="card-body p-4">
                                                <div class="mb-3">
                                                    <div class="d-flex mb-2">
                                                        <span class="icon-wrapper rounded-circle bg-primary bg-opacity-10 p-2 me-3 flex-shrink-0">
                                                            <i class="fa fa-file-pdf-o text-primary"></i>
                                                        </span>
                                                        <div class="title-container w-100">
                                                            <h5 class="card-title mb-0 fw-bold manual-title" t-esc="manual.name"/>
                                                        </div>
                                                    </div>
                                                </div>
                                                
                                                <div class="mb-3">
                                                    <span class="badge bg-light text-dark rounded-pill">
                                                        <i class="fa fa-folder-o me-1"></i> 
                                                        <t t-esc="manual.category_id.name"/>
                                                    </span>
                                                </div>
                                                
                                                <p class="card-text text-muted" t-esc="manual.description"/>
                                            </div>
                                            <div class="card-footer bg-white border-0 p-4 pt-0">
                                                <a t-att-href="'/manuales/ver/%s' % manual.id" 
                                                   class="btn btn-primary w-100 rounded-pill"
                                                   target="_blank">
                                                   <i class="fa fa-eye me-2"></i> Ver manual
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- CSS personalizado para efectos y mejoras visuales -->
        <style>
            /* Efecto hover para las tarjetas de manuales */
            .manual-card {
                transition: all 0.3s ease;
            }
            .manual-card:hover {
                transform: translateY(-5px);
            }
            .hover-shadow:hover {
                box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
            }
            
            /* Estilo para los elementos activos en la navegación */
            .list-group-item.active {
                background-color: rgba(var(--o-primary-rgb), 0.1);
                color: var(--o-primary);
                border-color: transparent;
            }
            
            /* Icono en tarjetas */
            .icon-wrapper {
                display: inline-flex;
                justify-content: center;
                align-items: center;
                width: 40px;
                height: 40px;
            }
            
            /* Estilo para el título de manual con ajuste automático */
            .manual-title {
                display: -webkit-box;
                -webkit-line-clamp: initial;
                -webkit-box-orient: vertical;
                overflow: visible;
                line-height: 1.4;
                height: auto;
                word-wrap: break-word;
                word-break: break-word;
                overflow-wrap: break-word;
                hyphens: auto;
                max-width: 100%;
                min-height: 40px;
            }
            
            .title-container {
                display: flex;
                align-items: center;
            }
            
            /* Mejora para dispositivos móviles */
            @media (max-width: 992px) {
                .sticky-top {
                    position: relative;
                    top: 0;
                }
            }
        </style>
    </t>
</template>
    
    <!-- Página para visualizar un manual -->
    <template id="manual_viewer" name="Visor de Manual">
        <t t-call="website.layout">
            <div class="container-fluid p-0 manual-viewer-fullscreen"> <!-- Cambiar a container-fluid y añadir clase -->
                <div class="row mb-3 px-3 pt-3">
                    <div class="col-12">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/manuales">Manuales</a></li>
                                <li class="breadcrumb-item" t-if="manual.category_id">
                                    <a t-att-href="'/manuales/categoria/%s' % manual.category_id.id" 
                                       t-esc="manual.category_id.name"/>
                                </li>
                                <li class="breadcrumb-item active" t-esc="manual.name"/>
                            </ol>
                        </nav>
                    </div>
                </div>
                
                <div class="card border-0 rounded-0 h-100"> <!-- Quitar bordes y redondeo -->
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h2 t-esc="manual.name"/>
                        <div>
                            <span class="badge bg-info text-white"> <!-- Actualizar clase de badge -->
                                <i class="fa fa-eye"></i> 
                                <t t-if="manual.access_count">Visto <t t-esc="manual.access_count"/> veces</t>
                                <t t-else="">Primera visualización</t>
                            </span>
                        </div>
                    </div>
                    <div class="card-body p-0"> <!-- Eliminar padding -->
                        <div class="pdf-description p-3" t-if="manual.description">
                            <p t-esc="manual.description"/>
                        </div>
                        
                        <!-- Controles del visor -->
                        <div class="pdf-controls p-3 bg-light border-top border-bottom">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="pdf-search-container d-flex">
                                        <input type="text" id="pdfSearchInput" class="form-control me-2" placeholder="Buscar en el documento..."/>
                                        <button id="pdfSearchPrev" class="btn btn-outline-secondary" disabled="disabled">
                                            <i class="fa fa-chevron-up"></i>
                                        </button>
                                        <button id="pdfSearchNext" class="btn btn-outline-secondary ms-1" disabled="disabled">
                                            <i class="fa fa-chevron-down"></i>
                                        </button>
                                        <span id="pdfSearchResults" class="ms-2 align-self-center"></span>
                                    </div>
                                </div>
                                <div class="col-md-4 text-end">
                                    <div class="zoom-controls">
                                        <button id="zoomOut" class="btn btn-outline-secondary">
                                            <i class="fa fa-search-minus"></i>
                                        </button>
                                        <button id="zoomIn" class="btn btn-outline-secondary ms-1">
                                            <i class="fa fa-search-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="pdf-container" id="pdfFullContainer"> <!-- Eliminar altura fija -->
                            <div id="pdfViewerContainer" class="w-100 h-100 border-0" 
                                 t-att-data-pdf-url="'/manuales/pdf/%s' % manual.id">
                                <div class="d-flex justify-content-center align-items-center h-100">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Cargando...</span> <!-- Actualizar a clase Bootstrap 5 -->
                                    </div>
                                    <span class="ms-2">Cargando el visor de PDF...</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Estilos adicionales para pantalla completa -->
            <style>
                /* Estilos base mantenidos */
                .manual-card {
                    transition: transform 0.3s, box-shadow 0.3s;
                }
                .manual-card:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
                }
                .search-highlight {
                    animation: highlight-pulse 2s infinite;
                }
                @keyframes highlight-pulse {
                    0% { opacity: 0.4; }
                    50% { opacity: 1; }
                    100% { opacity: 0.4; }
                }
                
                /* Estilos nuevos para pantalla completa */
                .manual-viewer-fullscreen {
                    margin: 0;
                    padding: 0;
                }
                
                #pdfFullContainer {
                    height: calc(100vh - 200px); /* Altura calculada para ocupar la pantalla menos cabeceras */
                    background-color: #f5f5f5;
                }
                
                @media (max-width: 768px) {
                    #pdfFullContainer {
                        height: calc(100vh - 220px); /* Ajuste para móviles */
                    }
                }
                
                /* Asegura que el contenedor principal ocupe toda la altura disponible */
                body, html, main, .o_main_content {
                    height: 100%;
                }
                
                /* Eliminar márgenes extras de Odoo en esta página */
                .manual-viewer-fullscreen .o_footer, 
                .manual-viewer-fullscreen #wrapwrap &lt; main {
                    margin: 0 !important;
                    padding: 0 !important;
                }
            </style>
            
            <!-- Script opcional para mejorar la experiencia en pantalla completa -->
            <script type="text/javascript">
                $(document).ready(function() {
                    // Ajustar la altura del contenedor PDF cuando cambia el tamaño de la ventana
                    $(window).resize(function() {
                        adjustPdfContainerHeight();
                    });
                    
                    function adjustPdfContainerHeight() {
                        var windowHeight = $(window).height();
                        var headerHeight = $('.o_header_standard').outerHeight() || 0;
                        var controlsHeight = $('.pdf-controls').outerHeight() || 0;
                        var descHeight = $('.pdf-description').outerHeight() || 0;
                        var cardHeaderHeight = $('.card-header').outerHeight() || 0;
                        
                        var availableHeight = windowHeight - headerHeight - controlsHeight - descHeight - cardHeaderHeight - 30;
                        $('#pdfFullContainer').css('height', availableHeight + 'px');
                    }
                    
                    // Inicializar altura
                    setTimeout(adjustPdfContainerHeight, 100);
                });
            </script>
        </t>
    </template>
</odoo>