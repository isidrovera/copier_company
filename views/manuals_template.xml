<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Página de lista de manuales -->
    <template id="manuals_list" name="Lista de Manuales">
        <t t-call="website.layout">
            <div class="container mt-4">
                <h1 class="mb-4">Manuales disponibles</h1>
                
                <!-- Búsqueda de manuales -->
                <div class="row mb-4">
                    <div class="col-md-8 offset-md-2">
                        <form class="d-flex" action="/manuales/buscar" method="get">
                            <input type="text" name="q" class="form-control" placeholder="Buscar manuales..." 
                                   t-att-value="search_query if search_query else ''"/>
                            <button type="submit" class="btn btn-primary ml-2">
                                <i class="fa fa-search"></i> Buscar
                            </button>
                        </form>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-3">
                        <div class="card mb-3">
                            <div class="card-header">
                                <h4>Categorías</h4>
                            </div>
                            <div class="card-body">
                                <ul class="nav flex-column">
                                    <li class="nav-item">
                                        <a href="/manuales" class="nav-link" t-att-class="'active' if not category_id else ''">Todos</a>
                                    </li>
                                    <t t-foreach="categories" t-as="category">
                                        <li class="nav-item">
                                            <a t-att-href="'/manuales/categoria/%s' % category.id" 
                                               t-att-class="'nav-link %s' % ('active' if category_id and category_id == category.id else '')">
                                                <t t-esc="category.name"/>
                                            </a>
                                        </li>
                                    </t>
                                </ul>
                            </div>
                        </div>
                        
                        <!-- Filtros adicionales -->
                        <div class="card">
                            <div class="card-header">
                                <h4>Ordenar por</h4>
                            </div>
                            <div class="card-body">
                                <div class="list-group">
                                    <a href="#" class="list-group-item list-group-item-action" 
                                       t-att-class="'active' if sort_by == 'name' else ''"
                                       t-att-href="'/manuales?sort_by=name' + (('&amp;category_id=%s' % category_id) if category_id else '')">
                                        Nombre (A-Z)
                                    </a>
                                    <a href="#" class="list-group-item list-group-item-action"
                                       t-att-class="'active' if sort_by == 'date' else ''"
                                       t-att-href="'/manuales?sort_by=date' + (('&amp;category_id=%s' % category_id) if category_id else '')">
                                        Más recientes
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-9">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h4 t-if="category">Manuales - <span t-esc="category.name"/></h4>
                                <h4 t-elif="search_query">Resultados para: <span t-esc="search_query"/></h4>
                                <h4 t-else="">Todos los manuales</h4>
                                <small t-if="manuals" class="text-muted">Mostrando <t t-esc="len(manuals)"/> resultado(s)</small>
                            </div>
                            <div class="card-body">
                                <div t-if="not manuals" class="alert alert-info">
                                    <p t-if="search_query">No se encontraron manuales que coincidan con tu búsqueda.</p>
                                    <p t-else="">No hay manuales disponibles en esta categoría.</p>
                                </div>
                                
                                <div t-if="manuals" class="row">
                                    <t t-foreach="manuals" t-as="manual">
                                        <div class="col-md-4 mb-3">
                                            <div class="card h-100 manual-card">
                                                <div class="card-body">
                                                    <h5 class="card-title" t-esc="manual.name"/>
                                                    <p class="card-text">
                                                        <small class="text-muted">
                                                            <i class="fa fa-folder-o"></i> 
                                                            <t t-esc="manual.category_id.name"/>
                                                        </small>
                                                    </p>
                                                    <p class="card-text" t-esc="manual.description"/>
                                                </div>
                                                <div class="card-footer">
                                                    <a t-att-href="'/manuales/ver/%s' % manual.id" 
                                                       class="btn btn-primary btn-block">Ver manual</a>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    
    <!-- Página para visualizar un manual -->
    <template id="manual_viewer" name="Visor de Manual">
        <t t-call="website.layout">
            <div class="container mt-4">
                <div class="row mb-3">
                    <div class="col-12">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/manuales">Manuales</a></li>
                                <li class="breadcrumb-item" t-if="manual.category_id">
                                    <a t-att-href="'/manuales/categoria/%s' % manual.category_id.id" 
                                       t-esc="manual.category_id.name"/>
                                </li>
                                <li class="breadcrumb-item active" t-esc="manual.name"/>
                            </ol>
                        </nav>
                    </div>
                </div>
                
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h2 t-esc="manual.name"/>
                        <div>
                            <span class="badge badge-info">
                                <i class="fa fa-eye"></i> 
                                <t t-if="manual.access_count">Visto <t t-esc="manual.access_count"/> veces</t>
                                <t t-else="">Primera visualización</t>
                            </span>
                        </div>
                    </div>
                    <div class="card-body">
                        <p t-esc="manual.description"/>
                        
                        <!-- Controles del visor -->
                        <div class="pdf-controls mb-3">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="pdf-search-container d-flex">
                                        <input type="text" id="pdfSearchInput" class="form-control mr-2" placeholder="Buscar en el documento..."/>
                                        <!-- El botón de búsqueda se insertará por JavaScript -->
                                        <button id="pdfSearchPrev" class="btn btn-outline-secondary" disabled="disabled">
                                            <i class="fa fa-chevron-up"></i>
                                        </button>
                                        <button id="pdfSearchNext" class="btn btn-outline-secondary ml-1" disabled="disabled">
                                            <i class="fa fa-chevron-down"></i>
                                        </button>
                                        <span id="pdfSearchResults" class="ml-2 align-self-center"></span>
                                    </div>
                                </div>
                                <div class="col-md-4 text-right">
                                    <div class="zoom-controls">
                                        <button id="zoomOut" class="btn btn-outline-secondary">
                                            <i class="fa fa-search-minus"></i>
                                        </button>
                                        <button id="zoomIn" class="btn btn-outline-secondary ml-1">
                                            <i class="fa fa-search-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="pdf-container mt-4" style="height: 800px;">
                            <div id="pdfViewerContainer" class="w-100 h-100 border" 
                                 t-att-data-pdf-url="'/manuales/pdf/%s' % manual.id">
                                <div class="d-flex justify-content-center align-items-center h-100">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="sr-only">Cargando...</span>
                                    </div>
                                    <span class="ml-2">Cargando el visor de PDF...</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Estilos adicionales -->
            <style>
                .manual-card {
                    transition: transform 0.3s, box-shadow 0.3s;
                }
                .manual-card:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
                }
                .pdf-container {
                    background-color: #f5f5f5;
                    border-radius: 5px;
                }
                .search-highlight {
                    animation: highlight-pulse 2s infinite;
                }
                @keyframes highlight-pulse {
                    0% { opacity: 0.4; }
                    50% { opacity: 1; }
                    100% { opacity: 0.4; }
                }
            </style>
        </t>
    </template>
</odoo>