<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="pcloud_files_template" name="Descargas">
        <t t-call="website.layout">
            <div class="container-fluid py-5 px-4 px-xl-5">
                <!-- Barra superior con diseño moderno -->
                <div class="row align-items-center mb-4 gx-4">
                    <div class="col-12 col-md-3 mb-3 mb-md-0">
                        <div class="d-flex gap-2">
                            <a href="/soporte/descargas?folder_id=0" class="btn btn-primary d-flex align-items-center">
                                <i class="fa fa-home me-2"></i> Inicio
                            </a>
                            <t t-if="current_folder_id">
                                <a href="javascript:history.back()" class="btn btn-outline-primary d-flex align-items-center">
                                    <i class="fa fa-arrow-left"></i>
                                </a>
                            </t>
                        </div>
                    </div>
                    
                    <!-- Barra de búsqueda con diseño moderno -->
                    <div class="col-12 col-md-6 mb-3 mb-md-0">
                        <form id="search-form" class="position-relative">
                            <input type="hidden" name="folder_id" t-att-value="current_folder_id"/>
                            <div class="input-group">
                                <input type="text" 
                                       id="search-input" 
                                       class="form-control rounded-pill ps-4 pe-5 border-0 shadow-sm" 
                                       placeholder="Buscar archivos..."
                                       t-att-value="request.params.get('search', '')"
                                       aria-label="Buscar archivos"/>
                                <button type="submit" class="btn btn-link position-absolute top-50 end-0 translate-middle-y pe-3" style="z-index: 10;">
                                    <i class="fa fa-search text-primary"></i>
                                </button>
                            </div>
                        </form>
                    </div>

                    <!-- Botones de vista modernos -->
                    <div class="col-12 col-md-3">
                        <div class="d-flex justify-content-end gap-2">
                            <button id="list-view-btn" 
                                    class="btn btn-outline-primary view-btn" 
                                    title="Vista de lista"
                                    aria-label="Cambiar a vista de lista">
                                <i class="fa fa-list"></i>
                            </button>
                            <button id="kanban-view-btn" 
                                    class="btn btn-outline-primary view-btn" 
                                    title="Vista Kanban"
                                    aria-label="Cambiar a vista de tarjetas">
                                <i class="fa fa-th-large"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Ruta de navegación (Breadcrumb) -->
                <nav aria-label="breadcrumb" class="mb-4 bg-light rounded-3 py-2 px-3 shadow-sm">
                    <ol class="breadcrumb mb-0">
                        
                        <!-- Aquí se pueden añadir dinámicamente los elementos de la ruta -->
                        <t t-if="current_folder_name">
                            <li class="breadcrumb-item active" aria-current="page">
                                <t t-esc="current_folder_name"/>
                            </li>
                        </t>
                    </ol>
                </nav>

                <!-- Vista de lista mejorada -->
                <div class="row">
                    <div class="col-12" id="list-view">
                        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                            <div class="table-responsive">
                                <table class="table align-middle mb-0">
                                    <thead class="bg-light">
                                        <tr>
                                            <th class="border-0 py-3 ps-4" style="width: 50%">Nombre</th>
                                            <th class="border-0 py-3" style="width: 15%">Tamaño</th>
                                            <th id="modified-header" class="border-0 py-3" style="width: 20%">
                                                Fecha <i id="sort-icon" class="fa fa-sort ms-1"></i>
                                            </th>
                                            <th class="border-0 py-3 pe-4 text-end" style="width: 15%">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody id="files-list">
                                        <t t-foreach="contents" t-as="item">
                                            <tr>
                                                <td class="ps-4">
                                                    <div class="d-flex align-items-center">
                                                        <div class="file-icon rounded-circle p-2 bg-light me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                            <img t-att-src="'/copier_company/static/src/img/' + item['icon']" 
                                                                t-att-alt="item['name']" 
                                                                style="width: 20px; height: 20px;"/>
                                                        </div>
                                                        <div class="text-truncate" style="max-width: calc(100% - 60px);">
                                                            <t t-if="item['isfolder']">
                                                                <a t-att-href="'/soporte/descargas?folder_id=%d&amp;view_mode=%s' % (item['id'], view_mode)"
                                                                class="text-decoration-none fw-medium file-name">
                                                                    <t t-esc="item['name']"/>
                                                                </a>
                                                            </t>
                                                            <t t-else="">
                                                                <span class="file-name"><t t-esc="item['name']"/></span>
                                                            </t>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="text-muted"><t t-esc="item['size']"/></td>
                                                <td class="text-muted"><t t-esc="item['modified']"/></td>
                                                <td class="pe-4 text-end">
                                                    <t t-if="not item['isfolder']">
                                                        <a t-att-href="'/soporte/descarga?file_id=%d' % item['id']" 
                                                        class="btn btn-outline-success rounded-pill">
                                                            <i class="fa fa-download me-1"></i> Descargar
                                                        </a>
                                                    </t>
                                                    <t t-if="item['isfolder']">
                                                        <a t-att-href="'/soporte/descargas?folder_id=%d&amp;view_mode=%s' % (item['id'], view_mode)" 
                                                        class="btn btn-outline-primary rounded-pill">
                                                            <i class="fa fa-folder-open me-1"></i> Abrir
                                                        </a>
                                                    </t>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Vista Kanban mejorada -->
                    <div class="col-12 d-none" id="kanban-view">
                        <div class="row g-4">
                            <t t-foreach="contents" t-as="item">
                                <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2">
                                    <div class="card h-100 border-0 rounded-4 shadow-sm hover-card">
                                        <div class="card-body p-4 d-flex flex-column">
                                            <div class="mb-3 text-center">
                                                <div class="file-icon-kanban rounded-circle p-3 bg-light d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                                    <img t-att-src="'/copier_company/static/src/img/' + item['icon']" 
                                                        t-att-alt="item['name']"
                                                        style="width: 28px; height: 28px;"/>
                                                </div>
                                            </div>
                                            <h6 class="card-title text-truncate mb-2 text-center" t-att-title="item['name']">
                                                <t t-esc="item['name']"/>
                                            </h6>
                                            <div class="d-flex justify-content-between text-muted small mb-3">
                                                <span><t t-esc="item['size']"/></span>
                                                <span><t t-esc="item['modified']"/></span>
                                            </div>
                                            <div class="mt-auto">
                                                <t t-if="item['isfolder']">
                                                    <a t-att-href="'/soporte/descargas?folder_id=%d&amp;view_mode=%s' % (item['id'], view_mode)" 
                                                    class="btn btn-outline-primary rounded-pill w-100">
                                                        <i class="fa fa-folder-open me-1"></i> Abrir
                                                    </a>
                                                </t>
                                                <t t-else="">
                                                    <a t-att-href="'/soporte/descarga?file_id=%d' % item['id']" 
                                                    class="btn btn-outline-success rounded-pill w-100">
                                                        <i class="fa fa-download me-1"></i> Descargar
                                                    </a>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                    
                    <!-- Mensaje mejorado para carpeta vacía -->
                    <div t-if="not contents" class="col-12 text-center py-5">
                        <div class="empty-folder p-5 bg-light rounded-4 shadow-sm">
                            <i class="fa fa-folder-open text-muted" style="font-size: 64px;"></i>
                            <h5 class="mt-4 text-muted">Esta carpeta está vacía</h5>
                            <p class="text-muted">No se encontraron archivos o carpetas en esta ubicación</p>
                            <a href="/soporte/descargas?folder_id=0" class="btn btn-primary mt-3">
                                <i class="fa fa-home me-2"></i> Volver al inicio
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Estilos CSS modernos -->
            <style>
                /* Estilos generales modernos */
                :root {
                    --primary-color: #0d6efd;
                    --success-color: #198754;
                    --light-bg: #f8f9fa;
                    --hover-bg: #f0f2f5;
                    --card-radius: 16px;
                    --transition-speed: 0.3s;
                }
                
                /* Mejoras en la barra de búsqueda */
                #search-input {
                    height: 48px;
                    background-color: #f8f9fa;
                    box-shadow: none;
                    font-size: 1rem;
                }
                #search-input:focus {
                    background-color: #ffffff;
                    box-shadow: 0 0 0 3px rgba(13, 110, 253, 0.15);
                }
                
                /* Mejoras en iconos y cards */
                .file-icon, .file-icon-kanban {
                    background-color: #f0f4f8;
                    transition: all var(--transition-speed) ease;
                }
                .hover-card {
                    transition: all var(--transition-speed) ease;
                    border: 1px solid transparent !important;
                }
                .hover-card:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.08) !important;
                    border-color: rgba(13, 110, 253, 0.1) !important;
                }
                
                /* Mejoras en la tabla */
                .table {
                    color: #212529;
                }
                tr {
                    transition: background-color var(--transition-speed) ease;
                }
                tbody tr:hover {
                    background-color: var(--hover-bg);
                }
                .table thead th {
                    font-weight: 600;
                    color: #495057;
                    letter-spacing: 0.5px;
                    text-transform: uppercase;
                    font-size: 0.75rem;
                }
                .file-name {
                    color: #212529;
                    transition: color var(--transition-speed) ease;
                }
                .file-name:hover {
                    color: var(--primary-color);
                }
                
                /* Botones y elementos interactivos */
                .rounded-pill {
                    padding-left: 15px;
                    padding-right: 15px;
                }
                .rounded-4 {
                    border-radius: var(--card-radius) !important;
                }
                .btn {
                    font-weight: 500;
                    padding: 0.5rem 1rem;
                    transition: all var(--transition-speed) ease;
                }
                .view-btn.active {
                    background-color: var(--primary-color);
                    color: white;
                }
                
                /* Responsive adjustments */
                @media (max-width: 767.98px) {
                    .btn {
                        padding: 0.375rem 0.75rem;
                    }
                    .table thead th {
                        font-size: 0.7rem;
                    }
                    .rounded-4 {
                        border-radius: 10px !important;
                    }
                }
                
                /* Dark mode support for future implementation */
                @media (prefers-color-scheme: dark) {
                    /* Dark mode styles can be added here */
                }
            </style>
            
            <script type="text/javascript" src="/copier_company/static/src/js/PcloudDescargas.js"></script>
            <link rel="stylesheet" type="text/css" href="/copier_company/static/src/css/PcloudDescargas.css"/>
        </t>
    </template>
</odoo>
