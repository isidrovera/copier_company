<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="pcloud_files_template" name="Descargas">
        <t t-call="website.layout">
            <div class="container py-5">
                <!-- Barra superior minimalista -->
                <div class="row align-items-center mb-4">
                    <div class="col-12 col-md-3 mb-3 mb-md-0">
                        <div class="d-flex gap-2">
                            <a href="/soporte/descargas?folder_id=0" class="btn btn-sm btn-primary d-flex align-items-center">
                                <i class="fa fa-home me-2"></i> Inicio
                            </a>
                            <t t-if="current_folder_id">
                                <a href="javascript:history.back()" class="btn btn-sm btn-primary d-flex align-items-center">
                                    <i class="fa fa-arrow-left me-2"></i>
                                </a>
                            </t>
                        </div>
                    </div>
                    
                    <!-- Barra de búsqueda minimalista -->
                    <div class="col-12 col-md-6 mb-3 mb-md-0">
                        <form id="search-form" class="position-relative">
                            <input type="hidden" name="folder_id" t-att-value="current_folder_id"/>
                            <div class="input-group">
                                <input type="text" 
                                       id="search-input" 
                                       class="form-control rounded-pill ps-4 pe-5 border-0" 
                                       placeholder="Buscar archivos..."
                                       t-att-value="request.params.get('search', '')"
                                       aria-label="Buscar archivos"/>
                                <span class="position-absolute top-50 end-0 translate-middle-y pe-3">
                                    <i class="fa fa-search text-muted"></i>
                                </span>
                            </div>
                        </form>
                    </div>

                    <!-- Botones de vista minimalistas -->
                    <div class="col-12 col-md-3">
                        <div class="d-flex justify-content-end gap-2">
                            <button id="list-view-btn" 
                                    class="btn btn-sm btn-outline-primary view-btn" 
                                    title="Vista de lista"
                                    aria-label="Cambiar a vista de lista">
                                <i class="fa fa-list"></i>
                            </button>
                            <button id="kanban-view-btn" 
                                    class="btn btn-sm btn-outline-primary view-btn" 
                                    title="Vista Kanban"
                                    aria-label="Cambiar a vista de tarjetas">
                                <i class="fa fa-th-large"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Vista de lista minimalista -->
                <div class="row">
                    <div class="col-12" id="list-view">
                        <div class="card border-0 shadow-sm">
                            <div class="table-responsive">
                                <table class="table align-middle mb-0">
                                    <thead class="bg-light">
                                        <tr>
                                            <th class="border-0 py-3 ps-4">Nombre</th>
                                            <th class="border-0 py-3">Tamaño</th>
                                            <th id="modified-header" class="border-0 py-3">
                                                Fecha <i id="sort-icon" class="fa ms-1"></i>
                                            </th>
                                            <th class="border-0 py-3 pe-4 text-end">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody id="files-list">
                                        <t t-foreach="contents" t-as="item">
                                            <tr>
                                                <td class="ps-4">
                                                    <div class="d-flex align-items-center">
                                                        <div class="file-icon rounded-circle p-2 bg-light me-3">
                                                            <img t-att-src="'/copier_company/static/src/img/' + item['icon']" 
                                                                t-att-alt="item['name']" 
                                                                style="width: 20px; height: 20px;"/>
                                                        </div>
                                                        <div>
                                                            <t t-if="item['isfolder']">
                                                                <a t-att-href="'/soporte/descargas?folder_id=%d&amp;view_mode=%s' % (item['id'], view_mode)"
                                                                class="text-decoration-none text-dark fw-medium">
                                                                    <t t-esc="item['name']"/>
                                                                </a>
                                                            </t>
                                                            <t t-else="">
                                                                <span class="text-dark"><t t-esc="item['name']"/></span>
                                                            </t>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="text-muted"><t t-esc="item['size']"/></td>
                                                <td class="text-muted"><t t-esc="item['modified']"/></td>
                                                <td class="pe-4 text-end">
                                                    <t t-if="not item['isfolder']">
                                                        <a t-att-href="'/soporte/descarga?file_id=%d' % item['id']" 
                                                        class="btn btn-sm btn-outline-success rounded-pill">
                                                            <i class="fa fa-download"></i>
                                                        </a>
                                                    </t>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Vista Kanban minimalista -->
                    <div class="col-12 d-none" id="kanban-view">
                        <div class="row g-4">
                            <t t-foreach="contents" t-as="item">
                                <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2">
                                    <div class="card h-100 border-0 rounded-4 shadow-sm hover-card">
                                        <div class="card-body p-4">
                                            <div class="mb-3 text-center">
                                                <div class="file-icon rounded-circle p-3 bg-light d-inline-block">
                                                    <img t-att-src="'/copier_company/static/src/img/' + item['icon']" 
                                                        t-att-alt="item['name']"
                                                        style="width: 24px; height: 24px;"/>
                                                </div>
                                            </div>
                                            <h6 class="card-title text-truncate mb-2" t-att-title="item['name']">
                                                <t t-esc="item['name']"/>
                                            </h6>
                                            <p class="card-text small text-muted mb-3">
                                                <t t-esc="item['modified']"/>
                                            </p>
                                            <div class="mt-auto">
                                                <t t-if="item['isfolder']">
                                                    <a t-att-href="'/soporte/descargas?folder_id=%d&amp;view_mode=%s' % (item['id'], view_mode)" 
                                                    class="btn btn-sm btn-outline-primary rounded-pill w-100">
                                                        Abrir
                                                    </a>
                                                </t>
                                                <t t-else="">
                                                    <a t-att-href="'/soporte/descarga?file_id=%d' % item['id']" 
                                                    class="btn btn-sm btn-outline-success rounded-pill w-100">
                                                        Descargar
                                                    </a>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                    
                    <!-- Mensaje para carpeta vacía -->
                    <div t-if="not contents" class="col-12 text-center py-5">
                        <div class="empty-folder p-5">
                            <i class="fa fa-folder-open text-muted" style="font-size: 48px;"></i>
                            <h5 class="mt-4 text-muted">Esta carpeta está vacía</h5>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Estilos CSS personalizados -->
            <style>
                #search-input {
                    height: 40px;
                    background-color: #f7f9fc;
                    box-shadow: none;
                }
                #search-input:focus {
                    background-color: #ffffff;
                    box-shadow: 0 0 0 3px rgba(13, 110, 253, 0.15);
                }
                .file-icon {
                    background-color: #f7f9fc;
                }
                .hover-card {
                    transition: all 0.2s ease;
                }
                .hover-card:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05) !important;
                }
                tr {
                    transition: background-color 0.2s ease;
                }
                tbody tr:hover {
                    background-color: #f7f9fc;
                }
                .table thead th {
                    font-weight: 500;
                    color: #6c757d;
                    letter-spacing: 0.5px;
                    text-transform: uppercase;
                    font-size: 0.75rem;
                }
                .rounded-pill {
                    padding-left: 15px;
                    padding-right: 15px;
                }
                .rounded-4 {
                    border-radius: 12px !important;
                }
                .btn {
                    font-weight: 500;
                }
            </style>

            <!-- Scripts -->
            <script type="text/javascript" src="/copier_company/static/src/js/PcloudDescargas.js"></script>
            <link rel="stylesheet" type="text/css" href="/copier_company/static/src/css/PcloudDescargas.css"/>
        </t>
    </template>
</odoo>