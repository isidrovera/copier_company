<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="pcloud_files_template" name="Descargas">
        <t t-call="website.layout">
            <div class="container-fluid">
                <div class="row mt-4 mb-4">
                    <div class="col-6 col-md-3">
                        <a href="/soporte/descargas?folder_id=0" class="btn btn-primary btn-block btn-md-inline">
                            <i class="fa fa-home"></i> Inicio
                        </a>
                        <t t-if="current_folder_id">
                            <a href="javascript:history.back()" class="btn btn-secondary btn-block btn-md-inline mt-2 mt-md-0">
                                <i class="fa fa-arrow-left"></i> Atrás
                            </a>
                        </t>
                    </div>
                    <div class="col-12 col-md-6 text-center mt-2 mt-md-0">
                        <form id="search-form" class="form-inline justify-content-center">
                            <input type="hidden" name="folder_id" t-att-value="current_folder_id"/>
                            <input type="text" id="search-input" class="form-control" placeholder="Buscar archivos..." t-att-value="request.params.get('search', '')"/>
                        </form>
                    </div>
                    <div class="col-6 col-md-3 text-right mt-2 mt-md-0">
                        <button id="list-view-btn" class="btn btn-outline-secondary view-btn" title="Vista de lista">
                            <img src="/copier_company/static/src/img/list-view-icon.png" alt="Lista" style="width: 24px; height: 24px;"/>
                        </button>
                        <button id="kanban-view-btn" class="btn btn-outline-secondary view-btn" title="Vista Kanban">
                            <img src="/copier_company/static/src/img/kanban-view-icon.png" alt="Kanban" style="width: 24px; height: 24px;"/>
                        </button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 table-responsive" id="list-view">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Tamaño</th>
                                    <th id="modified-header">Fecha de Modificación <i id="sort-icon" class="fa"></i></th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="files-list">
                                <t t-foreach="contents" t-as="item">
                                    <tr>
                                        <td>
                                            <img t-att-src="'/copier_company/static/src/img/' + item['icon']" alt="icon" style="width: 24px; height: 24px;"/>
                                            <t t-if="item['isfolder']">
                                                <a t-att-href="'/soporte/descargas?folder_id=%d&amp;view_mode=%s' % (item['id'], view_mode)">
                                                    <t t-esc="item['name']"/>
                                                </a>
                                            </t>
                                            <t t-else="">
                                                <t t-esc="item['name']"/>
                                            </t>
                                        </td>
                                        <td>
                                            <t t-esc="item['size']"/>
                                        </td>
                                        <td>
                                            <t t-esc="item['modified']"/>
                                        </td>
                                        <td>
                                            <t t-if="not item['isfolder']">
                                                <a t-att-href="'/soporte/descarga?file_id=%d' % item['id']" class="btn btn-outline-primary btn-block btn-md-inline" style="background-color: #28a745; color: white;">
                                                    <i class="fa fa-download"></i> Descargar
                                                </a>
                                            </t>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-12 d-none" id="kanban-view">
                        <div class="row">
                            <t t-foreach="contents" t-as="item">
                                <div class="col-6 col-md-4 col-lg-3 mb-4">
                                    <div class="card">
                                        <img class="card-img-top" t-att-src="'/copier_company/static/src/img/' + item['icon']" alt="icon" style="width: 48px; height: 48px; margin: auto;"/>
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                <t t-esc="item['name']"/>
                                            </h5>
                                            <p class="card-text">
                                                <strong>Modificado:</strong> <t t-esc="item['modified']"/>
                                            </p>
                                            <t t-if="item['isfolder']">
                                                <a t-att-href="'/soporte/descargas?folder_id=%d&amp;view_mode=%s' % (item['id'], view_mode)" class="btn btn-primary">Abrir</a>
                                            </t>
                                            <t t-if="not item['isfolder']">
                                                <a t-att-href="'/soporte/descarga?file_id=%d' % item['id']" class="btn btn-outline-primary" style="background-color: #28a745; color: white;">
                                                    <i class="fa fa-download"></i> Descargar
                                                </a>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
            <script type="text/javascript" src="/copier_company/static/src/js/PcloudDescargas.js"></script>
            <link rel="stylesheet" type="text/css" href="/copier_company/static/src/css/PcloudDescargas.css"/>
        </t>
    </template>
</odoo>
