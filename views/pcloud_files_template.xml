<odoo>
    <data>
        <template id="pcloud_files_template" name="pCloud File List">
            <t t-call="website.layout">
                <div class="container">
                    <h1 class="my-4">Archivos y Carpetas de Pcloud</h1>
                    <div class="list-group">
                        <t t-if="current_folder_id != 0">
                            <a t-attf-href="/pcloud/files?folder_id=#{0}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                <span>.. (Subir)</span>
                            </a>
                        </t>
                        <t t-foreach="contents" t-as="item">
                            <a t-if="item['isfolder']" t-attf-href="/pcloud/files?folder_id=#{item['id']}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                <span t-esc="item['name']"/> <span class="badge badge-primary badge-pill">(Folder)</span>
                            </a>
                            <div t-if="not item['isfolder']" class="list-group-item d-flex justify-content-between align-items-center">
                                <span t-esc="item['name']"/> <span class="badge badge-secondary badge-pill">(File)</span>
                                <a t-attf-href="/pcloud/download?file_id=#{item['id']}" class="btn btn-primary">Download</a>
                            </div>
                        </t>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
