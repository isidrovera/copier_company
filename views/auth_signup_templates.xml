<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="auth_signup_fields_extended" inherit_id="auth_signup.fields">
        <!-- Modificar el campo de email -->
        <xpath expr="//div[hasclass('field-login')]" position="replace">
            <div class="mb-3 field-login">
                <label for="login">Su correo electrónico</label>
                <input type="email" 
                       name="login" 
                       t-att-value="login" 
                       id="login" 
                       class="form-control form-control-sm"
                       pattern="[a-zA-Z0-9._%+-]+@(gmail|hotmail|outlook|yahoo)\.com$"
                       title="Use un correo de Gmail, Hotmail, Outlook o Yahoo"
                       required="required"
                       autocomplete="off"/>
            </div>
        </xpath>

        <xpath expr="//div[hasclass('field-name')]" position="replace">
            <div class="mb-3 field-name">
                <label for="name">Su nombre</label>
                <input type="text" 
                       name="name" 
                       t-att-value="name" 
                       id="name" 
                       class="form-control form-control-sm"
                       required="required"
                       minlength="3"
                       maxlength="50"
                       pattern="[A-Za-zÀ-ÿ\s]{3,50}"
                       title="El nombre debe contener solo letras y espacios (3-50 caracteres)"
                       placeholder="Por ejemplo, Juan Pérez"/>
            </div>
        </xpath>

        <!-- Añadir reCAPTCHA y términos antes del botón de registro -->
        <xpath expr="//button[@type='submit']" position="before">
            <div class="mb-3 field-recaptcha text-center">
                <div class="g-recaptcha" 
                     t-att-data-sitekey="request.env['ir.config_parameter'].sudo().get_param('recaptcha.site_key')"
                     data-callback="enableSignupSubmit">
                </div>
            </div>

            <div class="mb-3 field-terms">
                <div class="form-check">
                    <input type="checkbox" 
                           id="terms" 
                           name="terms" 
                           class="form-check-input" 
                           required="required"/>
                    <label class="form-check-label" for="terms">
                        Acepto los términos y condiciones
                    </label>
                </div>
            </div>
        </xpath>
    </template>
</odoo>