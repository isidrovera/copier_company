<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Página Nueva Sobre Nosotros -->
    <template id="copier_about_us_page" name="About Us Modern">
      <t t-call="website.layout">
        <div id="wrap">
          <style>
            @import url('https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css');
            .hero-about{background:linear-gradient(135deg,#0d6efd,#6610f2);min-height:60vh;color:white}
          </style>

          <!-- HERO -->
          <section class="hero-about">
            <div class="container py-5">
              <div class="row align-items-center min-vh-60">
                <div class="col-lg-8 py-5">
                  <h1 class="display-3 fw-bold mb-4">Sobre Copier Company</h1>
                  <p class="fs-4 mb-4">Empresa peruana líder en soluciones de impresión desde 2014</p>
                  
                  <div class="row g-3">
                    <div class="col-3">
                      <div class="bg-white bg-opacity-15 rounded p-3 text-center">
                        <h3 class="fw-bold">10+</h3>
                        <small>Años</small>
                      </div>
                    </div>
                    <div class="col-3">
                      <div class="bg-white bg-opacity-15 rounded p-3 text-center">
                        <h3 class="fw-bold">120+</h3>
                        <small>Clientes</small>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>

          <!-- MISIÓN -->
          <section class="py-5">
            <div class="container">
              <h2 class="text-center mb-5">Misión y Visión</h2>
              <div class="row g-4">
                <div class="col-md-6">
                  <div class="card h-100 shadow">
                    <div class="card-body p-4">
                      <h3>Misión</h3>
                      <p>Proporcionar soluciones de impresión de alta calidad para empresas peruanas.</p>
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="card h-100 shadow">
                    <div class="card-body p-4">
                      <h3>Visión</h3>
                      <p>Ser líderes en el mercado peruano de soluciones de impresión.</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>

        </div>
      </t>
    </template>
  </data>
</odoo>