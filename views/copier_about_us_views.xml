<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Template básico para probar herencia -->
    <template id="copier_about_us_basic" name="About Us Basic" inherit_id="website.aboutus">
      <xpath expr="//div[@id='wrap']" position="replace">
        <div id="wrap" class="oe_structure">
          <style>
            @import url('https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css');
            .about-hero{background:linear-gradient(135deg,#0d6efd 0%,#6610f2 100%);min-height:70vh}
          </style>

          <!-- HERO BÁSICO -->
          <section class="about-hero text-white">
            <div class="container py-5">
              <div class="row min-vh-70 align-items-center">
                <div class="col-lg-6 py-5">
                  <h1 class="display-3 fw-bold mb-4">Sobre Copier Company</h1>
                  <p class="fs-5 mb-4">Empresa peruana especializada en soluciones de impresión desde 2014.</p>
                  
                  <div class="row g-3 mb-4">
                    <div class="col-6 col-md-3">
                      <div class="bg-white bg-opacity-15 rounded-3 p-3 text-center">
                        <h3 class="fw-bold">10+</h3>
                        <small>Años</small>
                      </div>
                    </div>
                    <div class="col-6 col-md-3">
                      <div class="bg-white bg-opacity-15 rounded-3 p-3 text-center">
                        <h3 class="fw-bold">120+</h3>
                        <small>Clientes</small>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>

          <!-- MISIÓN Y VISIÓN -->
          <section class="py-5">
            <div class="container">
              <div class="text-center mb-5">
                <h2 class="display-5 fw-bold">Misión y Visión</h2>
              </div>
              
              <div class="row g-4">
                <div class="col-lg-6">
                  <div class="card h-100 border-0 shadow">
                    <div class="card-body p-4">
                      <h3 class="fw-bold mb-3">Nuestra Misión</h3>
                      <p class="text-muted">Proporcionar soluciones de impresión de alta calidad para empresas.</p>
                    </div>
                  </div>
                </div>
                
                <div class="col-lg-6">
                  <div class="card h-100 border-0 shadow">
                    <div class="card-body p-4">
                      <h3 class="fw-bold mb-3">Nuestra Visión</h3>
                      <p class="text-muted">Ser líderes en el mercado peruano de soluciones de impresión.</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>

        </div>
      </xpath>
    </template>
  </data>
</odoo>