<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">
  
    <record id="view_copier_stock_list" model="ir.ui.view">
        <field name="name">copier.stock.list</field>
        <field name="model">copier.stock</field>
        <field name="arch" type="xml">
          <list string="Stock de Máquinas">
            <field name="name"/>
            <field name="modelo_id"/>
            <field name="serie"/>
            <field name="state"/>
            <field name="reserved_by"/>
          </list>
        </field>
      </record>
    
      <record id="view_copier_stock_form" model="ir.ui.view">
        <field name="name">copier.stock.form</field>
        <field name="model">copier.stock</field>
        <field name="arch" type="xml">
          <form string="Stock de Máquina">
            <sheet>
              <group>
                <field name="name"/>
                <field name="modelo_id"/>
                <field name="serie"/>
                <field name="contometro_color"/>
                <field name="contometro_bn"/>
                <field name="reparacion"/>
                <field name="accesorios_ids" widget="many2many_tags"/>
              </group>
              <notebook>
                <page string="Checklist">
                  <field name="checklist_ids">
                    <list editable="bottom">
                      <field name="name"/>
                      <field name="done"/>
                    </list>
                  </field>
                </page>
                <page string="Reserva / Venta">
                  <group>
                    <field name="state" readonly="1"/>
                    <field name="reserved_by"/>
                    <field name="reserved_date"/>
                    <field name="payment_proof" filename="filename" widget="binary"/>
                    <field name="sold_date"/>
                  </group>
                </page>
              </notebook>
              <footer>
                <!-- Solo visible en state = available -->
                <button name="action_reserve" type="object" string="Reservar" invisible="state != 'available'"/>
                <!-- Solo visible en state = reserved -->
                <button name="action_confirm_sale" type="object" string="Confirmar Venta" invisible="state != 'reserved'"/>
                <button name="action_cancel_reservation" type="object" string="Cancelar Reserva" invisible="state != 'reserved'"/>
                <button string="Cerrar" class="btn-secondary" special="cancel"/>
              </footer>
            </sheet>
          </form>
        </field>
      </record>
    
      <record id="action_copier_stock" model="ir.actions.act_window">
        <field name="name">Stock de Máquinas</field>
        <field name="res_model">copier.stock</field>
        <field name="view_mode">list,form</field>
      </record>
    
      <menuitem id="menu_copier_root" name="Stock" parent="copier_company.menu_root" action="action_copier_stock" sequence="40"/>

  </data>
</odoo>
  