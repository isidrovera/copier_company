<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_downloads" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.downloads</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Permisos" name="permissions">
                    <group>
                        <field name="allow_downloads"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>