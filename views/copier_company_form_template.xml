<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="copier_company_form_template" name="Formulario de Cotizaciones">
        <t t-call="website.layout">
            <div class="oe_structure"/>
            <div class="container">
                <div id="copier_form_container" class="container-form mt-5 mb-5">
                    <h2 class="text-center">Formulario de Información</h2>
                    <form action="/copier_company/submit" method="POST" class="mt-3">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="tipo_identificacion">Tipo de Identificación</label>
                                    <select class="form-control" id="tipo_identificacion" name="tipo_identificacion">
                                        <!-- Opciones generadas dinámicamente -->
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="identificacion">Número de Identificación</label>
                                    <input type="text" class="form-control" id="identificacion" name="identificacion" required/>
                                </div>
                                <div class="form-group">
                                    <label for="cliente_name">Nombre del Cliente</label>
                                    <input type="text" class="form-control" id="cliente_name" name="cliente_name" required/>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="name">Máquina</label>
                                    <select class="form-control" id="name" name="name">
                                        <!-- Opciones generadas dinámicamente -->
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="tipo">Tipo de impresora</label>
                                    <select class="form-control" id="tipo" name="tipo">
                                        <option value="monocroma">Blanco y negro</option>
                                        <option value="color">Color</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary mt-4">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </t>
        <!-- Cargar CSS solo en esta página -->
        <t t-if="request.httprequest.path.startswith('/copier_company/form')">
            <link rel="stylesheet" href="/copier_company/static/src/css/cotizaciones.css"/>
        </t>
        <script src="/copier_company/static/src/js/custom_script.js"></script>
    </template>
</odoo>
