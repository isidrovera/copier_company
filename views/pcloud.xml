<odoo>
    <data>
        <record model="ir.ui.view" id="pcloud_files_tree_view">
            <field name="name">Pcloud Files Tree View</field>
            <field name="model">pcloud.files</field>
            <field name="arch" type="xml">
                <data>
                    <tree>
                        <field name="name"/>
                        <field name="size"/>
                    </tree>
                    <template>
                        <t t-name="pcloud_files_tree_view_script">
                            <script>
                                console.log('Iniciando la vista Pcloud Files');
                                rpc.query({
                                    model: 'pcloud.files',
                                    method: 'get_files',
                                }).then(function(result) {
                                    console.log('Registros recuperados: ', result);
                                });
                            </script>
                        </t>
                    </template>
                </data>
            </field>
        </record>
    </data>
</odoo>
