<odoo>
    <!-- Vista del Formulario para Configuración de pCloud -->
    <record id="view_form_configuracion_pcloud" model="ir.ui.view">
        <field name="name">configuracion.pcloud.form</field>
        <field name="model">configuracion.pcloud</field>
        <field name="arch" type="xml">
            <form string="Configuración pCloud">
                <header>
                        <button string="Conectar" type="object" name="conectar_pcloud" class="oe_highlight"/>
                        
                </header>
                <sheet>
                    
                    <group>
                        <field name="api_key"/>
                        <field name="usuario"/>
                        <field name="password"/>
                        <field name="token" readonly="1"/>
                    </group>
                    <footer>
                        <button string="Conectar" type="object" name="conectar_pcloud" class="oe_highlight"/>
                        
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de Árbol (Tree View) para Configuración de pCloud -->
    <record id="configuracion_pcloud_view_tree" model="ir.ui.view">
        <field name="name">configuracion_pcloud.view.tree</field>
        <field name="model">configuracion.pcloud</field>
        <field name="arch" type="xml">
            <tree string="Configuraciones pCloud">
                <field name="api_key"/>
                <field name="usuario"/>
                <!-- No es recomendable mostrar contraseñas en vistas de tipo tree -->
                <field name="token"/>
                <!-- Botones en vistas tree no son comunes, considera removerlos -->
            </tree>
        </field>
    </record>

    <!-- Acciones y Menú -->
    <record id="action_configuracion_pcloud" model="ir.actions.act_window">
        <field name="name">Configuración pCloud</field>
        <field name="res_model">configuracion.pcloud</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="configuracion_pcloud_view_tree"/>
    </record>

    <menuitem id="menu_configuracion_pcloud"
              name="pCloud"
              action="action_configuracion_pcloud"
              parent="copier_company.menu_root"/>
</odoo>
