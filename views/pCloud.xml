<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Definición de la vista de formulario -->
        <record id="view_pcloud_config_form" model="ir.ui.view">
            <field name="name">pcloud.config.form</field>
            <field name="model">pcloud.config</field>
            <field name="arch" type="xml">
                <form string="pCloud Configuration">
                    <header>
                        <button string="Connect" type="object" name="action_connect_to_pcloud"  class="btn-primary"/>
                        <button string="Disconnect" type="object"  name="action_disconnect_from_pcloud" class="btn-secondary"/>
                    </header>                     
                    <sheet>
                        <!-- Campos a mostrar en el formulario -->
                        <group>
                            <field name="name"/>
                            <field name="client_id"/>
                            <field name="client_secret"/>
                            <field name="redirect_uri"/>
                            <field name="access_token" readonly="1"/>
                            <field name="hostname" readonly="1"/>
                        </group>                        
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Definición de la vista de árbol -->
        <record id="view_pcloud_config_tree" model="ir.ui.view">
            <field name="name">pcloud.config.tree</field>
            <field name="model">pcloud.config</field>
            <field name="arch" type="xml">
                <list string="pCloud Configurations">
                    <field name="name"/>
                    <field name="client_id"/>
                    <field name="client_secret"/>
                    <field name="redirect_uri"/>
                    <field name="access_token"/>
                    <field name="hostname"/>
                </list>
            </field>
        </record>
        <record id="view_pcloud_config_form_action" model="ir.actions.act_window">
            <field name="name">pCloud Configuration</field>
            <field name="res_model">pcloud.config</field>
            <field name="view_mode">list,form</field>            
        </record>

        <!-- Definición del menú -->
        <menuitem id="menu_pcloud_config" name="pCloud Configuration" sequence="30" parent="menu_ajustes" action="view_pcloud_config_form_action"/>
      
    </data>
</odoo>
