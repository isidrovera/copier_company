<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Definición de la vista de formulario -->
        <record id="view_pcloud_config_form" model="ir.ui.view">
            <field name="name">pcloud.config.form</field>
            <field name="model">pcloud.config</field>
            <field name="arch" type="xml">
                <form string="pCloud Configuration">
                    <sheet>
                        <!-- Campos a mostrar en el formulario -->
                        <group>
                            <field name="name"/>
                            <field name="client_id"/>
                            <field name="client_secret"/>
                            <field name="access_token" readonly="1"/>
                        </group>
                        <!-- Botones de acción -->
                        <footer>
                            <button name="action_connect" string="Connect" type="object" class="btn-primary"/>
                            <button name="action_disconnect" string="Disconnect" type="object" class="btn-secondary"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Definición de la vista de árbol -->
        <record id="view_pcloud_config_tree" model="ir.ui.view">
            <field name="name">pcloud.config.tree</field>
            <field name="model">pcloud.config</field>
            <field name="arch" type="xml">
                <tree string="pCloud Configurations">
                    <field name="name"/>
                    <field name="client_id"/>
                    <field name="client_secret"/>
                    <field name="access_token"/>
                </tree>
            </field>
        </record>
        <record id="view_pcloud_config_form_action" model="ir.actions.act_window">
            <field name="name">pCloud Configuration</field>
            <field name="res_model">pcloud.config</field>
            <field name="view_mode">form, tree</field>            
        </record>

        <!-- Definición del menú -->
        <menuitem id="menu_pcloud_config" name="pCloud Configuration" sequence="30" parent="copier_company.menu_root" action="view_pcloud_config_form_action"/>
      
    </data>
</odoo>
