<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_security_control_form" model="ir.ui.view">
            <field name="name">security.control.form</field>
            <field name="model">security.control</field>
            <field name="arch" type="xml">
                <form string="Control de Seguridad">
                    <header>
                        <button name="apply_security_settings" 
                                string="Aplicar Configuración" 
                                type="object" 
                                class="oe_highlight"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="active"/>
                        </group>
                        <notebook>
                            <page string="Control Base de Datos" name="db_control">
                                <group>
                                    <field name="hide_db_selector"/>
                                    <field name="allowed_db_ips" 
                                           invisible="hide_db_selector, '=', True"
                                           placeholder="Una IP por línea"
                                           widget="text_emph"/>
                                </group>
                            </page>
                            <page string="Control de Login" name="login_control">
                                <group>
                                    <group string="Configuración General">
                                        <field name="max_login_attempts"/>
                                        <field name="block_time"/>
                                        <field name="allowed_login_ips"
                                               placeholder="Una IP por línea"
                                               widget="text_emph"/>
                                    </group>
                                    <group string="Visibilidad">
                                        <field name="hide_public_signup"/>
                                        <field name="hide_password_reset"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Usuarios Públicos" name="public_users">
                                <group>
                                    <field name="allow_public_signup"
                                           invisible="hide_public_signup, '=', True"/>
                                    <field name="public_signup_template"
                                           invisible="allow_public_signup, '=', False"
                                                 required="allow_public_signup, '=', True"/>
                                    <field name="password_reset_expiry"
                                           invisible="hide_password_reset, '=', True"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_security_control_tree" model="ir.ui.view">
            <field name="name">security.control.tree</field>
            <field name="model">security.control</field>
            <field name="arch" type="xml">
                <tree string="Controles de Seguridad">
                    <field name="name"/>
                    <field name="active"/>
                    <field name="hide_db_selector"/>
                    <field name="hide_public_signup"/>
                    <field name="hide_password_reset"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_security_control_search" model="ir.ui.view">
            <field name="name">security.control.search</field>
            <field name="model">security.control</field>
            <field name="arch" type="xml">
                <search string="Buscar Control de Seguridad">
                    <field name="name"/>
                    <filter string="Activos" name="active" domain="[('active', '=', True)]"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_security_control" model="ir.actions.act_window">
            <field name="name">Control de Seguridad</field>
            <field name="res_model">security.control</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cree su primera configuración de seguridad
                </p>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_security_control"
                  name="Control de Seguridad"
                  action="action_security_control"
                  parent="menu_ajustes"
                  
                  groups="base.group_system"/>
    </data>
</odoo>