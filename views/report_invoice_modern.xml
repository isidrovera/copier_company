<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Template moderno usando SOLO campos nativos de Odoo -->
    <template id="report_invoice_document_modern" inherit_id="account.report_invoice_document" priority="100">
        
        <!-- Reemplazar todo el contenido -->
        <xpath expr="//t[@t-call='web.external_layout']/*" position="replace">
            
            <t t-set="o" t-value="o.with_context(lang=lang)"/>
            
            <div class="page" style="font-family: Arial, sans-serif; font-size: 12px;">
                
                <!-- HEADER: Empresa y Documento -->
                <table class="table table-borderless" style="margin-bottom: 20px;">
                    <tr>
                        <!-- Logo y datos empresa -->
                        <td style="width: 60%; vertical-align: top;">
                            <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" 
                                 style="max-height: 60px; margin-bottom: 10px;"/>
                            <div style="font-size: 14px; font-weight: bold; margin-bottom: 5px;">
                                <span t-field="o.company_id.name"/>
                            </div>
                            <div style="font-size: 11px; line-height: 1.5;">
                                <div t-field="o.company_id.partner_id" 
                                     t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                                <div t-if="o.company_id.vat">RUC: <span t-field="o.company_id.vat"/></div>
                                <div t-if="o.company_id.phone">Telf: <span t-field="o.company_id.phone"/></div>
                                <div t-if="o.company_id.email"><span t-field="o.company_id.email"/></div>
                            </div>
                        </td>
                        
                        <!-- Cuadro del documento -->
                        <td style="width: 40%; text-align: center; vertical-align: top;">
                            <div style="border: 3px solid #4a5568; padding: 15px; border-radius: 5px;">
                                <div style="font-size: 11px; font-weight: bold; color: #4a5568; margin-bottom: 5px;">
                                    RUC <span t-field="o.company_id.vat"/>
                                </div>
                                <div style="font-size: 18px; font-weight: bold; margin: 10px 0;">
                                    <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">FACTURA ELECTRÓNICA</span>
                                    <span t-elif="o.move_type == 'out_refund'">NOTA DE CRÉDITO</span>
                                    <span t-elif="o.move_type == 'in_invoice'">FACTURA PROVEEDOR</span>
                                    <span t-elif="o.state == 'draft'">BORRADOR</span>
                                    <span t-elif="o.state == 'cancel'">ANULADA</span>
                                </div>
                                <div style="font-size: 14px; font-weight: bold; color: #4a5568;">
                                    No. <span t-field="o.name"/>
                                </div>
                            </div>
                        </td>
                    </tr>
                </table>

                <!-- DATOS DEL CLIENTE -->
                <table class="table table-sm table-bordered" style="margin-bottom: 15px;">
                    <tr>
                        <td style="width: 20%; background: #f5f5f5; padding: 8px; font-weight: bold;">SEÑOR(ES)</td>
                        <td style="width: 30%; padding: 8px;"><span t-field="o.partner_id.name"/></td>
                        <td style="width: 25%; background: #f5f5f5; padding: 8px; font-weight: bold;">FECHA DE EMISIÓN</td>
                        <td style="width: 25%; padding: 8px;"><span t-field="o.invoice_date"/></td>
                    </tr>
                    <tr>
                        <td style="background: #f5f5f5; padding: 8px; font-weight: bold;">DIRECCIÓN</td>
                        <td style="padding: 8px;">
                            <span t-field="o.partner_id" 
                                  t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                        </td>
                        <td style="background: #f5f5f5; padding: 8px; font-weight: bold;">VENCIMIENTO</td>
                        <td style="padding: 8px;"><span t-field="o.invoice_date_due"/></td>
                    </tr>
                    <tr>
                        <td style="background: #f5f5f5; padding: 8px; font-weight: bold;">TELÉFONO</td>
                        <td style="padding: 8px;"><span t-field="o.partner_id.phone"/></td>
                        <td style="background: #f5f5f5; padding: 8px; font-weight: bold;">RUC/DNI</td>
                        <td style="padding: 8px;"><span t-field="o.partner_id.vat"/></td>
                    </tr>
                </table>

                <!-- TABLA DE PRODUCTOS -->
                <table class="table table-sm table-bordered">
                    <thead style="background: #4a5568; color: white;">
                        <tr>
                            <th style="padding: 10px; text-align: center;">Cant.</th>
                            <th style="padding: 10px;">Descripción</th>
                            <th style="padding: 10px; text-align: right;">P. Unit.</th>
                            <th style="padding: 10px; text-align: right;">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                        <t t-foreach="lines" t-as="line">
                            <t t-if="line.display_type == 'product'">
                                <tr>
                                    <td style="padding: 8px; text-align: center;">
                                        <span t-field="line.quantity"/>
                                    </td>
                                    <td style="padding: 8px;">
                                        <span t-field="line.name"/>
                                    </td>
                                    <td style="padding: 8px; text-align: right;">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td style="padding: 8px; text-align: right; font-weight: bold;">
                                        <span t-field="line.price_subtotal"/>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <!-- TOTALES -->
                <div style="float: right; width: 300px; margin-top: 20px;">
                    <table class="table table-sm table-bordered">
                        <tr>
                            <td style="padding: 8px; text-align: right;">Subtotal:</td>
                            <td style="padding: 8px; text-align: right; font-weight: bold;">
                                <span t-field="o.amount_untaxed"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="padding: 8px; text-align: right;">IGV (18%):</td>
                            <td style="padding: 8px; text-align: right; font-weight: bold;">
                                <span t-field="o.amount_tax"/>
                            </td>
                        </tr>
                        <tr style="background: #4a5568; color: white;">
                            <td style="padding: 12px; text-align: right; font-weight: bold; font-size: 14px;">TOTAL:</td>
                            <td style="padding: 12px; text-align: right; font-weight: bold; font-size: 16px;">
                                <span t-field="o.amount_total"/>
                            </td>
                        </tr>
                    </table>
                </div>

                <div style="clear: both;"></div>

                <!-- MONTO EN PALABRAS -->
                <div t-if="o.amount_total_words" 
                     style="margin-top: 20px; padding: 12px; background: #f5f5f5; border-left: 4px solid #4a5568;">
                    <strong>SON:</strong> <span t-field="o.amount_total_words"/>
                </div>

                <!-- OBSERVACIONES -->
                <div t-if="o.narration" 
                     style="margin-top: 20px; padding: 12px; background: #f9f9f9; border: 1px solid #ddd;">
                    <strong>Observaciones:</strong>
                    <div style="margin-top: 8px;"><span t-field="o.narration"/></div>
                </div>

                <!-- FOOTER -->
                <div style="margin-top: 40px; text-align: center; font-size: 10px; color: #666;">
                    <div style="border-top: 1px solid #ddd; padding-top: 15px;">
                        Representación impresa de factura electrónica
                    </div>
                </div>

            </div>
            
        </xpath>
        
    </template>

</odoo>