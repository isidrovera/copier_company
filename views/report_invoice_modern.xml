<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Reemplazar completamente el reporte original -->
    <template id="report_invoice_document" inherit_id="account.report_invoice_document" priority="100">
        
        <!-- Reemplazar TODO dentro de external_layout -->
        <xpath expr="//div[@class='row']" position="replace"/>
        <xpath expr="//div[@class='clearfix invoice_main']" position="replace">
            
            <div style="font-family: Arial, sans-serif; font-size: 12px; padding: 20px;">
                
                <!-- HEADER -->
                <table style="width: 100%; margin-bottom: 25px; border-collapse: collapse;">
                    <tr>
                        <!-- Empresa -->
                        <td style="width: 58%; vertical-align: top;">
                            <div style="display: flex; gap: 12px; align-items: start;">
                                <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" 
                                     style="max-height: 55px; max-width: 100px;"/>
                                <div>
                                    <div style="font-size: 15px; font-weight: bold; margin-bottom: 6px;">
                                        <span t-field="o.company_id.name"/>
                                    </div>
                                    <div style="font-size: 10px; line-height: 1.5; color: #333;">
                                        <div t-field="o.company_id.partner_id" 
                                             t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                                        <div>RUC: <span t-field="o.company_id.vat"/></div>
                                        <div t-if="o.company_id.phone">Telf: <span t-field="o.company_id.phone"/></div>
                                        <div t-if="o.company_id.email"><span t-field="o.company_id.email"/></div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        
                        <!-- Cuadro Documento -->
                        <td style="width: 42%; text-align: center; vertical-align: top;">
                            <div style="border: 3px solid #555; padding: 12px; border-radius: 4px; display: inline-block; min-width: 250px;">
                                <div style="font-size: 10px; font-weight: bold; color: #555; margin-bottom: 4px;">
                                    RUC <span t-field="o.company_id.vat"/>
                                </div>
                                <div style="font-size: 16px; font-weight: bold; margin: 8px 0; color: #000;">
                                    <span t-if="o.move_type == 'out_invoice'">FACTURA ELECTRÓNICA</span>
                                    <span t-elif="o.move_type == 'out_refund'">NOTA DE CRÉDITO</span>
                                    <span t-elif="o.move_type == 'in_invoice'">FACTURA PROVEEDOR</span>
                                </div>
                                <div style="font-size: 13px; font-weight: bold; color: #555;">
                                    No. <span t-field="o.name"/>
                                </div>
                            </div>
                        </td>
                    </tr>
                </table>

                <!-- INFO CLIENTE -->
                <table style="width: 100%; margin-bottom: 15px; border-collapse: collapse; border: 1px solid #ccc;">
                    <tr>
                        <td style="width: 18%; background: #f5f5f5; padding: 7px; border: 1px solid #ccc; font-weight: bold; font-size: 10px;">SEÑOR(ES)</td>
                        <td style="width: 32%; padding: 7px; border: 1px solid #ccc; font-size: 10px;"><span t-field="o.partner_id.name"/></td>
                        <td style="width: 22%; background: #f5f5f5; padding: 7px; border: 1px solid #ccc; font-weight: bold; font-size: 10px;">FECHA DE EMISIÓN</td>
                        <td style="width: 28%; padding: 7px; border: 1px solid #ccc; font-size: 10px;"><span t-field="o.invoice_date" t-options='{"format": "dd/MM/yyyy"}'/></td>
                    </tr>
                    <tr>
                        <td style="background: #f5f5f5; padding: 7px; border: 1px solid #ccc; font-weight: bold; font-size: 10px;">DIRECCIÓN</td>
                        <td style="padding: 7px; border: 1px solid #ccc; font-size: 10px;">
                            <span t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                        </td>
                        <td style="background: #f5f5f5; padding: 7px; border: 1px solid #ccc; font-weight: bold; font-size: 10px;">VENCIMIENTO</td>
                        <td style="padding: 7px; border: 1px solid #ccc; font-size: 10px;"><span t-field="o.invoice_date_due" t-options='{"format": "dd/MM/yyyy"}'/></td>
                    </tr>
                    <tr>
                        <td style="background: #f5f5f5; padding: 7px; border: 1px solid #ccc; font-weight: bold; font-size: 10px;">TELÉFONO</td>
                        <td style="padding: 7px; border: 1px solid #ccc; font-size: 10px;"><span t-field="o.partner_id.phone"/></td>
                        <td style="background: #f5f5f5; padding: 7px; border: 1px solid #ccc; font-weight: bold; font-size: 10px;">RUC/DNI</td>
                        <td style="padding: 7px; border: 1px solid #ccc; font-size: 10px;"><span t-field="o.partner_id.vat"/></td>
                    </tr>
                </table>

                <!-- TABLA PRODUCTOS -->
                <table style="width: 100%; margin-bottom: 15px; border-collapse: collapse; border: 1px solid #ccc;">
                    <thead>
                        <tr style="background: #555; color: white;">
                            <th style="padding: 9px; text-align: center; border: 1px solid #555; font-size: 11px;">Cant.</th>
                            <th style="padding: 9px; text-align: left; border: 1px solid #555; font-size: 11px;">Descripción</th>
                            <th style="padding: 9px; text-align: right; border: 1px solid #555; font-size: 11px;">P. Unit.</th>
                            <th style="padding: 9px; text-align: right; border: 1px solid #555; font-size: 11px;">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)" t-as="line">
                            <t t-if="line.display_type == 'product'">
                                <tr>
                                    <td style="padding: 8px; text-align: center; border: 1px solid #ddd; font-size: 10px;">
                                        <span t-esc="'%.2f' % line.quantity"/>
                                    </td>
                                    <td style="padding: 8px; border: 1px solid #ddd; font-size: 10px;">
                                        <span t-field="line.name"/>
                                    </td>
                                    <td style="padding: 8px; text-align: right; border: 1px solid #ddd; font-size: 10px;">
                                        <span t-esc="'%.2f' % line.price_unit"/>
                                    </td>
                                    <td style="padding: 8px; text-align: right; border: 1px solid #ddd; font-size: 10px; font-weight: bold;">
                                        <span t-field="line.price_subtotal"/>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <!-- MONTO EN PALABRAS -->
                <div style="padding: 10px; background: #f0f0f0; border-left: 4px solid #555; margin-bottom: 15px; font-size: 11px;">
                    <strong>SON:</strong> <span t-field="o.amount_total_words"/>
                </div>

                <!-- LAYOUT: SPOT + TOTALES -->
                <div style="display: flex; gap: 20px; align-items: flex-start;">
                    
                    <!-- SPOT (Izquierda) -->
                    <div style="flex: 1;">
                        <div t-if="o.l10n_pe_edi_operation_type == '1001'" 
                             style="border: 2px solid #f90; background: #fffbf0; padding: 12px; border-radius: 4px; margin-bottom: 15px;">
                            <div style="font-weight: bold; font-size: 11px; margin-bottom: 8px; color: #c60;">
                                Operación sujeta al Sistema de Pago de Obligaciones Tributarias - SPOT
                            </div>
                            <table style="width: 100%; font-size: 10px; border-collapse: collapse;">
                                <tr>
                                    <td style="padding: 4px; border: 1px solid #ffc; background: #fff;">Código bien o servicio:</td>
                                    <td style="padding: 4px; border: 1px solid #ffc; background: #fff; font-weight: bold;">019</td>
                                </tr>
                                <tr>
                                    <td style="padding: 4px; border: 1px solid #ffc; background: #fff;">Nº cuenta Banco de la Nación:</td>
                                    <td style="padding: 4px; border: 1px solid #ffc; background: #fff; font-weight: bold;">
                                        <span t-if="o.partner_bank_id" t-field="o.partner_bank_id.acc_number"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 4px; border: 1px solid #ffc; background: #fff;">Porcentaje de detracción:</td>
                                    <td style="padding: 4px; border: 1px solid #ffc; background: #fff; font-weight: bold;">10.0%</td>
                                </tr>
                                <tr>
                                    <td style="padding: 4px; border: 1px solid #ffc; background: #fff;">Monto de detracción:</td>
                                    <td style="padding: 4px; border: 1px solid #ffc; background: #fff; font-weight: bold;">
                                        <span t-esc="'S/ %.2f' % (o.amount_total * 0.10)"/>
                                    </td>
                                </tr>
                            </table>
                        </div>

                        <!-- Términos de pago -->
                        <div t-if="o.invoice_payment_term_id" style="font-size: 10px; margin-bottom: 10px;">
                            <strong>Términos de pago:</strong> <span t-field="o.invoice_payment_term_id.name"/>
                        </div>
                        <div t-if="o.payment_reference" style="font-size: 10px; margin-bottom: 10px;">
                            <strong>Comunicación del pago:</strong> <span t-field="o.payment_reference"/>
                        </div>
                        <div t-if="o.partner_bank_id" style="font-size: 10px;">
                            en esta cuenta <strong><span t-field="o.partner_bank_id.acc_number"/> - <span t-field="o.partner_bank_id.bank_id.name"/></strong>
                        </div>
                    </div>

                    <!-- TOTALES (Derecha) -->
                    <div style="width: 280px; flex-shrink: 0;">
                        <table style="width: 100%; border-collapse: collapse; font-size: 11px;">
                            <tr>
                                <td style="padding: 7px; text-align: right; border: 1px solid #ccc;">Subtotal:</td>
                                <td style="padding: 7px; text-align: right; border: 1px solid #ccc; font-weight: bold;">
                                    <span t-field="o.amount_untaxed"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 7px; text-align: right; border: 1px solid #ccc;">IGV (18%):</td>
                                <td style="padding: 7px; text-align: right; border: 1px solid #ccc; font-weight: bold;">
                                    <span t-field="o.amount_tax"/>
                                </td>
                            </tr>
                            <tr style="background: #555; color: white;">
                                <td style="padding: 10px; text-align: right; font-weight: bold; font-size: 12px;">TOTAL:</td>
                                <td style="padding: 10px; text-align: right; font-weight: bold; font-size: 14px;">
                                    <span t-field="o.amount_total"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                <!-- OBSERVACIONES -->
                <div t-if="o.narration" style="margin-top: 20px; padding: 10px; background: #fafafa; border: 1px solid #ddd; font-size: 10px;">
                    <strong>Observaciones:</strong><br/>
                    <span t-field="o.narration"/>
                </div>

                <!-- FOOTER -->
                <div style="margin-top: 30px; padding-top: 15px; border-top: 1px solid #ccc; text-align: center; font-size: 9px; color: #666;">
                    Representación impresa de factura electrónica
                </div>

            </div>
            
        </xpath>
        
    </template>

</odoo>