<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Heredar el reporte peruano solo para agregar clases CSS -->
    <template id="report_invoice_document_modern" inherit_id="l10n_pe_edi.report_invoice_document" name="Modern Invoice Styles">
        
        <!-- Agregar clase wrapper al contenedor principal -->
        <xpath expr="//t[@t-call='web.external_layout']" position="attributes">
            <attribute name="t-attf-class">modern-invoice-styles</attribute>
        </xpath>

        <!-- Agregar clase al header de direcciones -->
        <xpath expr="//div[@class='row'][1]" position="attributes">
            <attribute name="class">row modern-addresses-section</attribute>
        </xpath>

        <!-- Agregar clase a la sección de información -->
        <xpath expr="//div[@id='informations']" position="attributes">
            <attribute name="class">row mb-4 modern-info-grid</attribute>
        </xpath>

        <!-- Agregar clase a la tabla -->
        <xpath expr="//table[@name='invoice_line_table']" position="attributes">
            <attribute name="class">o_has_total_table table o_main_table table-borderless modern-invoice-table</attribute>
        </xpath>

        <!-- Agregar clase al área de totales -->
        <xpath expr="//div[@id='right-elements']" position="attributes">
            <attribute name="class">col-5 ms-5 d-inline-block float-end modern-totals-section</attribute>
        </xpath>

        <!-- Agregar clase a la sección de pago -->
        <xpath expr="//div[@id='payment_term']" position="attributes">
            <attribute name="class">clearfix overflow-auto modern-payment-section</attribute>
        </xpath>

        <!-- Agregar clase al QR code -->
        <xpath expr="//div[@id='qrcode']" position="attributes">
            <attribute name="class">d-flex mb-3 avoid-page-break-inside modern-qr-section</attribute>
        </xpath>

        <!-- Agregar clase a la sección SPOT si existe -->
        <xpath expr="//div[@id='l10n_pe_spot']" position="attributes">
            <attribute name="class">col-6 mb-3 modern-spot-section</attribute>
        </xpath>

    </template>

</odoo>