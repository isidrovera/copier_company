<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Template completamente nuevo basado en el peruano pero con diseño moderno -->
    <template id="report_invoice_document_modern" inherit_id="account.report_invoice_document" priority="100">
        
        <!-- Reemplazar todo el contenido después de external_layout -->
        <xpath expr="//t[@t-call='web.external_layout']/*" position="replace">
            
            <t t-set="o" t-value="o.with_context(lang=lang)"/>
            <t t-set="forced_vat" t-value="o.fiscal_position_id.foreign_vat"/>
            
            <!-- Variables para evitar errores si no existen los métodos -->
            <t t-set="extra_edi_vals" t-value="{}"/>
            <t t-set="spot" t-value="{}"/>
            <t t-try="">
                <t t-set="extra_edi_vals" t-value="o._l10n_pe_edi_get_extra_report_values()"/>
                <t t-set="spot" t-value="o._l10n_pe_edi_get_spot()"/>
            </t>
            <t t-catch=""/>
            
            
            <div class="modern-invoice-container">
                
                <!-- HEADER CON INFORMACIÓN DE EMPRESA Y CLIENTE -->
                <div class="modern-header-section">
                    <table class="table-borderless w-100">
                        <tr>
                            <!-- Columna Izquierda: Empresa -->
                            <td class="company-box" style="width: 60%; vertical-align: top;">
                                <div style="display: flex; gap: 15px;">
                                    <div t-if="o.company_id.logo" style="flex-shrink: 0;">
                                        <img t-att-src="image_data_uri(o.company_id.logo)" 
                                             style="max-height: 60px; max-width: 120px;"/>
                                    </div>
                                    <div>
                                        <h2 style="margin: 0 0 8px 0; font-size: 18px; font-weight: 700; color: #1a202c;">
                                            <span t-field="o.company_id.name"/>
                                        </h2>
                                        <div style="font-size: 11px; color: #4a5568; line-height: 1.6;">
                                            <div t-field="o.company_id.partner_id" 
                                                 t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                                            <div t-if="o.company_id.vat">
                                                <strong>RUC:</strong> <span t-field="o.company_id.vat"/>
                                            </div>
                                            <div t-if="o.company_id.phone">
                                                <strong>Telf:</strong> <span t-field="o.company_id.phone"/>
                                            </div>
                                            <div t-if="o.company_id.email">
                                                <span t-field="o.company_id.email"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            
                            <!-- Columna Derecha: Tipo de Documento -->
                            <td class="document-box" style="width: 40%; vertical-align: top; text-align: center;">
                                <div style="border: 3px solid #667eea; border-radius: 8px; padding: 15px; background: #f8f9fa;">
                                    <div style="color: #667eea; font-size: 12px; font-weight: 700; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 5px;">
                                        RUC <span t-field="o.company_id.vat"/>
                                    </div>
                                    <h1 style="margin: 8px 0; font-size: 20px; font-weight: 800; color: #1a202c;">
                                        <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'" 
                                              t-out="o.l10n_latam_document_type_id.report_name if o.l10n_latam_document_type_id else 'FACTURA ELECTRÓNICA'"/>
                                        <span t-elif="o.move_type == 'out_refund' and o.state == 'posted'"
                                              t-out="o.l10n_latam_document_type_id.report_name if o.l10n_latam_document_type_id else 'NOTA DE CRÉDITO'"/>
                                        <span t-elif="o.state == 'draft'">BORRADOR</span>
                                        <span t-elif="o.state == 'cancel'">ANULADA</span>
                                    </h1>
                                    <div style="font-size: 16px; font-weight: 700; color: #667eea; margin-top: 5px;">
                                        No. <span t-if="o.name" t-out="o.name.replace(' ', '')"/>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>

                <!-- INFORMACIÓN DEL CLIENTE Y FECHAS -->
                <div class="client-info-section" style="margin: 20px 0;">
                    <table class="table table-sm table-bordered" style="margin-bottom: 20px;">
                        <tr>
                            <td colspan="2" style="background: #f8f9fa; padding: 8px; border: 1px solid #e2e8f0;">
                                <strong style="color: #667eea;">SEÑOR(ES)</strong>
                            </td>
                            <td style="padding: 8px; border: 1px solid #e2e8f0;">
                                <span t-field="o.partner_id.name" style="font-weight: 600;"/>
                            </td>
                            <td style="background: #f8f9fa; padding: 8px; border: 1px solid #e2e8f0;">
                                <strong>FECHA DE EMISIÓN (DD/MM/AA)</strong>
                            </td>
                            <td style="padding: 8px; border: 1px solid #e2e8f0;">
                                <span t-field="o.invoice_date" t-options='{"format": "dd/MM/yyyy"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" style="background: #f8f9fa; padding: 8px; border: 1px solid #e2e8f0;">
                                <strong style="color: #667eea;">DIRECCIÓN</strong>
                            </td>
                            <td style="padding: 8px; border: 1px solid #e2e8f0;">
                                <span t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                            </td>
                            <td style="background: #f8f9fa; padding: 8px; border: 1px solid #e2e8f0;">
                                <strong>FORMA DE PAGO</strong>
                            </td>
                            <td style="padding: 8px; border: 1px solid #e2e8f0;">
                                <span t-if="o.invoice_payment_term_id" t-field="o.invoice_payment_term_id.name"/>
                                <span t-else="">Contado</span>
                            </td>
                        </tr>
                        <tr>
                            <td style="background: #f8f9fa; padding: 8px; border: 1px solid #e2e8f0; width: 15%;">
                                <strong style="color: #667eea;">TELÉFONO</strong>
                            </td>
                            <td style="padding: 8px; border: 1px solid #e2e8f0; width: 20%;">
                                <span t-field="o.partner_id.phone"/>
                            </td>
                            <td style="background: #f8f9fa; padding: 8px; border: 1px solid #e2e8f0; width: 10%;">
                                <strong style="color: #667eea;">RUC</strong>
                            </td>
                            <td colspan="2" style="padding: 8px; border: 1px solid #e2e8f0;">
                                <span t-field="o.partner_id.vat"/>
                            </td>
                        </tr>
                    </table>
                </div>

                <!-- TABLA DE PRODUCTOS/SERVICIOS -->
                <table class="table table-sm" style="margin-bottom: 20px; border: 1px solid #e2e8f0;">
                    <thead style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                        <tr>
                            <th style="padding: 12px; text-align: center; border: 1px solid rgba(255,255,255,0.2);">Cantidad</th>
                            <th style="padding: 12px; text-align: center; border: 1px solid rgba(255,255,255,0.2);">Unidad de Medida</th>
                            <th style="padding: 12px; border: 1px solid rgba(255,255,255,0.2);">Ítem</th>
                            <th style="padding: 12px; text-align: right; border: 1px solid rgba(255,255,255,0.2);">Valor Unitario</th>
                            <th style="padding: 12px; text-align: right; border: 1px solid rgba(255,255,255,0.2);">Descuento</th>
                            <th style="padding: 12px; text-align: right; border: 1px solid rgba(255,255,255,0.2);">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                        <t t-foreach="lines" t-as="line">
                            <t t-if="line.display_type == 'product'">
                                <tr>
                                    <td style="padding: 10px; text-align: center; border: 1px solid #e2e8f0;">
                                        <span t-field="line.quantity"/>
                                    </td>
                                    <td style="padding: 10px; text-align: center; border: 1px solid #e2e8f0;">
                                        <span t-field="line.product_uom_id"/>
                                    </td>
                                    <td style="padding: 10px; border: 1px solid #e2e8f0;">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                    <td style="padding: 10px; text-align: right; border: 1px solid #e2e8f0;">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td style="padding: 10px; text-align: right; border: 1px solid #e2e8f0;">
                                        <span t-if="line.discount" t-field="line.discount"/>
                                    </td>
                                    <td style="padding: 10px; text-align: right; border: 1px solid #e2e8f0; font-weight: 700;">
                                        <span t-field="line.price_subtotal"/>
                                    </td>
                                </tr>
                            </t>
                        </t>
                        
                        <!-- Fila del monto en palabras -->
                        <tr>
                            <td colspan="6" style="padding: 12px; background: #f8f9fa; border: 1px solid #e2e8f0; font-weight: 600;">
                                <span t-if="extra_edi_vals.get('amount_to_text')" t-out="extra_edi_vals['amount_to_text']"/>
                                <span t-elif="o.amount_total_words" t-field="o.amount_total_words"/>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <!-- SECCIÓN INFERIOR: SPOT Y TOTALES -->
                <div style="display: flex; gap: 20px; align-items: flex-start;">
                    
                    <!-- Columna Izquierda: SPOT y QR -->
                    <div style="flex: 1;">
                        <!-- SPOT (Detracciones) -->
                        <div t-if="spot" style="background: #fff8e1; border: 2px solid #ffa726; border-radius: 8px; padding: 15px; margin-bottom: 15px;">
                            <h3 style="margin: 0 0 10px 0; font-size: 13px; font-weight: 700; color: #e65100;">
                                OPERACIÓN SUJETA A DETRACCIÓN
                            </h3>
                            <div style="font-size: 12px; line-height: 1.8; color: #4a5568;">
                                <div>Detracción (<span t-out="spot.get('payment_percent', 0)"/>%): <span t-out="spot['amount']" t-options="{'widget': 'monetary', 'display_currency': spot.get('currency', o.currency_id)}"/></div>
                            </div>
                        </div>
                        
                        <!-- QR Code -->
                        <div t-if="extra_edi_vals.get('qr_str')" style="text-align: center; margin-top: 20px;">
                            <img t-att-src="'/report/barcode/?barcode_type=QR&amp;value=%s&amp;width=150&amp;height=150' % extra_edi_vals['qr_str']"
                                 style="border: 2px solid #e2e8f0; border-radius: 8px;"/>
                            <div style="font-size: 10px; color: #718096; margin-top: 8px;">
                                <div>Moneda: <span t-field="o.currency_id"/></div>
                                <div t-if="o.create_date">Fecha y hora de emisión: <span t-field="o.create_date" t-options='{"format": "yyyy-MM-dd HH:mm:ss"}'/></div>
                            </div>
                        </div>
                        
                        <div style="margin-top: 30px; border-top: 1px solid #e2e8f0; padding-top: 15px;">
                            <div style="text-align: center; font-size: 10px; color: #718096;">
                                ELABORADO POR _________________ ACEPTADA, FIRMA Y/O SELLO Y FECHA _________________
                            </div>
                            <div style="text-align: center; font-size: 9px; color: #a0aec0; margin-top: 10px;">
                                Representación impresa de factura de venta electrónica
                            </div>
                        </div>
                    </div>

                    <!-- Columna Derecha: Totales -->
                    <div style="width: 280px; flex-shrink: 0;">
                        <table class="table table-sm" style="font-size: 13px;">
                            <t t-if="o.tax_totals">
                                <t t-set="tax_totals" t-value="o.tax_totals"/>
                                
                                <!-- Subtotales -->
                                <tr>
                                    <td style="padding: 8px; text-align: right; border: 1px solid #e2e8f0;">
                                        <strong>Importe de venta</strong>
                                    </td>
                                    <td style="padding: 8px; text-align: right; border: 1px solid #e2e8f0;">
                                        <span t-out="tax_totals['formatted_amount_total']"/>
                                    </td>
                                </tr>
                                
                                <t t-foreach="tax_totals.get('subtotals', [])" t-as="subtotal">
                                    <tr>
                                        <td style="padding: 8px; text-align: right; border: 1px solid #e2e8f0;">
                                            <span t-out="subtotal['name']"/>
                                        </td>
                                        <td style="padding: 8px; text-align: right; border: 1px solid #e2e8f0;">
                                            <span t-out="subtotal['formatted_amount']"/>
                                        </td>
                                    </tr>
                                </t>
                                
                                <!-- Operaciones inafectas y exoneradas -->
                                <tr>
                                    <td style="padding: 8px; text-align: right; border: 1px solid #e2e8f0;">Op. inafecta</td>
                                    <td style="padding: 8px; text-align: right; border: 1px solid #e2e8f0;">S/0,00</td>
                                </tr>
                                <tr>
                                    <td style="padding: 8px; text-align: right; border: 1px solid #e2e8f0;">Op. exonerada</td>
                                    <td style="padding: 8px; text-align: right; border: 1px solid #e2e8f0;">S/0,00</td>
                                </tr>
                                
                                <!-- Impuestos -->
                                <t t-foreach="tax_totals.get('groups_by_subtotal', {}).get(tax_totals['subtotals'][0]['name'] if tax_totals.get('subtotals') else '', [])" t-as="group">
                                    <tr>
                                        <td style="padding: 8px; text-align: right; border: 1px solid #e2e8f0;">
                                            <span t-out="group['tax_group_name']"/>
                                        </td>
                                        <td style="padding: 8px; text-align: right; border: 1px solid #e2e8f0;">
                                            <span t-out="group['formatted_tax_group_amount']"/>
                                        </td>
                                    </tr>
                                </t>
                                
                                <!-- Total Final -->
                                <tr style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                                    <td style="padding: 12px; text-align: right; font-weight: 800; border: none;">
                                        Total
                                    </td>
                                    <td style="padding: 12px; text-align: right; font-weight: 800; font-size: 16px; border: none;">
                                        <span t-out="tax_totals['formatted_amount_total']"/>
                                    </td>
                                </tr>
                            </t>
                        </table>
                    </div>
                </div>

                <!-- Notas adicionales -->
                <div t-if="not is_html_empty(o.narration)" style="margin-top: 20px; padding: 15px; background: #f8f9fa; border-left: 4px solid #667eea; border-radius: 4px;">
                    <strong style="color: #667eea;">Notas</strong>
                    <div style="margin-top: 8px; font-size: 12px; color: #4a5568;">
                        <span t-field="o.narration"/>
                    </div>
                </div>

            </div>
            
        </xpath>
        
    </template>

</odoo>