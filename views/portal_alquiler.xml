<odoo>
    <template id="portal_alquiler_form" name="Portal Alquiler Form">
        <t t-call="website.layout">
            <div class="container mt16 mb16">
                <h1>Formulario de Cotización de Alquiler</h1>
                <form action="/portal/alquiler/submit" method="post">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="form-group">
                        <label for="marca_id">Marca</label>
                        <<select name="marca_id" class="form-control" required="required">>
                            <option value="">Seleccione una marca...</option>
                            <t t-foreach="marcas" t-as="marca">
                                <option t-att-value="marca.id" t-esc="marca.name"/>
                            </t>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="tipo">Tipo de impresora</label>
                        <select name="tipo" class="form-control" />
                            <option value="monocroma">Blanco y negro</option>
                            <option value="color">Color</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="cantidad">Cantidad mensual</label>
                        <input type="text" name="cantidad" class="form-control" />
                    </div>
                    <!-- Agrega aquí más campos siguiendo el mismo patrón -->
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </form>
            </div>
        </t>
    </template>
</odoo>
