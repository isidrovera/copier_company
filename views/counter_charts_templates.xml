<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="copier_company.CounterChartsComponent" owl="1">
        <div class="counter-charts-component">
            <h5>Gr√°ficos de Consumo</h5>
            <ul class="nav nav-tabs" id="graphTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="monthly-tab" data-bs-toggle="tab" data-bs-target="#monthly" type="button" role="tab" aria-controls="monthly" aria-selected="true">Consumo Mensual</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="yearly-tab" data-bs-toggle="tab" data-bs-target="#yearly" type="button" role="tab" aria-controls="yearly" aria-selected="false">Consumo Anual</button>
                </li>
            </ul>
            <div class="tab-content p-3 border border-top-0 rounded-bottom" id="graphTabsContent">
                <div class="tab-pane fade show active" id="monthly" role="tabpanel" aria-labelledby="monthly-tab">
                    <div class="chart-container">
                        <canvas t-ref="monthlyChart"></canvas>
                    </div>
                </div>
                <div class="tab-pane fade" id="yearly" role="tabpanel" aria-labelledby="yearly-tab">
                    <div class="chart-container">
                        <canvas t-ref="yearlyChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>