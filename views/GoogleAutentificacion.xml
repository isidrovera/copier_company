<odoo>
    <!-- Vista de formulario para Google Drive Integration -->
    <record id="view_form_google_drive_integration" model="ir.ui.view">
        <field name="name">google.drive.integration.form</field>
        <field name="model">google.drive.integration</field>
        <field name="arch" type="xml">
            <form string="Google Drive Integration">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="client_id"/>
                        <field name="client_secret"/>
                        <field name="redirect_uri" readonly="1"/>
                        <button name="authorize_google_drive" type="object" string="Authorize Google Drive"/>
                        <field name="authorized"/>
                        <field name="access_token" readonly="1"/>
                        <field name="refresh_token" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de árbol para Google Drive Integration -->
    <record id="view_tree_google_drive_integration" model="ir.ui.view">
        <field name="name">google.drive.integration.tree</field>
        <field name="model">google.drive.integration</field>
        <field name="arch" type="xml">
            <tree string="Google Drive Integrations">
                <field name="name"/>
                <field name="client_id"/>
                <field name="client_secret"/>
                <field name="redirect_uri"/>
                <field name="authorized"/>
            </tree>
        </field>
    </record>

    <!-- Acción para Google Drive Integration -->
    <record id="action_google_drive_integration" model="ir.actions.act_window">
        <field name="name">Google Drive Integration</field>
        <field name="res_model">google.drive.integration</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_tree_google_drive_integration"/>
    </record>

    <!-- Menú para Google Drive Integration -->
    <menuitem id="menu_google_drive_integration" name="Google Drive Integration"
              parent="copier_company.menu_root" action="action_google_drive_integration"/>

    <!-- Vista de lista de archivos -->
    <template id="file_list">
        <t t-call="website.layout">
            <div class="container">
                <h2>Files in Google Drive</h2>
                <ul>
                    <t t-foreach="files" t-as="file">
                        <li><t t-esc="file['name']"/> (<t t-esc="file['id']"/>)</li>
                    </t>
                </ul>
            </div>
        </t>
    </template>

    <!-- Plantilla de autenticación -->
    <template id="auth_callback">
        <t t-call="website.layout">
            <div class="container">
                <h2>Google Drive Authenticated</h2>
                <p>Your Google Drive account has been successfully authenticated.</p>
                <a href="/google_drive/list_files" class="btn btn-primary">List Files</a>
            </div>
        </t>
    </template>
</odoo>
