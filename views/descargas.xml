<odoo>
    <data>
        <record model="ir.ui.view" id="view_descarga_archivos_form">
            <field name="name">descarga.archivos.form</field>
            <field name="model">descarga.archivos</field>
            <field name="arch" type="xml">
                <form string="Descarga de archivos">
                    <sheet>
                        <group>
                            <field name="modelo" string="Modelo de maquina" domain="[('active', '=', True)]" options="{'no_create': True}" context="{'default_active': True}" multi="True"/>
                            <field name="name"/>
                            <field name="url"/>
                            <field name="tipo"/>
                            <field name="observacion"/>
                        </group>
                        <footer>

                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="descarga_archivos_tree_view">
            <field name="name">descarga.archivos.tree</field>
            <field name="model">descarga.archivos</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="modelo" string="Modelo de maquina" />
                    <field name="tipo"/>
                    <field name="name"/>
                    <field name="observacion"/>
                    <button name="open_url" string="Descargar Archivo" type="object" icon="fa-download"/>

                </tree>
            </field>
        </record>

        <record id="action_descarga_archivos_form" model="ir.actions.act_window">
            <field name="name">Descarga de archivos</field>
            <field name="res_model">descarga.archivos</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menú para acceder a la acción -->
        <menuitem id="menu_descarga_archivos" name="Descarga de archivos" parent="copier_company.menu_root" action="action_descarga_archivos_form" sequence="10"/>

    </data>
</odoo>
