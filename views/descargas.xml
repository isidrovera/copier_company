<odoo>
    <data>
        <record model="ir.ui.view" id="view_descarga_archivos_form">
            <field name="name">descarga.archivos.form</field>
            <field name="model">descarga.archivos</field>
            <field name="arch" type="xml">
                <form string="Descarga de archivos">
                    <sheet>
                        <group>
                            <field name="modelo"/>
                            <field name="name"/>
                            <field name="url"/>
                        </group>
                        <footer>
                            <button name="descargar_archivo" string="Descargar archivo" type="object" class="btn-primary"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="descarga_archivos_tree_view">
            <field name="name">descarga.archivos.tree</field>
            <field name="model">descarga.archivos</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="modelo"/>
                    <field name="name"/>
                    <field name="url" widget="url"/>
                    <button name="descargar_archivo" string="Descargar archivo" type="object"/>
                </tree>
            </field>
        </record>

        <record id="action_descarga_archivos_form" model="ir.actions.act_window">
            <field name="name">Descarga de archivos</field>
            <field name="res_model">descarga.archivos</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menú para acceder a la acción -->
        <menuitem id="menu_descarga_archivos" name="Descarga de archivos" parent="copier_company.menu_root" sequence="10"/>
        <menuitem id="menu_descarga_archivos_form" name="Descarga de archivos" parent="menu_descarga_archivos" action="action_descarga_archivos_form" sequence="10"/>
    </data>
</odoo>
