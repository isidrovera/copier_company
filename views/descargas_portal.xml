<odoo>
    <template id="Descargas">
        <t t-call="website.layout">
            <style>
                /* Estilos personalizados para el ícono de adjunto y el texto */
                .icono-adjunto {
                    display: flex;
                    flex-direction: column; /* Organiza el ícono y el texto en una columna */
                    align-items: center; /* Centra el ícono horizontalmente en la celda */
                    justify-content: center; /* Centra el ícono verticalmente en la celda */
                    color: red; /* Color rojo para el ícono */
                    text-decoration: none; /* No underline */
                }
                .icono-adjunto i {
                    font-size: 24px; /* Tamaño más grande para el ícono */
                }
                <!--.icono-adjunto-text {
                    margin-top: 4px; /* Espacio entre el ícono y el texto */
                }-->
                /* Asegúrate de que los estilos no afecten otros botones en la página */
                .descargar-btn {
                    background: #0E62C7; /* Un color de fondo azul para el botón de descargar */
                    color: white; /* Texto blanco para el botón de descargar */
                    border-radius: 4px; /* Bordes redondeados para el botón */
                    padding: 0.375rem 0.75rem; /* Padding similar al estilo de botón de Bootstrap */
                    text-decoration: none; /* No underline */
                }
                .descargar-btn:hover {
                    background: #0056b3; /* Un color de fondo más oscuro cuando se pasa el mouse por encima */
                    text-decoration: none; /* No underline */
                }
            </style>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1>Descarga de archivos</h1>
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Buscar archivo" aria-label="Buscar archivo" aria-describedby="basic-addon2" id="search" onkeyup="searchFiles()"/>
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="button" onclick="searchFiles()">Buscar</button>
                            </div>
                        </div>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Modelo de máquina</th>
                                    <th>Tipo</th>
                                    <th>Nombre de archivo</th>
                                    <th>Año</th>
                                    <th>Adjunto</th>
                                    <th>Descripción</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs" t-as="doc">
                                    <tr>
                                        <td>
                                            <t t-foreach="doc.modelo" t-as="modelo">
                                                <t t-esc="modelo.name"/>
                                                <br/>
                                            </t>
                                        </td>
                                        <td>
                                            <t t-esc="doc.tipo"/>
                                        </td>
                                        <td>
                                            <t t-esc="doc.name"/>
                                        </td>
                                        <td>
                                            <t t-esc="doc.fecha"/>
                                        </td>
                                        <td>
                                            <span class="icono-adjunto">
                                                <a t-att-href="'/web/content?model=descarga.archivos&amp;id=' + str(doc.id) + '&amp;field=adjunto&amp;filename_field=name'" target="_blank">
                                                    <i class="fa fa-file-pdf-o"></i>
                                                </a>
                                                <!--<span class="icono-adjunto-text">Adjunto</span>-->
                                            </span>
                                        </td>
                                        <td>
                                            <t t-esc="doc.observacion"/>
                                        </td>
                                        <td>
                                            <a t-att-href="'/web/content?model=descarga.archivos&amp;id=' + str(doc.id) + '&amp;field=adjunto&amp;filename_field=name&amp;download=true'" class="descargar-btn">Descargar</a>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </t>
        <script type="text/javascript" src="/copier_company/static/src/js/script.js"></script>
    </template>
</odoo>
