<odoo>
    <template id="client_portal_descarga_archivos">
        <t t-call="website.layout">
            <style>
                /* Estilos personalizados para el ícono de adjunto y el texto */
                .icono-adjunto {
                    display: flex;
                    flex-direction: column; /* Organizar ícono y texto en columna */
                    align-items: center; /* Centrar horizontalmente en la celda */
                    justify-content: center; /* Centrar verticalmente en la celda */
                    color: red; /* Color rojo para el ícono */
                }
                .icono-adjunto i {
                    font-size: 24px; /* Tamaño más grande para el ícono */
                }
                .icono-adjunto-text {
                    margin-top: 4px; /* Espacio entre el ícono y el texto */
                }
            </style>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1>Descarga de archivos</h1>
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Buscar archivo" aria-label="Buscar archivo" aria-describedby="basic-addon2" id="search" onkeyup="searchFiles()"/>
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="button" onclick="searchFiles()">Buscar</button>
                            </div>
                        </div>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Modelo de máquina</th>
                                    <th>Tipo</th>
                                    <th>Nombre de archivo</th>
                                    <th>Adjunto</th>
                                    <th>Descripción</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs" t-as="doc">
                                    <tr>
                                        <td>
                                            <t t-foreach="doc.modelo" t-as="modelo">
                                                <t t-esc="modelo.name"/>
                                                <br/>
                                            </t>
                                        </td>
                                        <td>
                                            <t t-esc="doc.tipo"/>
                                        </td>
                                        <td>
                                            <t t-esc="doc.name"/>
                                        </td>
                                        <td>
                                            <span class="icono-adjunto">
                                                <i class="fa fa-file-pdf-o"></i> <!-- Asegúrate de que estás usando la versión correcta de FontAwesome -->
                                                <span class="icono-adjunto-text">Adjunto</span>
                                            </span>
                                        </td>
                                        <td>
                                            <t t-esc="doc.observacion"/>
                                        </td>
                                        <td>
                                            <a t-att-href="'/web/content?model=descarga.archivos&amp;id=' + str(doc.id) + '&amp;field=adjunto&amp;filename_field=name'" class="btn btn-secondary">Descargar</a>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </t>
        <script type="text/javascript" src="/copier_company/static/src/js/script.js"></script>
    </template>
</odoo>
