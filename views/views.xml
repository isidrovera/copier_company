<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="copier_company.list">
      <field name="name">copier_company list</field>
      <field name="model">copier.company</field>
      <field name="arch" type="xml">
        <tree>
          <field name="marca_id"/>
          <field name="name"/>
          <field name="serie_id"/>
          <field name="cliente_id"/>
          <field name="sede"/>
          <field name="ubicacion"/>
          <button name="crear_ticket" string=" " type="object" class="oe_highlight" icon="fa-question-circle"/>
          <button name="generar_qr_code" string=" " type="object" class="oe_highlight" icon="fa-qrcode"/>
          <field name="qr_code" widget="binary"/>
        </tree>
      </field>
    </record>
    <record id="view_maquinas_form" model="ir.ui.view">
    <field name="name">.form.view_maquinas</field>
    <field name="model">copier.company</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button name="crear_ticket" string="Crear Ticket" type="object" class="oe_highlight"/>
                <button name="generar_qr_code" string="Crear QR" type="object" class="oe_highlight"/>
                <field name="estado_maquina_id" widget="statusbar" options="{'clickable': '1'}"/>
            </header>
            <sheet>
                <group>
                    <group string="Datos de equipo">
                        <field name="marca_id"/>
                        <field name="name"/>
                        <field name="serie_id"/>
                        <field name="cliente_id"/>
                        <field name="sede"/>
                        <field name="ubicacion"/>
                    </group>
                    <group string="Datos de alquiler">
                        <field name="fecha_inicio_alquiler"/>
                        <field name="fecha_fin_alquiler"/>
                        <field name="duracion_alquiler_id"/>
                        <field name="accesorios_ids" widget="many2many_tags"/>
                        <field name="costo_copia_bn" widget="monetary"/>
                        <field name="costo_copia_color" widget="monetary"/>
                        <field name="volumen_mensual_bn"/>
                        <field name="volumen_mensual_color"/>
                        <field name="renta_mensual_bn" widget="monetary"/>
                        <field name="renta_mensual_color" widget="monetary"/>
                        <field name="total_facturar_mensual" widget="monetary"/>
                    </group>
                </group>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"></field>
                <field name="message_ids" widget="mail_thread"></field>
            </div>
        </form>
    </field>
</record>


    <!-- kanban view definition -->
    
    <record model="ir.ui.view" id="copier_company.kanban">
      <field name="name">copier_company kanban</field>
      <field name="model">copier.company</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="name"/>
          <field name="marca_id"/>
          <field name="serie_id"/>
          <field name="cliente_id"/>
          <field name="sede"/>
          <field name="ubicacion"/>
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_card">
                <div class="oe_kanban_global_click o_kanban_record">
                  <div class="o_kanban_image">
                    <img t-att-src="'/copier_company/static/src/img/machine_icon.png'" alt="Machine Image" style="width: 100px; height: auto; display: block; margin: 0 auto 10px auto;"/>
                  </div>
                  <div class="o_kanban_details">
                    <div class="o_kanban_record_title">
                      <strong><field name="cliente_id"/></strong>
                    </div>
                    <div class="o_kanban_record_body">
                      <div>
                        <span class="o_field_value">Marca:</span>
                        <span class="o_field_value"><field name="marca_id"/></span>
                      </div>
                      <div>
                        <span class="o_field_value">Modelo:</span>
                        <span class="o_field_value"><field name="name"/></span>
                      </div>
                      <div>
                        <span class="o_field_value">Serie:</span>
                        <span class="o_field_value"><field name="serie_id"/></span>
                      </div>
                      
                      <div>
                        <span class="o_field_value">Sede:</span>
                        <span class="o_field_value"><field name="sede"/></span>
                      </div>
                      <div>
                        <span class="o_field_value">Ubicación:</span>
                        <span class="o_field_value"><field name="ubicacion"/></span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="copier_company.action_window">
      <field name="name">Registrar Maquina</field>
      <field name="res_model">copier.company</field>
      <field name="view_mode">tree,form,kanban</field>
    </record>

    <!-- server action to the one above -->

    <record model="ir.actions.server" id="copier_company.action_server">
      <field name="name">copier_company server</field>
      <field name="model_id" ref="model_copier_company"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form,kanban",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Gestión de Fotocopiadoras" id="copier_company.menu_root" web_icon="copier_company,static/description/icon.png"/>

    <!-- menu categories -->

    <menuitem name="Maquinas" id="copier_company.menu_1" parent="copier_company.menu_root" action="copier_company.action_window" sequence="10"/>

    <!-- actions -->
  </data>
</odoo>