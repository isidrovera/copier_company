<odoo>
  <data>
    <!-- Vista árbol -->
    <record id="vista_arbol_copier_company" model="ir.ui.view">
      <field name="name">copier.company.tree</field>
      <field name="model">copier.company</field>
      <field name="arch" type="xml">
        <tree>
          <field name="marca_id"/>
          <field name="name"/>
          <field name="serie_id"/>
          <field name="cliente_id"/>
          <field name="sede"/>
          <field name="ubicacion"/>
          <button name="crear_ticket" string=" " type="object" class="oe_highlight" icon="fa-question-circle"/>
          <button name="generar_qr_code" string=" " type="object" class="oe_highlight" icon="fa-qrcode"/>
          <field name="qr_code" widget="binary"/>
        </tree>
      </field>
    </record>

    <!-- Vista formulario -->
    <record id="vista_formulario_copier_company" model="ir.ui.view">
      <field name="name">copier.company.form</field>
      <field name="model">copier.company</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button name="crear_ticket" string="Crear Ticket" type="object" class="oe_highlight"/>
            <button name="generar_qr_code" string="Crear QR" type="object" class="oe_highlight"/>
          </header>
          <sheet>
            <group>
              <group string="Datos de equipo">
                <field name="marca_id"/>
                <field name="name"/>
                <field name="serie_id"/>
                <field name="cliente_id"/>
                <field name="sede"/>
                <field name="ubicacion"/>
              </group>
              <group string="Datos de alquiler">
                <field name="fecha_inicio_alquiler"/>
                <field name="fecha_fin_alquiler"/>
                <field name="duracion_alquiler_id"/>
                <field name="accesorios_ids"/>
                <field name="costo_copia_bn" widget="monetary" options="{'currency_field': 'moneda_id', 'field_digits': 2}"/>
                <field name="costo_copia_color" widget="monetary" options="{'currency_field': 'moneda_id', 'field_digits': 2}"/>
                <field name="volumen_mensual_bn"/>
                <field name="volumen_mensual_color"/>               
              </group>
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"></field>
            <field name="message_ids" widget="mail_thread"></field>
          </div>
        </form>
      </field>
    </record>

    <!-- Vista kanban -->
    <record id="vista_kanban_copier_company" model="ir.ui.view">
      <field name="name">copier.company.kanban</field>
      <field name="model">copier.company</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="name"/>
          <field name="marca_id"/>
          <field name="serie_id"/>
          <field name="cliente_id"/>
          <field name="sede"/>
          <field name="ubicacion"/>
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_card">
                <div class="oe_kanban_global_click o_kanban_record">
                  <div class="o_kanban_image">
                    <img t-att-src="'/copier_company/static/src/img/machine_icon.png'" alt="Machine Image" style="width: 100px; height: auto; display: block; margin: 0 auto 10px auto;"/>
                  </div>
                  <div class="o_kanban_details">
                    <div class="o_kanban_record_title">
                      <strong><field name="cliente_id"/></strong>
                    </div>
                    <div class="o_kanban_record_body">
                      <div>
                        <span class="o_field_value">Marca:</span>
                        <span class="o_field_value"><field name="marca_id"/></span>
                      </div>
                      <div>
                        <span class="o_field_value">Modelo:</span>
                        <span class="o_field_value"><field name="name"/></span>
                      </div>
                      <div>
                        <span class="o_field_value">Serie:</span>
                        <span class="o_field_value"><field name="serie_id"/></span>
                      </div>
                      <div>
                        <span class="o_field_value">Sede:</span>
                        <span class="o_field_value"><field name="sede"/></span>
                      </div>
                      <div>
                        <span class="o_field_value">Ubicación:</span>
                        <span class="o_field_value"><field name="ubicacion"/></span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- Acción -->
    <record id="accion_copier_company" model="ir.actions.act_window">
      <field name="name">Registrar Maquina</field>
      <field name="res_model">copier.company</field>
      <field name="view_mode">tree,form,kanban</field>            
    </record>

    <!-- Menú -->
    <menuitem id="menu_copier_company" name="Gestión de Fotocopiadoras" web_icon="copier_company,static/description/icon.png"/>
    <menuitem id="menu_maquinas" name="Maquinas" parent="menu_copier_company" action="accion_copier_company"/>
  </data>
</odoo>
