<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Integración con menú de navegación del portal - Breadcrumbs -->
    <template id="portal_breadcrumbs_copier" name="Portal layout : copier equipment breadcrumbs" inherit_id="portal.portal_breadcrumbs" priority="50">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'equipment' or page_name == 'equipment_detail' or page_name == 'equipment_counters'" t-attf-class="breadcrumb-item #{'active ' if page_name == 'equipment' else ''}">
                <a t-if="page_name in ['equipment_detail', 'equipment_counters']" t-attf-href="/my/copier/equipments?{{ keep_query() }}">Mis Equipos</a>
                <t t-else="">Mis Equipos</t>
            </li>
            <li t-if="page_name == 'equipment_detail' and equipment" class="breadcrumb-item active text-truncate">
                <span t-field="equipment.name.name"/> (<span t-field="equipment.serie_id"/>)
            </li>
            <li t-if="page_name == 'equipment_counters' and equipment" class="breadcrumb-item">
                <a t-attf-href="/my/copier/equipment/{{equipment.id}}"><span t-field="equipment.name.name"/></a>
            </li>
            <li t-if="page_name == 'equipment_counters'" class="breadcrumb-item active">
                Lecturas
            </li>
        </xpath>
    </template>

    <!-- Integración con el home del portal -->
    <template id="portal_my_home_copier_equipment" name="Mis Equipos en el Portal" customize_show="True" inherit_id="portal.portal_my_home" priority="50">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="before">
            <t t-set="portal_service_category_enable" t-value="True"/>
        </xpath>
        <div id="portal_service_category" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/copier_company/static/src/img/printer.svg'"/>
                <t t-set="title">Mis Equipos</t>
                <t t-set="text">Consulta los equipos que tienes en alquiler</t>
                <t t-set="url" t-value="'/my/copier/equipments'"/>
                <t t-set="placeholder_count" t-value="'equipment_count'"/>
            </t>
        </div>
    </template>
    
    <!-- Template para la página de listado de equipos -->
    <template id="portal_my_copier_equipments" name="My Rental Equipments">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Mis Equipos en Alquiler</t>
            </t>
            <t t-if="not equipments">
                <div class="alert alert-info text-center">
                    <h4>No tienes equipos en alquiler actualmente</h4>
                </div>
            </t>
            <t t-if="equipments">
                <div class="row mt-4">
                    <t t-foreach="equipments" t-as="equipment">
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100 shadow-sm">
                                <!-- Imagen de la máquina -->
                                <div t-if="equipment.imagen_id" class="text-center pt-3">
                                    <img class="img-fluid" style="max-height: 120px;" t-att-src="image_data_uri(equipment.imagen_id)" alt="Imagen de la Máquina"/>
                                </div>
                                <div class="card-body">
                                    <!-- Datos principales del equipo -->
                                    <h5 class="card-title" t-field="equipment.name.name"/>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Marca:</span>
                                        <span t-field="equipment.marca_id.name"/>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Serie:</span>
                                        <span t-field="equipment.serie_id"/>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Tipo:</span>
                                        <span t-if="equipment.tipo == 'monocroma'">Blanco y negro</span>
                                        <span t-else="">Color</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Estado:</span>
                                        <span t-field="equipment.estado_maquina_id.name" t-attf-class="badge rounded-pill bg-{{ equipment.estado_maquina_id.name == 'Disponible' and 'success' or 'info' }}"/>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Duración:</span>
                                        <span t-field="equipment.duracion_alquiler_id.name"/>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Desde:</span>
                                        <span t-field="equipment.fecha_inicio_alquiler"/>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Hasta:</span>
                                        <span t-field="equipment.fecha_fin_alquiler"/>
                                    </div>
                                </div>
                                <div class="card-footer bg-white d-flex justify-content-between">
                                    <a t-att-href="'/my/copier/equipment/%s' % equipment.id" class="btn btn-primary btn-sm">
                                        <i class="fa fa-eye me-1"/>Ver detalles
                                    </a>
                                    <a t-att-href="'/my/copier/equipment/%s/ticket' % equipment.id" class="btn btn-danger btn-sm">
                                        <i class="fa fa-ticket me-1"/>Crear ticket
                                    </a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </t>
        </t>
    </template>
    
    <!-- Template para la página de detalle de un equipo -->
    <template id="portal_my_copier_equipment" name="My Rental Equipment Details">
        <t t-call="portal.portal_layout">
            <t t-set="wrapwrap_classes" t-value="'o_portal_bg_dark'"/>
            <div class="row mt-4">
                <div class="col-lg-4 d-print-none">
                    <!-- Panel lateral con acciones -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Acciones</h5>
                            <div class="d-grid gap-2">
                                <a t-att-href="'/my/copier/equipment/%s/ticket' % equipment.id" class="btn btn-danger">
                                    <i class="fa fa-ticket me-1"/>Reportar problema
                                </a>
                                <a t-att-href="'/my/copier/equipment/%s/counters' % equipment.id" class="btn btn-info">
                                    <i class="fa fa-tachometer me-1"/>Ver lecturas
                                </a>
                            </div>
                        </div>
                    </div>
                    <!-- Código QR -->
                    <div class="card mb-4" t-if="equipment.qr_code">
                        <div class="card-body text-center">
                            <h5 class="card-title">Código QR</h5>
                            <img class="img-fluid" t-att-src="image_data_uri(equipment.qr_code)" alt="Código QR"/>
                            <p class="text-muted mt-2">Escanea para crear un ticket</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <!-- Información principal del equipo -->
                    <div class="card mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fa fa-print me-2"/>Detalles del Equipo</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <!-- Imagen del equipo -->
                                <div class="col-md-4 text-center" t-if="equipment.imagen_id">
                                    <img class="img-fluid rounded" t-att-src="image_data_uri(equipment.imagen_id)" alt="Imagen de la Máquina"/>
                                </div>
                                
                                <!-- Datos básicos -->
                                <div t-att-class="equipment.imagen_id and 'col-md-8' or 'col-md-12'">
                                    <h4 t-field="equipment.name.name" class="mb-3"/>
                                    <div class="row mb-2">
                                        <div class="col-sm-4 text-muted">Marca:</div>
                                        <div class="col-sm-8" t-field="equipment.marca_id.name"/>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-sm-4 text-muted">Serie:</div>
                                        <div class="col-sm-8" t-field="equipment.serie_id"/>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-sm-4 text-muted">Tipo:</div>
                                        <div class="col-sm-8">
                                            <span t-if="equipment.tipo == 'monocroma'">Blanco y negro</span>
                                            <span t-else="">Color</span>
                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-sm-4 text-muted">Formato:</div>
                                        <div class="col-sm-8" t-field="equipment.formato"/>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-sm-4 text-muted">Ubicación:</div>
                                        <div class="col-sm-8" t-field="equipment.ubicacion"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Información del contrato -->
                    <div class="card mb-4">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0"><i class="fa fa-file-contract me-2"/>Información del Contrato</h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-2">
                                <div class="col-sm-4 text-muted">Cotización:</div>
                                <div class="col-sm-8" t-field="equipment.secuencia"/>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm-4 text-muted">Inicio del alquiler:</div>
                                <div class="col-sm-8" t-field="equipment.fecha_inicio_alquiler"/>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm-4 text-muted">Fin del alquiler:</div>
                                <div class="col-sm-8" t-field="equipment.fecha_fin_alquiler"/>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm-4 text-muted">Duración:</div>
                                <div class="col-sm-8" t-field="equipment.duracion_alquiler_id.name"/>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm-4 text-muted">Estado:</div>
                                <div class="col-sm-8">
                                    <span t-field="equipment.estado_renovacion" t-attf-class="badge rounded-pill bg-{{ equipment.estado_renovacion == 'vigente' and 'success' or (equipment.estado_renovacion == 'por_vencer' and 'warning' or 'danger') }}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Información de precios y costos -->
                    <div class="card mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="fa fa-money-bill me-2"/>Información de Costos</h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-2" t-if="equipment.tipo == 'monocroma' or equipment.tipo == 'color'">
                                <div class="col-sm-4 text-muted">Costo por copia B/N:</div>
                                <div class="col-sm-8">
                                    <span t-field="equipment.costo_copia_bn"/>
                                    <t t-if="equipment.precio_bn_incluye_igv"> (incluye IGV)</t>
                                </div>
                            </div>
                            <div class="row mb-2" t-if="equipment.tipo == 'color'">
                                <div class="col-sm-4 text-muted">Costo por copia color:</div>
                                <div class="col-sm-8">
                                    <span t-field="equipment.costo_copia_color"/>
                                    <t t-if="equipment.precio_color_incluye_igv"> (incluye IGV)</t>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm-4 text-muted">Volumen mensual B/N:</div>
                                <div class="col-sm-8" t-field="equipment.volumen_mensual_bn"/>
                            </div>
                            <div class="row mb-2" t-if="equipment.tipo == 'color'">
                                <div class="col-sm-4 text-muted">Volumen mensual color:</div>
                                <div class="col-sm-8" t-field="equipment.volumen_mensual_color"/>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm-4 text-muted">Renta mensual B/N:</div>
                                <div class="col-sm-8" t-field="equipment.renta_mensual_bn"/>
                            </div>
                            <div class="row mb-2" t-if="equipment.tipo == 'color'">
                                <div class="col-sm-4 text-muted">Renta mensual color:</div>
                                <div class="col-sm-8" t-field="equipment.renta_mensual_color"/>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm-4 text-muted">Día de facturación:</div>
                                <div class="col-sm-8" t-field="equipment.dia_facturacion"/>
                            </div>
                        </div>
                    </div>
                    <!-- Especificaciones técnicas -->
                    <div class="card mb-4" t-if="equipment.especificaciones_id">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0"><i class="fa fa-cogs me-2"/>Especificaciones Técnicas</h5>
                        </div>
                        <div class="card-body">
                            <div t-field="equipment.especificaciones_id"/>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    
    <!-- Template para la creación pública de tickets desde QR -->
    <template id="portal_public_create_ticket" name="Create Ticket from QR">
        <t t-call="website.layout">
            <div class="container py-5">
                <div class="row">
                    <div class="col-lg-8 mx-auto">
                        <div class="card shadow">
                            <div class="card-header bg-primary text-white">
                                <h3 class="mb-0">Crear ticket de soporte</h3>
                            </div>
                            <div class="card-body">
                                <!-- Mensaje de éxito o error -->
                                <div t-if="success_message" class="alert alert-success">
                                    <span t-esc="success_message"/>
                                </div>
                                <div t-if="error_message" class="alert alert-danger">
                                    <span t-esc="error_message"/>
                                </div>
                                
                                <!-- Información del equipo -->
                                <div class="mb-4">
                                    <h5>Información del equipo</h5>
                                    <div class="row">
                                        <div class="col-md-4 text-center" t-if="equipment.imagen_id">
                                            <img class="img-fluid rounded" t-att-src="image_data_uri(equipment.imagen_id)" alt="Imagen de la Máquina"/>
                                        </div>
                                        <div t-att-class="equipment.imagen_id and 'col-md-8' or 'col-md-12'">
                                            <p><strong>Modelo:</strong> <span t-field="equipment.name.name"/></p>
                                            <p><strong>Serie:</strong> <span t-field="equipment.serie_id"/></p>
                                            <p><strong>Tipo:</strong> 
                                                <span t-if="equipment.tipo == 'monocroma'">Blanco y negro</span>
                                                <span t-else="">Color</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Formulario de ticket -->
                                <form method="post" t-if="not success_message">
                                    <div class="mb-3">
                                        <label for="name" class="form-label">Nombre completo</label>
                                        <input type="text" class="form-control" name="name" id="name" required="required"/>
                                    </div>
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Correo electrónico</label>
                                        <input type="email" class="form-control" name="email" id="email" required="required"/>
                                    </div>
                                    <div class="mb-3">
                                        <label for="phone" class="form-label">Teléfono</label>
                                        <input type="tel" class="form-control" name="phone" id="phone"/>
                                    </div>
                                    <div class="mb-3">
                                        <label for="description" class="form-label">Descripción del problema</label>
                                        <textarea class="form-control" name="description" id="description" rows="5" required="required"></textarea>
                                    </div>
                                    <div class="text-end">
                                        <button type="submit" class="btn btn-primary">Enviar ticket</button>
                                    </div>
                                </form>
                                
                                <!-- Botones adicionales -->
                                <div class="mt-4 text-center">
                                    <a href="/" class="btn btn-secondary">Volver a la página principal</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    
    <!-- Template para la página de contadores -->
    <template id="portal_my_copier_counters" name="My Equipment Counters">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Historial de Lecturas</t>
            </t>
            
            <div class="row mt-4">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="mb-0">
                                <i class="fa fa-tachometer me-2"></i>Lecturas de la máquina 
                                <strong t-field="equipment.name.name"/> 
                                (Serie: <span t-field="equipment.serie_id"/>)
                            </h4>
                        </div>
                        <div class="card-body">
                            <t t-if="not counters">
                                <div class="alert alert-info text-center">
                                    <p>No hay registros de lecturas para este equipo</p>
                                </div>
                            </t>
                            <t t-if="counters">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Fecha</th>
                                                <th>Contador B/N</th>
                                                <t t-if="equipment.tipo == 'color'">
                                                    <th>Contador Color</th>
                                                </t>
                                                <th>Consumo B/N</th>
                                                <t t-if="equipment.tipo == 'color'">
                                                    <th>Consumo Color</th>
                                                </t>
                                                <th>Técnico</th>
                                                <th>Notas</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr t-foreach="counters" t-as="counter">
                                                <td>
                                                    <span t-field="counter.fecha_lectura"/>
                                                </td>
                                                <td>
                                                    <span t-field="counter.lectura_bn"/>
                                                </td>
                                                <t t-if="equipment.tipo == 'color'">
                                                    <td>
                                                        <span t-field="counter.lectura_color"/>
                                                    </td>
                                                </t>
                                                <td>
                                                    <span t-field="counter.consumo_bn"/>
                                                </td>
                                                <t t-if="equipment.tipo == 'color'">
                                                    <td>
                                                        <span t-field="counter.consumo_color"/>
                                                    </td>
                                                </t>
                                                <td>
                                                    <span t-field="counter.tecnico_id.name"/>
                                                </td>
                                                <td>
                                                    <span t-field="counter.notas"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                
                                <!-- Gráfico de consumo (opcional, si se quiere implementar) -->
                                <div class="mt-4">
                                    <h5>Gráfico de Consumo</h5>
                                    <div class="alert alert-info">
                                        El gráfico de consumo estará disponible próximamente
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Botón para volver a la página de detalle del equipo -->
            <div class="text-center mt-4">
                <a t-att-href="'/my/copier/equipment/%s' % equipment.id" class="btn btn-secondary">
                    <i class="fa fa-arrow-left me-1"></i>Volver al Equipo
                </a>
            </div>
        </t>
    </template>
</odoo>