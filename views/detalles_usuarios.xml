<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vistas para Usuarios Internos por Máquina -->

    <record id="view_copier_machine_user_form" model="ir.ui.view">
        <field name="name">copier.machine.user.form</field>
        <field name="model">copier.machine.user</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Nombre Empresa o Usuario"/></h1>
                    </div>
                    <group>
                        <field name="maquina_id" required="1"/>
                        <field name="clave"/>
                        <field name="correo"/>
                        <field name="cliente_id"/>
    <field name="serie_maquina"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_copier_machine_user_list" model="ir.ui.view">
        <field name="name">copier.machine.user.list</field>
        <field name="model">copier.machine.user</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="maquina_id"/>
                <field name="clave"/>
                <field name="correo"/>
                <field name="cliente_id"/>
    <field name="serie_maquina"/>
            </list>
        </field>
    </record>

    <record id="view_copier_machine_user_search" model="ir.ui.view">
        <field name="name">copier.machine.user.search</field>
        <field name="model">copier.machine.user</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="maquina_id"/>
                
            </search>
        </field>
    </record>

  

   

    <!-- Vistas para Detalle mensual por usuario -->

    <record id="view_copier_counter_user_detail_form" model="ir.ui.view">
        <field name="name">copier.counter.user.detail.form</field>
        <field name="model">copier.counter.user.detail</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="contador_id" required="1"/>
                        <field name="usuario_id" required="1"/>
                        <field name="cantidad_bn" required="1"/>

    <!-- Solo visible si la máquina es color -->
    <field name="cantidad_color"
           invisible="contador_id.maquina_id.tipo == 'monocroma'"/>

    <field name="total_copias" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_copier_counter_user_detail_list" model="ir.ui.view">
        <field name="name">copier.counter.user.detail.list</field>
        <field name="model">copier.counter.user.detail</field>
        <field name="arch" type="xml">
            <list>
                <field name="contador_id"/>
                <field name="usuario_id"/>
                <field name="cantidad_bn" required="1"/>

    <!-- Solo visible si la máquina es color -->
    <field name="cantidad_color"
           invisible="contador_id.maquina_id.tipo == 'monocroma'"/>

    <field name="total_copias" readonly="1"/>
            </list>
        </field>
    </record>

    <record id="view_copier_counter_user_detail_search" model="ir.ui.view">
        <field name="name">copier.counter.user.detail.search</field>
        <field name="model">copier.counter.user.detail</field>
        <field name="arch" type="xml">
            <search>
                <field name="contador_id"/>
                <field name="usuario_id"/>
                
            </search>
        </field>
    </record>

    

    
</odoo>