<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="pdf_view_template" name="PDF View">
        <t t-call="website.layout">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-12">
                        <h1>Vista de PDF</h1>
                        <iframe id="pdf-iframe" t-att-src="pdf_url" width="100%" height="800px" style="border: none;"></iframe>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
