<odoo>
    <data>
        <!-- Vista formulario de configuración de backups -->
        <record id="view_backup_config_settings_form" model="ir.ui.view">
            <field name="name">backup.config.settings.form</field>
            <field name="model">backup.config.settings</field>
            <field name="arch" type="xml">
                <form string="Backup Settings">
                    <header>
                        <button string="Test Connection" type="object" name="test_db_connection" class="btn-primary"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="db_name"/>
                                <field name="db_user"/>
                                <field name="db_password"/>
                                <field name="pcloud_folder_id"/>
                                <field name="pcloud_token"/>
                                <field name="pcloud_hostname"/>
                                <field name="cron_frequency"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acción para abrir la vista de configuración -->
        <record id="action_backup_config_settings" model="ir.actions.act_window">
            <field name="name">Backup Settings</field>
            <field name="res_model">backup.config.settings</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_backup_config_settings_form"/>
        </record>

        <!-- Menú para acceder a la configuración -->
        <menuitem id="menu_backup_config_settings" name="Backup Settings" parent="base.menu_administration" action="action_backup_config_settings"/>
    </data>
</odoo>
