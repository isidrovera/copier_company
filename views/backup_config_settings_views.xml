<odoo>
    <data>
        <record id="view_backup_config_settings_form" model="ir.ui.view">
            <field name="name">backup.config.settings.form</field>
            <field name="model">backup.config.settings</field>
            <field name="arch" type="xml">
                <form string="Configuración de Backup">
                    <header>
                        <button string="Probar Conexión" type="object" name="test_db_connection" class="oe_highlight"/>
                        <button string="Crear Backup Ahora" type="object" name="create_backup" class="btn-primary"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="db_name"/>
                                <field name="db_user"/>
                                <field name="db_password" password="True"/>
                                <field name="db_host"/>
                                <field name="db_port"/>
                                <field name="pcloud_folder_id"/>
                                <field name="cron_frequency"/>
                               
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_backup_config_settings_tree" model="ir.ui.view">
            <field name="name">backup.config.settings.tree</field>
            <field name="model">backup.config.settings</field>
            <field name="arch" type="xml">
                <tree string="Configuraciones de Backup">
                    <field name="name"/>
                    <field name="db_name"/>
                    <field name="db_user"/>
                    <field name="db_password"/>
                    <field name="db_host"/>
                    <field name="db_port"/>
                    <field name="pcloud_folder_id"/>
                    <field name="cron_frequency"/>
                </tree>
            </field>
        </record>

        <record id="action_backup_config_settings" model="ir.actions.act_window">
            <field name="name">Configuraciones de Backup</field>
            <field name="res_model">backup.config.settings</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_backup_config_settings_tree"/>
        </record>

        <menuitem id="menu_backup_config_settings" name="Configuraciones de Backup" parent="copier_company.menu_root" action="action_backup_config_settings" sequence="50"/>
    </data>
</odoo>
