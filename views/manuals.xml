<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario para Manuales -->
    <record id="view_manual_form" model="ir.ui.view">
        <field name="name">secure_pdf_viewer.manual.form</field>
        <field name="model">secure_pdf_viewer.manual</field>
        <field name="arch" type="xml">
            <form string="Manual PDF">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="category_id"/>
                        <field name="description"/>
                        <field name="pdf_file" widget="binary" filename="pdf_filename"/>
                        <field name="pdf_filename" invisible="1"/>
                        <field name="access_count" readonly="1"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de árbol para Manuales -->
    <record id="view_manual_tree" model="ir.ui.view">
        <field name="name">secure_pdf_viewer.manual.tree</field>
        <field name="model">secure_pdf_viewer.manual</field>
        <field name="arch" type="xml">
            <list string="Manuales PDF">
                <field name="name"/>
                <field name="category_id"/>
                <field name="access_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Vista de búsqueda para Manuales -->
    <record id="view_manual_search" model="ir.ui.view">
        <field name="name">secure_pdf_viewer.manual.search</field>
        <field name="model">secure_pdf_viewer.manual</field>
        <field name="arch" type="xml">
            <search string="Buscar Manuales">
                <field name="name"/>
                <field name="category_id"/>
                <filter string="Activos" name="active" domain="[('active','=',True)]"/>
                
            </search>
        </field>
    </record>


    
</odoo>