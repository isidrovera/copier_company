<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View backup.data View Tree -->
    <record id="view_backup_data_tree" model="ir.ui.view">
        <field name="name">view.backup.data.tree</field>
        <field name="model">backup.data</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- View backup.data form -->
    <record id="view_backup_data_form" model="ir.ui.view">
        <field name="name">view.backup.data.form</field>
        <field name="model">backup.data</field>
        <field name="arch" type="xml">
            <form string="Backup Data">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View backup.data search -->
    <record id="view_backup_data_search" model="ir.ui.view">
        <field name="name">view.backup.data.search</field>
        <field name="model">backup.data</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action backup.data -->
    <record id="action_backup_data" model="ir.actions.act_window">
        <field name="name">Backup Data</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">backup.data</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Backup Data.
            </p>
        </field>
    </record>

</odoo>
