<odoo>
    <data>
        <!-- Definir la vista heredada de formulario -->
        <record id="vista_heredada_form_ticket" model="ir.ui.view">
            <field name="name">Vista Heredada de Formulario Ticket</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
            <field name="arch" type="xml">
                <!-- Agregar o modificar elementos en la vista original -->
                <xpath expr="//field[@name='team_id']" position="after">
                    <field name="producto_id"/>
                    <field name="serie_id"/>
                    <field name="contometro_black"/>
                    <field name="contometro_color"/>
                    <field name="image" 
                    widget="image"
                    />
                    <field name="nombre_reporta"/>
                    <field name="celular_reporta"/>                    
                </xpath>
            </field>
        </record>
        <template id="tickets_followup_inherit" inherit_id="helpdesk.tickets_followup">
        <xpath expr="//div[@id='card_body']/div[last()]" position="after">
            <!-- Informaci贸n de la impresora en un formato de tarjeta moderna -->
            <div class="row mb-4 mt-4">
                <div class="col-lg-12">
                    <h4 class="mb-3"><i class="fa fa-print text-primary"/> Informaci贸n del equipo</h4>
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="row">
                                <!-- Columna izquierda para datos -->
                                <div class="col-lg-8">
                                    <table class="table table-sm">
                                        <tbody>
                                            <tr t-if="ticket.producto_id">
                                                <td class="border-0"><i class="fa fa-tag text-muted"/> <strong>Modelo</strong></td>
                                                <td class="border-0"><span t-field="ticket.producto_id"/></td>
                                            </tr>
                                            <tr t-if="ticket.serie_id">
                                                <td class="border-0"><i class="fa fa-barcode text-muted"/> <strong>Serie</strong></td>
                                                <td class="border-0"><span t-field="ticket.serie_id"/></td>
                                            </tr>
                                            <tr t-if="ticket.contometro_black">
                                                <td class="border-0"><i class="fa fa-tachometer text-dark"/> <strong>Cont贸metro Black</strong></td>
                                                <td class="border-0"><span t-field="ticket.contometro_black"/></td>
                                            </tr>
                                            <tr t-if="ticket.contometro_color">
                                                <td class="border-0"><i class="fa fa-tachometer text-primary"/> <strong>Cont贸metro Color</strong></td>
                                                <td class="border-0"><span t-field="ticket.contometro_color"/></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                
                                <!-- Columna derecha para la imagen -->
                                <div class="col-lg-4" t-if="ticket.image">
                                    <div class="text-center">
                                        <img class="img-fluid img-thumbnail" t-att-src="image_data_uri(ticket.image)" alt="Imagen de error"/>
                                        <p class="text-muted mt-2"><small>Imagen del error reportado</small></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    </data>
</odoo>
