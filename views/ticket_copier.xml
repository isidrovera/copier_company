<odoo>
    <data>
        <!-- Definir la vista heredada de formulario -->
        <record id="vista_heredada_form_ticket" model="ir.ui.view">
            <field name="name">Vista Heredada de Formulario Ticket</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
            <field name="arch" type="xml">
                <!-- Agregar o modificar elementos en la vista original -->
                <xpath expr="//field[@name='team_id']" position="after">
                    <field name="producto_id"/>
                    <field name="serie_id"/>
                    <field name="contometro_black"/>
                    <field name="contometro_color"/>
                    <field name="image" 
                    widget="image"
                    />
                    <field name="nombre_reporta"/>
                    <field name="celular_reporta"/>                    
                </xpath>
            </field>
        </record>
        <template id="tickets_followup_inherit" inherit_id="helpdesk.tickets_followup">
        <xpath expr="//div[@id='card_body']/div[last()]" position="after">
            <div t-if="ticket.producto_id" class="row mb-4">
                <strong class="col-lg-3">Modelo</strong>
                <span class="col-lg-9" t-field="ticket.modelo"/>
            </div>
            <div t-if="ticket.serie_id" class="row mb-4">
                <strong class="col-lg-3">Serie</strong>
                <span class="col-lg-9" t-field="ticket.serie"/>
            </div>
            <div t-if="ticket.contometro_black" class="row mb-4">
                <strong class="col-lg-3">Contómetro Black</strong>
                <span class="col-lg-9" t-field="ticket.contometro_black"/>
            </div>
            <div t-if="ticket.contometro_color" class="row mb-4">
                <strong class="col-lg-3">Contómetro Color</strong>
                <span class="col-lg-9" t-field="ticket.contometro_color"/>
            </div>
        </xpath>
    </template>
    </data>
</odoo>
