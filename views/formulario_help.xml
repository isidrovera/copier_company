<odoo>
    <template id="public_helpdesk_ticket_form" name="Public Helpdesk Ticket Form">
    <t t-call="website.layout">
        <div id="wrap" class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <!-- Encabezado minimalista -->
                    <div class="text-center mb-5">
                        <i class="fa fa-headset mb-3" style="font-size: 3rem; color: #3498db;"></i>
                        <h1 class="h3 mb-2">Servicio de Soporte Técnico</h1>
                        <p class="text-muted">Complete el formulario para reportar un problema con su impresora</p>
                    </div>
                    
                    <!-- Tarjeta para el formulario -->
                    <div class="card border-0 shadow-sm rounded-lg">
                        <div class="card-body p-4">
                            <form action="/public/helpdesk_ticket_submit" method="post" enctype="multipart/form-data" class="needs-validation">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <input type="hidden" name="copier_company_id" t-att-value="copier_company_id"/>
                                
                                <!-- Información del equipo -->
                                <div class="mb-4">
                                    <h5 class="mb-3 text-secondary">
                                        <i class="fa fa-info-circle me-2"></i>Información del equipo
                                    </h5>
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3">
                                                <input type="text" class="form-control" id="partner_name" name="partner_name" t-att-value="partner_name" readonly="readonly"/>
                                                <label for="partner_name">Empresa</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3">
                                                <input type="text" class="form-control" id="sede" name="sede" t-att-value="sede" readonly="readonly"/>
                                                <label for="sede">Sede</label>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3">
                                                <input type="text" class="form-control" id="ubicacion" name="ubicacion" t-att-value="ubicacion" readonly="readonly"/>
                                                <label for="ubicacion">Ubicación</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3">
                                                <input type="text" class="form-control" id="product_name" name="product_name" t-att-value="product_name.name" readonly="readonly"/>
                                                <label for="product_name">Equipo</label>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="serie_id" name="serie_id" t-att-value="serie_id" readonly="readonly"/>
                                        <label for="serie_id">Número de Serie</label>
                                    </div>
                                </div>
                                
                                <!-- Detalles del problema -->
                                <div class="mb-4">
                                    <h5 class="mb-3 text-secondary">
                                        <i class="fa fa-exclamation-triangle me-2"></i>Detalles del problema
                                    </h5>
                                    <div class="form-floating mb-3">
                                        <textarea class="form-control" id="description" name="description" required="1" placeholder="Describe el problema aquí..." style="height: 120px"></textarea>
                                        <label for="description">Descripción del problema</label>
                                        <div class="invalid-feedback">
                                            Por favor ingresa la descripción del problema.
                                        </div>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="image" class="form-label text-muted">
                                            <i class="fa fa-camera me-1"></i>Adjuntar imagen del problema (opcional)
                                        </label>
                                        <div class="input-group">
                                            <input type="file" class="form-control" id="image" name="image" accept="image/*"/>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Información de contacto -->
                                <div class="mb-4">
                                    <h5 class="mb-3 text-secondary">
                                        <i class="fa fa-user me-2"></i>Información de contacto
                                    </h5>
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3">
                                                <input type="text" class="form-control" id="nombre_reporta" name="nombre_reporta" required="1" placeholder="Tu nombre..."/>
                                                <label for="nombre_reporta">Nombre completo</label>
                                                <div class="invalid-feedback">
                                                    Por favor ingresa tu nombre.
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3">
                                                <input type="text" class="form-control" id="celular_reporta" name="celular_reporta" required="1" placeholder="Tu número..."/>
                                                <label for="celular_reporta">Teléfono de contacto</label>
                                                <div class="invalid-feedback">
                                                    Por favor ingresa tu número de celular.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Botón de envío -->
                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-primary py-3">
                                        <i class="fa fa-paper-plane me-2"></i>Enviar reporte
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                    
                    <!-- Nota informativa -->
                    <div class="text-center mt-4">
                        <p class="text-muted small">
                            <i class="fa fa-clock me-1"></i>Nuestro equipo atenderá su solicitud en un plazo máximo de 24 horas.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </t>
</template>


    <template id="helpdesk_ticket_confirmation" name="Helpdesk Ticket Confirmation">
    <t t-call="website.layout">
        <div id="wrap" class="mt-4">
            <div class="container py-5">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="card shadow-sm border-0">
                            <div class="card-body text-center p-5">
                                <!-- Icono de confirmación -->
                                <i class="fa fa-check-circle text-success mb-3" style="font-size: 4rem;"></i>
                                
                                <h2 class="mb-3">Confirmación de Ticket de Ayuda</h2>
                                
                                <div class="d-flex align-items-center justify-content-center mb-4">
                                    <i class="fa fa-ticket-alt me-2 text-muted"></i>
                                    <p class="mb-0">Gracias por enviar su ticket. Nos pondremos en contacto con usted lo antes posible.</p>
                                </div>
                                
                                <div class="d-flex justify-content-center gap-3 mt-4">
                                    <a href="/" class="btn btn-primary px-4">
                                        <i class="fa fa-home me-2"></i>Ir al Inicio
                                    </a>
                                    <a href="/my/tickets" class="btn btn-outline-secondary px-4">
                                        <i class="fa fa-list-alt me-2"></i>Ver Mis Tickets
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <t t-if="whatsapp_script" t-raw="whatsapp_script"/>
    </t>
</template>
</odoo>
