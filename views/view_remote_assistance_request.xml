<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Tree/List -->
    <record id="view_remote_assistance_request_tree" model="ir.ui.view">
        <field name="name">remote.assistance.request.tree</field>
        <field name="model">remote.assistance.request</field>
        <field name="arch" type="xml">
            <list string="Solicitudes de Asistencia Remota" default_order="request_date desc" 
                  decoration-info="state == 'pending'" 
                  decoration-warning="state == 'scheduled'" 
                  decoration-success="state == 'completed'" 
                  decoration-danger="state == 'cancelled'"
                  decoration-muted="state == 'failed'">
                
                <field name="secuencia" string="Número"/>
                <field name="request_date" string="Fecha Solicitud"/>
                <field name="equipment_id" string="Equipo"/>
                <field name="equipment_serie" string="Serie" optional="hide"/>
                <field name="partner_id" string="Cliente"/>
                <field name="contact_name" string="Contacto"/>
                <field name="contact_email" string="Email" optional="hide"/>
                <field name="assistance_type" string="Tipo"/>
                <field name="priority" string="Prioridad" widget="priority"/>
                <field name="technician_id" string="Técnico" optional="show"/>
                <field name="scheduled_datetime" string="Programado Para" optional="hide"/>
                <field name="state" string="Estado" widget="badge" 
                       decoration-info="state == 'pending'" 
                       decoration-warning="state == 'scheduled'" 
                       decoration-primary="state == 'in_progress'"
                       decoration-success="state == 'completed'" 
                       decoration-danger="state == 'cancelled'"
                       decoration-muted="state == 'failed'"/>
                <field name="actual_duration" string="Duración (h)" optional="hide" widget="float_time"/>
                
                <!-- Botones de acción rápida -->
                <button name="action_schedule" type="object" string="Programar" 
                        class="btn-primary" icon="fa-calendar"
                        invisible="state not in ('pending',)"/>
                <button name="action_start_session" type="object" string="Iniciar" 
                        class="btn-success" icon="fa-play"
                        invisible="state not in ('scheduled', 'pending')"/>
                <button name="action_complete" type="object" string="Completar" 
                        class="btn-success" icon="fa-check"
                        invisible="state not in ('in_progress',)"/>
            </list>
        </field>
    </record>

    <!-- Vista Form -->
    <record id="view_remote_assistance_request_form" model="ir.ui.view">
        <field name="name">remote.assistance.request.form</field>
        <field name="model">remote.assistance.request</field>
        <field name="arch" type="xml">
            <form string="Solicitud de Asistencia Remota">
                <header>
                    <!-- Statusbar -->
                    <field name="state" widget="statusbar" 
                           statusbar_visible="pending,scheduled,in_progress,completed"/>
                    
                    <!-- Botones de acción -->
                    <button name="action_schedule" string="Programar" type="object" 
                            class="btn-primary" invisible="state not in ('pending',)"/>
                    <button name="action_start_session" string="Iniciar Sesión" type="object" 
                            class="btn-success" invisible="state not in ('scheduled', 'pending')"/>
                    <button name="action_end_session" string="Finalizar Sesión" type="object" 
                            class="btn-warning" invisible="state != 'in_progress'"/>
                    <button name="action_complete" string="Completar" type="object" 
                            class="btn-success" invisible="state not in ('in_progress',)"/>
                    <button name="action_cancel" string="Cancelar" type="object" 
                            class="btn-secondary" invisible="state in ('completed', 'cancelled')"/>
                    <button name="action_reset_to_pending" string="Regresar a Pendiente" type="object" 
                            class="btn-secondary" invisible="state in ('pending', 'in_progress')"/>
                </header>

                <sheet>
                    <!-- Título y badges -->
                    <div class="oe_title">
                        <h1>
                            <field name="secuencia" readonly="1" class="o_text_overflow"/>
                        </h1>
                        <h2>
                            <field name="display_name" readonly="1" class="o_text_overflow"/>
                        </h2>
                    </div>

                    <!-- Badges de estado y prioridad -->
                    <div class="o_row">
                        <field name="priority" widget="priority"/>
                        <field name="state" widget="badge" 
                               decoration-info="state == 'pending'" 
                               decoration-warning="state == 'scheduled'" 
                               decoration-primary="state == 'in_progress'"
                               decoration-success="state == 'completed'" 
                               decoration-danger="state == 'cancelled'"
                               decoration-muted="state == 'failed'"/>
                    </div>

                    <group>
                        <group string="Información del Equipo">
                            <field name="equipment_id" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="equipment_serie" readonly="1"/>
                            <field name="equipment_location" readonly="1"/>
                        </group>

                        <group string="Información de la Solicitud">
                            <field name="request_date"/>
                            <field name="assistance_type"/>
                            <field name="technician_id" options="{'no_create': True}"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="estimated_cost" widget="monetary"/>
                        </group>
                    </group>

                    <group>
                        <group string="Datos de Contacto">
                            <field name="contact_name"/>
                            <field name="contact_email" widget="email"/>
                            <field name="contact_phone" widget="phone"/>
                        </group>

                        <group string="Programación">
                            <field name="scheduled_datetime" 
                                   invisible="state == 'pending'"/>
                            <field name="estimated_duration" widget="float_time"/>
                            <field name="actual_cost" widget="monetary" 
                                   invisible="state not in ('completed',)"/>
                        </group>
                    </group>

                    <!-- Notebook con pestañas -->
                    <notebook>
                        <!-- Pestaña principal -->
                        <page string="Detalles del Problema" name="problem_details">
                            <group>
                                <field name="problem_description" nolabel="1" 
                                       placeholder="Describa detalladamente el problema que requiere asistencia remota..."/>
                            </group>
                        </page>

                        <!-- Pestaña de acceso remoto -->
                        <page string="Acceso Remoto" name="remote_access">
                            <group>
                                <group string="Datos de Acceso al Equipo">
                                    <field name="anydesk_id" placeholder="ej: 123456789"/>
                                    <field name="username" placeholder="Nombre de usuario del equipo"/>
                                    <field name="user_password" password="True" 
                                           placeholder="Contraseña del usuario"/>
                                </group>

                                <group string="Configuración de Escáner (si aplica)" 
                                       invisible="assistance_type != 'scanner_email'">
                                    <field name="scanner_email" widget="email" 
                                           placeholder="email@scanner.com"/>
                                    <field name="scanner_password" password="True" 
                                           placeholder="Contraseña del email"/>
                                </group>
                            </group>
                        </page>

                        <!-- Pestaña de seguimiento -->
                        <page string="Seguimiento de Sesión" name="session_tracking">
                            <group>
                                <group string="Tiempos de Sesión">
                                    <field name="session_start_time" readonly="1"/>
                                    <field name="session_end_time" readonly="1"/>
                                    <field name="actual_duration" widget="float_time" readonly="1"/>
                                </group>
                            </group>

                            <group string="Notas de la Sesión">
                                <field name="remote_session_notes" nolabel="1" 
                                       placeholder="Detalles de lo realizado durante la sesión remota..."/>
                            </group>

                            <group string="Solución Implementada">
                                <field name="solution_description" nolabel="1" 
                                       placeholder="Descripción de la solución implementada..."/>
                            </group>
                        </page>

                        <!-- Pestaña de notas internas -->
                        <page string="Notas Internas" name="internal_notes" 
                              groups="base.group_user">
                            <group>
                                <field name="internal_notes" nolabel="1" 
                                       placeholder="Notas internas para el equipo técnico..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <chatter />
            </form>
        </field>
    </record>

    <!-- Vista Search -->
    <record id="view_remote_assistance_request_search" model="ir.ui.view">
        <field name="name">remote.assistance.request.search</field>
        <field name="model">remote.assistance.request</field>
        <field name="arch" type="xml">
            <search string="Buscar Solicitudes de Asistencia Remota">
                <!-- Campos de búsqueda -->
                <field name="secuencia" string="Número de Solicitud"/>
                <field name="equipment_id" string="Equipo"/>
                <field name="equipment_serie" string="Serie"/>
                <field name="partner_id" string="Cliente"/>
                <field name="contact_name" string="Contacto"/>
                <field name="contact_email" string="Email"/>
                <field name="technician_id" string="Técnico"/>
                <field name="problem_description" string="Descripción"/>

                <!-- Filtros predefinidos -->
                <filter name="pending" string="Pendientes" 
                        domain="[('state', '=', 'pending')]"/>
                <filter name="scheduled" string="Programados" 
                        domain="[('state', '=', 'scheduled')]"/>
                <filter name="in_progress" string="En Proceso" 
                        domain="[('state', '=', 'in_progress')]"/>
                <filter name="completed" string="Completados" 
                        domain="[('state', '=', 'completed')]"/>

                <separator/>
                
                <filter name="high_priority" string="Alta Prioridad" 
                        domain="[('priority', 'in', ['high', 'urgent'])]"/>
                <filter name="my_requests" string="Mis Solicitudes" 
                        domain="[('technician_id', '=', uid)]"/>

                <separator/>

                <filter name="today" string="Hoy" 
                        domain="[('request_date', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), 
                                ('request_date', '&lt;', datetime.datetime.combine(context_today() + datetime.timedelta(days=1), datetime.time(0,0,0)))]"/>
                <filter name="this_week" string="Esta Semana" 
                        domain="[('request_date', '>=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
                                ('request_date', '&lt;', (context_today() + datetime.timedelta(days=7-context_today().weekday())).strftime('%Y-%m-%d'))]"/>

              
            </search>
        </field>
    </record>

   <!-- Vista Kanban Corregida (Odoo 17/18) -->
<record id="view_remote_assistance_request_kanban" model="ir.ui.view">
    <field name="name">remote.assistance.request.kanban</field>
    <field name="model">remote.assistance.request</field>
    <field name="arch" type="xml">
        <kanban default_group_by="state" class="o_kanban_small_column" create="1" quick_create="0">
            <!-- Declarar campos usados en la card -->
            <field name="id"/>
            <field name="secuencia"/>
            <field name="equipment_id"/>
            <field name="partner_id"/>
            <field name="contact_name"/>
            <field name="assistance_type"/>
            <field name="priority"/>
            <field name="state"/>
            <field name="technician_id"/>
            <field name="request_date"/>
            <field name="scheduled_datetime"/>
            <field name="problem_description"/>
            <field name="display_name"/>

            <templates>
                <t t-name="card">
                    <div class="o_kanban_record o_kanban_global_click">
                        <div class="o_kanban_content">
                            <!-- Header: número y prioridad -->
                            <div class="o_kanban_record_top d-flex justify-content-between align-items-start">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <t t-esc="record.secuencia.value"/>
                                    </strong>
                                    <br/>
                                    <small class="o_kanban_record_subtitle text-muted">
                                        <t t-if="record.equipment_id.value">
                                            <t t-esc="record.equipment_id.value"/>
                                        </t>
                                        <t t-else="">Sin equipo</t>
                                    </small>
                                </div>
                                <div class="o_kanban_record_title">
                                    <field name="priority" widget="priority"/>
                                </div>
                            </div>

                            <!-- Cuerpo: cliente, contacto, tipo -->
                            <div class="o_kanban_record_body">
                                <div class="row g-1">
                                    <div class="col-12">
                                        <i class="fa fa-building-o"/>
                                        <t t-if="record.partner_id.value">
                                            <t t-esc="record.partner_id.value"/>
                                        </t>
                                        <t t-else="">Sin cliente</t>
                                    </div>
                                    <div class="col-12">
                                        <i class="fa fa-user"/>
                                        <t t-esc="record.contact_name.value or '—'"/>
                                    </div>
                                    <div class="col-12">
                                        <i class="fa fa-wrench"/>
                                        <!-- Si assistance_type es selection/m2o, <field/> respeta etiquetas -->
                                        <field name="assistance_type"/>
                                    </div>
                                </div>

                                <!-- Descripción (truncada) -->
                                <t t-if="record.problem_description.value">
                                    <div class="mt-2 text-muted" style="max-height: 40px; overflow: hidden;">
                                        <t t-esc="record.problem_description.value"/>
                                    </div>
                                </t>
                            </div>

                            <!-- Footer: técnico y fechas -->
                            <div class="o_kanban_record_bottom d-flex justify-content-between align-items-start mt-2">
                                <div class="o_kanban_avatar">
                                    <t t-if="record.technician_id.value">
                                        <field name="technician_id" widget="many2one_avatar_user"/>
                                    </t>
                                </div>
                                <div class="text-end">
                                    <!-- request_date como relativo; scheduled como datetime explícito -->
                                    <small class="text-muted d-block">
                                        <field name="request_date" widget="relative"/>
                                    </small>
                                    <t t-if="record.scheduled_datetime.value">
                                        <small class="text-info d-block">
                                            <i class="fa fa-calendar"/> <field name="scheduled_datetime" widget="datetime"/>
                                        </small>
                                    </t>
                                </div>
                            </div>
                        </div>

                        <!-- Menú dropdown -->
                        <div class="oe_kanban_action_dropdown">
                            <div class="dropdown">
                                <a class="dropdown-toggle o-no-caret btn" data-bs-toggle="dropdown" href="#" role="button" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <t t-if="record.state.raw_value == 'pending'">
                                        <a name="action_schedule" type="object" role="menuitem" class="dropdown-item">Programar</a>
                                    </t>
                                    <t t-if="record.state.raw_value == 'pending' or record.state.raw_value == 'scheduled'">
                                        <a name="action_start_session" type="object" role="menuitem" class="dropdown-item">Iniciar Sesión</a>
                                    </t>
                                    <t t-if="record.state.raw_value == 'in_progress'">
                                        <a name="action_complete" type="object" role="menuitem" class="dropdown-item">Completar</a>
                                    </t>
                                    <t t-if="record.state.raw_value != 'completed' and record.state.raw_value != 'cancelled'">
                                        <a name="action_cancel" type="object" role="menuitem" class="dropdown-item">Cancelar</a>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>

   
   
</odoo>